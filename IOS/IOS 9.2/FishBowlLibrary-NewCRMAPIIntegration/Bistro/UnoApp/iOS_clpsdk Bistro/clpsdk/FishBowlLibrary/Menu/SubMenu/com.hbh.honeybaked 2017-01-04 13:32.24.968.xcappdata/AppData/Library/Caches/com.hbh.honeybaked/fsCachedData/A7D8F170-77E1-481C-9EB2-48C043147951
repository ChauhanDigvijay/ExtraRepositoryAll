    <script type="text/javascript">

        $(document).bind('mobileinit', function () {

            // disable autoInit so we can navigate to bookmarked hash url    
            $.mobile.autoInitializePage = false;

            // let PathJS handle navigation
            $.mobile.ajaxEnabled = false;
            $.mobile.hashListeningEnabled = false;
            $.mobile.pushStateEnabled = false;

            $(document).bind('pagebeforechange', function (e, data) {
                var to = data.toPage;
                if (typeof to === 'string') {
                    var u = $.mobile.path.parseUrl(to);
                    to = u.hash || '#' + u.pathname;
                    // manually set hash so PathJS will be triggered
                    location.hash = to;
                    // prevent JQM from handling navigation
                    e.preventDefault();
                }
            });

        });

        $(document).ready(function () {
            var anchor_id = window.location.hash;
            if (anchor_id != "") {
                var new_position = $(anchor_id).offset();
                setTimeout(function () { window.scrollTo(new_position.left, new_position.top) }, 1500);
            }
        })

        $(function () {
            // initialize page
            $.mobile.initializePage();
            // startup PathJS
            //try { Path.listen(); } catch (ex) {}
        });

    </script>
