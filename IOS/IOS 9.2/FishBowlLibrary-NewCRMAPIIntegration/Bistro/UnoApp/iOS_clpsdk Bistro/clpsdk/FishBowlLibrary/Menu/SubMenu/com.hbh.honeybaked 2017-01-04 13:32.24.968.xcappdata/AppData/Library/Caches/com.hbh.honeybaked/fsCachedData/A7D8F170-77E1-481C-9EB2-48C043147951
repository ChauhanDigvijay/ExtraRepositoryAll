    <script type="text/javascript">
        /* Show/Hide Send A Gift */
        $('.toggle').click(function (event) {
            event.preventDefault();
            var target = $(this).attr('href');
            $(target).toggleClass('invisible show');
        });


        /* Submit Form */
        $(".hbh-select-state").submit(function (event) {
            if ($('#state').val() == '') {
                event.preventDefault();
            }
            else if ($('#state').val() == 'CA') {
                location = 'http://ca.honeybaked.com/';
            }
            else {
                location = 'http://www.honeybakedonline.com';
            }
            event.preventDefault();
        });

        /* Customer Service Modal */


  </script>

