<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/rewardsLayer"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/llayout_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <include
            android:id="@+id/tool_bar"
            layout="@layout/toolbar_sms"
            ></include>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tool_bar">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/offerdate"
                    style="@style/text.19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/offertitle"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="Expire in 0 days"
                    android:textColor="@color/fbheadercolor"
                    android:textStyle="bold"
                    />


                <TextView
                    android:id="@+id/offerdesc"
                    style="@style/text.15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="false"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="shshsh"

                    android:textColor="@color/dark_gray" />
                <TextView
                    android:id="@+id/offertitle"
                    style="@style/text.19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:text="TITles"
                    android:visibility="gone"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:singleLine="false"
                    android:textColor="@color/black"
                    android:textStyle="bold" />


                <LinearLayout
                    android:id="@+id/offerstore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp" >

                    <TextView
                        android:id="@+id/text_appstore"
                        style="@style/text.19"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Application Store:"
                        android:textColor="@color/fbheadercolor"
                        android:textStyle="bold"

                        />

                    <TextView
                        android:id="@+id/offer_location_name"
                        style="@style/text.11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:singleLine="false"
                        android:text=""
                        android:textColor="@color/darker_gray"

                        />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
