<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="10"
            android:orientation="horizontal"
            android:weightSum="100" >

            <include
                android:id="@+id/tool_bar"
                layout="@layout/toolbar_reward_activity"
                ></include>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="90"
            android:orientation="horizontal"
            android:weightSum="100" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="36"
                android:weightSum="100" >

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/left_side_image_url"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="100"
                    android:scaleType="fitXY"
                  />
            </LinearLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="64"
               >



                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/right_side_image_url"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"


                    android:scaleType="fitXY"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00ffffff"
                    android:orientation="vertical"

                    android:weightSum="100" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="90"
                        android:orientation="horizontal"
                        android:weightSum="100" >

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="0dp"
                            android:layout_weight="20"
                            android:background="#00ffffff" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="60"
                            android:background="#00ffffff"
                            android:orientation="vertical"
                            android:weightSum="100" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="60"
                                android:background="#00ffffff"
                                android:gravity="center"
                                android:orientation="vertical" >

                                <FrameLayout
                                    android:id="@+id/seekArcContainer"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="40dp">


                                    <com.fishbowl.LoyaltyTabletApp.Utils.SeekArc
                                        android:id="@+id/seekArc"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:padding="12dp"
                                        app:arcColor="@color/black"
                                        app:progress="6"
                                        app:progressColor="@color/fbheadercolor"
                                        android:paddingTop="5dp"
                                        app:progressWidth="10dp" />
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="horizontal"
                                        android:gravity="center"
                                        android:weightSum="90"
                                        >
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="30"/>
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:layout_weight="30"
                                        android:orientation="vertical"

                                        >
                                        <TextView
                                            android:id="@+id/seekArcProgress"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="0"
                                            android:textColor="@color/fbheadercolor"
                                            android:textSize="50sp"
                                            android:textStyle="bold"
                                            android:padding="0dp"
                                            android:layout_margin="0dp"/>
                                        <TextView
                                            android:id="@+id/rewards"
                                            android:layout_margin="0dp"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@id/seekArcProgress"
                                            android:textSize="18sp"
                                            android:text="Rewards"
                                            android:textColor="@color/black"
                                            android:paddingBottom="20dp"/>

                                    </LinearLayout>
                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="30"/>
                                    </LinearLayout>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                      >

                                        <TextView
                                            android:id="@+id/textStart"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentBottom="true"
                                            android:text="0"
                                            android:textColor="@color/black"
                                            android:textAppearance="?android:attr/textAppearanceSmall"
                                            android:paddingBottom="18dp"
                                            android:paddingLeft="40dp"/>


                                        <TextView
                                            android:id="@+id/textEnd"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentBottom="true"
                                            android:layout_alignParentRight="true"
                                            android:gravity="bottom"
                                            android:text="35"
                                            android:textColor="@color/black"
                                            android:textAppearance="?android:attr/textAppearanceSmall"
                                            android:paddingRight="40dp"
                                            android:paddingBottom="18dp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentBottom="true"
                                            android:layout_centerHorizontal="true"
                                            android:textColor="@color/dark_gray"
                                            android:textSize="12sp"
                                            android:text="Point untill next rewards" />

                                    </RelativeLayout>
                                </FrameLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="40"
                                android:background="#00ffffff"
                                android:orientation="vertical"
                                android:paddingTop="15dp">

                                <Button
                                    android:id="@+id/button1"
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="@color/fbheadercolor"
                                    android:textColor="@color/White"
                                    android:text="REDEEM YOUR REWARDS" />

                                <Button
                                    android:id="@+id/button2"
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="@color/fbheadercolor"
                                    android:textColor="@color/White"
                                    android:text="SPECIAL OFFERS FOR YOU" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="0dp"
                            android:layout_weight="20"
                            android:background="#00ffffff" />
                    </LinearLayout>

                    <com.android.volley.toolbox.NetworkImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="10"
                        android:visibility="gone"
                        android:id="@+id/footer_image_url"
                        android:orientation="horizontal" />

                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>