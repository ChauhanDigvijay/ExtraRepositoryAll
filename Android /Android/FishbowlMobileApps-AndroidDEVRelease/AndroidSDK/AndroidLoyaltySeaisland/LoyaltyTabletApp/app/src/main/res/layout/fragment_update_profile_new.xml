<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/header_pading">

        <Button

            android:id="@+id/bt_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:paddingLeft="@dimen/button_padding"
            android:paddingRight="@dimen/button_padding"
            android:text="Edit"
            android:background="@color/redLoyalty"
            android:textColor="@color/white"/>
        <Button
            android:visibility="gone"
            android:id="@+id/bt_save"
            android:paddingLeft="@dimen/button_padding"
            android:paddingRight="@dimen/button_padding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="Save"
            android:background="@color/redLoyalty"
            android:textColor="@color/white"/>
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/backre"
            android:layout_marginLeft="30dp"
            android:visibility="gone"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/registxt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="My Profile"
            android:textColor="@color/orignalText"
            android:textSize="@dimen/contact_text"/>

        <TextView
            android:id="@+id/registxt1_name"
            style="@style/text.15"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/registxt_name"
            android:layout_marginTop="7dp"

            android:visibility="gone"
            android:text="Become a fishbowl member today!"

            />
    </RelativeLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/strokeBorder"
  />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
       >


        <LinearLayout
            android:id="@+id/linearregistration"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
           >
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_gravity="top"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="@dimen/header_pading"
                            android:background="@color/gray"
                            android:visibility="gone">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Personal Details"
                                android:textSize="@dimen/header_text"
                                android:layout_centerVertical="true"
                                android:textColor="@color/orignalText"
                                android:layout_alignParentLeft="true"
                                />

                        </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/scrollLinearLayout"
        android:layout_marginBottom="25dp"></LinearLayout>



                        <TextView
                            android:id="@+id/text_change_pass"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/layout_margin_top"
                            android:layout_marginLeft="10dp"
                            android:text="Change Password"
                            android:textSize="12sp"
                            android:visibility="gone"
                            android:layout_marginBottom="25dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:visibility="gone">
                        <Button
                            android:id="@+id/registration_start_okbutton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/allside_round_cornner_buttton"
                            android:gravity="center"
                            android:onClick="createMember"
                            android:textSize="20dp"
                            android:paddingLeft="50dp"
                            android:paddingRight="40dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="Update Profile"
                            android:textColor="@color/White" />
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>