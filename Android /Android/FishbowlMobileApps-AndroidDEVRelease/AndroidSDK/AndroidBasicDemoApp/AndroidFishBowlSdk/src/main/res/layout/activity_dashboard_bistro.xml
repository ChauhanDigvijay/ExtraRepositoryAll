<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="fill_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/tool_bar"
            layout="@layout/toolbar_dashboard_bistro"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:visibility="gone"
                android:src="@drawable/bgimage"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="38"
                    android:orientation="vertical"
                    android:weightSum="50">

                    <RelativeLayout
                        android:id="@+id/rellayout"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="46">

                        <android.support.v4.view.ViewPager

                            android:id="@+id/pager"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_below="@id/rellayout"
                        android:layout_weight="4">

                        <com.viewpagerindicator.CirclePageIndicator
                            android:id="@+id/indicator"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:padding="8dp"


/>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="50"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:weightSum="2"
                        android:gravity="center">

                        <RelativeLayout
                            android:id="@+id/loyalty_layout"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/shadow_border"
                            >

                            <FrameLayout
                                android:id="@+id/imagedash"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="70dp"
                                    android:id="@+id/menu_image"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:src="@drawable/reward"

                                    android:layout_centerHorizontal="true"
                                    />

                                <TextView
                                    android:id="@+id/txt_reward"
                                  android:textSize="10sp"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:padding="8dp"
                                    android:text=""
                                    android:layout_gravity="right"
                                    android:layout_marginRight="5dp"
                                    android:gravity="center"
                                    android:background="@drawable/two_side_red_background"
                                    android:textColor="@color/white"

                                    android:textColorHint="@color/black" />
                            </FrameLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="MY LOYALTY"
                                android:layout_below="@id/imagedash"
                                android:textSize="10dp"
                                android:layout_centerHorizontal="true"

                                android:id="@+id/textView4" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/menu_layout"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"

                            android:weightSum="2"
                            android:gravity="center"
                            android:layout_marginRight="10dp"

                            android:layout_marginLeft="10dp"
                            android:background="@drawable/shadow_border">
                            <LinearLayout
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_alignParentRight="true"
                                android:visibility="gone"></LinearLayout>

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="70dp"
                                android:layout_centerHorizontal="true"
                                android:id="@+id/loyalty_image"
                                android:src="@drawable/menuicon"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/loyalty_image"
                                android:layout_centerHorizontal="true"
                                android:text="MENU"
                                android:textSize="10dp"/>
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:weightSum="2">

                        <RelativeLayout
                            android:id="@+id/location_layout"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"



                            android:layout_marginLeft="10dp"

                            android:background="@drawable/shadow_border">
                            <LinearLayout
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_alignParentRight="true"
                                android:visibility="gone"></LinearLayout>

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="70dp"
                                android:layout_centerHorizontal="true"
                                android:id="@+id/location_image"
                                android:src="@drawable/maplocation"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/location_image"
                                android:layout_centerHorizontal="true"
                                android:text="LOCATION"
                                android:textSize="10dp"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/lrewardsoffer_layout"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"

                            android:background="@drawable/shadow_border"
                            android:layout_marginRight="10dp"

                            android:layout_marginLeft="10dp"
                            android:weightSum="2">
                            <FrameLayout
                                android:id="@+id/imagegift"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">


                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="70dp"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_centerHorizontal="true"
                                android:id="@+id/rewardsoffer_image"
                                android:src="@drawable/gift"
                                />

                                <TextView
                                    android:id="@+id/txt_gift"
                                    android:textSize="10sp"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:padding="8dp"
                                    android:text=""
                                    android:layout_gravity="right"
                                    android:layout_marginRight="5dp"
                                    android:gravity="center"
                                    android:background="@drawable/two_side_red_background"
                                    android:textColor="@color/white"

                                    android:textColorHint="@color/black" />
                            </FrameLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/imagegift"
                                android:layout_centerHorizontal="true"
                                android:text="REWARDS AND OFFER"
                                android:textSize="10dp"/>
                        </RelativeLayout>
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="12"
                    android:gravity="bottom">

                    <com.BasicApp.Activites.Generic.BottomToolbarActivity
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:id="@+id/bottom_toolbar"
                        />
                </LinearLayout>


            </LinearLayout>


        </RelativeLayout>


    </LinearLayout>
    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@color/White"
        android:choiceMode="singleChoice"
        android:dividerHeight="0dp"
        android:divider="@color/white"/>


</android.support.v4.widget.DrawerLayout>