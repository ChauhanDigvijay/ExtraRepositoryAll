<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/backre"
            android:layout_marginLeft="30dp"
            android:visibility="gone"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/registxt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Sign up and get VIP rewards  "
            android:textColor="@color/redLoyalty"
            android:textSize="@dimen/fragment_signup_text_size"
            />

        <TextView
            android:id="@+id/registxt1_name"

            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/registxt_name"
            android:layout_marginTop="4dp"
            android:visibility="gone"
            android:text="Become a fishbowl member today!"
            android:textSize="@dimen/fragment_signup_small_text_size"
            android:textColor="@color/textHint"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/one"
        android:orientation="horizontal"
        android:weightSum="100"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"></LinearLayout>

        <ScrollView
            android:id="@+id/linearregistration"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="90"
            android:padding="5dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/scrollViewLinearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center|center_vertical">

                        <CheckBox
                            android:id="@+id/checkbox_terms"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@drawable/checkbox_selector" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" I agree to the"
                            android:textColor="@color/textHint"
                            android:textSize="@dimen/fragment_terms_text_size" />

                        <TextView
                            android:id="@+id/terms_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="TERMS &amp; CONDITIONS"
                            android:textColor="@color/redLoyalty"
                            android:textSize="@dimen/fragment_terms_text_size" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="and"
                            android:textColor="@color/textHint"
                            android:textSize="@dimen/fragment_terms_text_size" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="15sp"
                            android:background="@color/Gray"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/privacy_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="PRIVACY POLICY"
                            android:textColor="@color/redLoyalty"
                            android:textSize="@dimen/fragment_terms_text_size" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/layout_margin_top"
                    android:gravity="center">

                    <Button
                        android:id="@+id/registration_start_okbutton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/allside_round_cornner_buttton"
                        android:gravity="center"
                        android:onClick="createMember"
                        android:paddingBottom="5dp"

                        android:paddingTop="5dp"
                        android:text="Get Started"
                        android:textColor="@color/White"
                        android:textSize="@dimen/button_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="13dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Already have an account "
                        android:textColor="@color/textHint"
                        android:textSize="@dimen/fragment_terms_text_size" />

                    <TextView
                        android:id="@+id/signin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sign In"
                        android:textColor="@color/redLoyalty"
                        android:textSize="@dimen/fragment_terms_text_size" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"></LinearLayout>
    </LinearLayout>
</RelativeLayout>