<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentInsetStart="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/toolbar_shadow"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@drawable/toolbar_dropshadow"
            android:layout_alignParentBottom="true"/>


        <ImageView
            android:id="@+id/backbutton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:gravity="center"

            android:padding="8dp"
            android:src="@drawable/abback" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:background="@null"
            android:gravity="center"

            android:visibility="invisible" />

        <TextView
            android:id="@+id/title_textf"
            style="@style/text.13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/title_text"
            android:layout_alignBottom="@+id/title_text"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/menu_navigator"
            android:text="CONTINUE"
            android:padding="8dp"
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/dark_gray"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/title_text"
            style="@style/text.17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="MY ORDER"
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/dark_gray"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/title_textb"
            style="@style/text.13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="ADD MORE"
            android:padding="8dp"
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/dark_gray"
            android:textStyle="bold"
            android:layout_alignBaseline="@+id/title_text"
            android:layout_alignBottom="@+id/title_text"
            android:layout_toRightOf="@+id/backbutton"
            android:layout_toEndOf="@+id/backbutton" />
        <ImageView
            android:id="@+id/menu_navigator"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="8dp"
            android:src="@drawable/menu" />

    </RelativeLayout>

</android.support.v7.widget.Toolbar>
