<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="fill_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:orientation="vertical">


<include layout="@layout/toolbar_contact_us"
    android:id="@+id/tool_bar"
    />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="100"
        android:padding="10dp"
        >



        <LinearLayout
            android:id="@+id/linearregistration"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:orientation="vertical"

            android:paddingLeft="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:text="Contact us about anything related to our \ncountry or services.We'll do our best to get\nback to you as soon as possible"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="7dp"
                      >
                        <TextView
                            android:layout_gravity="left|center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="8dp"
                            android:text="MESSAGE SUBJECT"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">
                        <EditText
                            android:id="@+id/et_subject"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Write your subject here"
                            android:gravity="left|center_vertical"
                            android:textColor="@color/black"
                            android:padding="8dp"
                            android:textSize="14dp"
                            android:maxLines="1"
                            android:background="@null"
                            android:textColorHint="@color/DimGray"
                            />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="7dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Type of Message"
                            android:textSize="8dp"
                            android:layout_gravity="left|center_vertical"
                            android:textColor="@color/black"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        >
                        <Spinner
                            android:layout_gravity="center_vertical"
                            android:id="@+id/spinner1"
                            android:layout_width="match_parent"

                            android:textSize="14dp"
                            android:layout_height="wrap_content"
                            android:prompt="@string/selectOne"
                            android:background="@drawable/spinner_bg"
                            />

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="7dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Area"
                            android:textSize="8dp"
                            android:textColor="@color/black"
                         />
                        </LinearLayout>
                        <Spinner
                            android:layout_gravity="center_vertical"
                            android:id="@+id/spinner2"
                            android:textSize="14dp"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"

                            android:background="@drawable/spinner_bg"
                            />
                    </LinearLayout>


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="7dp">
                    <TextView
                        android:layout_gravity="left|top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:text="Message Subject"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        >
                        <EditText
                            android:id="@+id/et_message"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Please write  your meaasge here"
                            android:gravity="left|top"
                            android:padding="7dp"
                            android:textSize="14dp"
                            android:textColor="@color/black"
                            android:background="@drawable/layout_border_only"
                            android:textColorHint="@color/DimGray"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                         android:layout_marginTop="20dp"
                        android:padding="5dp"
                        android:gravity="center"
                        >
                        <Button
                            android:id="@+id/btn_reset"
                            android:layout_marginRight="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/Gray"
                            android:text="Reset"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            />
                        <Button
                            android:id="@+id/btn_submit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/redsurend"
                            android:text="Submit"
                            android:textColor="@color/white"

                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>



        </LinearLayout>


    </LinearLayout>
    </ScrollView>
</LinearLayout>
    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@color/White"
        android:choiceMode="singleChoice"
        android:dividerHeight="0dp"
        android:divider="@color/white"/>


</android.support.v4.widget.DrawerLayout>
