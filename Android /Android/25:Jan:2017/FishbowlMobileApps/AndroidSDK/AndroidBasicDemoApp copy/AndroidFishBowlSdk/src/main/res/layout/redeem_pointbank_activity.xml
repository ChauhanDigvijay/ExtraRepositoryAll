<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rewardsLayer"
    android:layout_centerInParent="true"
    >
    <include
        android:id="@+id/tool_bar"
        layout="@layout/toolbar_reward" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tool_bar"
        android:layout_weight="100"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/round_cornner_stroke"
     >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:paddingBottom="@dimen/lc_view_margin_bottom">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/Gray"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="View Offer"
                    android:textColor="@color/orignalText"
                    android:layout_centerInParent="true"
                    />


                <ImageView
                    android:id="@+id/finish"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/cross"
                    android:visibility="gone"
                    />
                <LinearLayout
                    android:id="@+id/sendPrint"
                    android:layout_toLeftOf="@+id/bt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:padding="6dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/allside_round_cornner_buttton"
                    >

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/print"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Print"
                        android:textColor="@color/white"
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/contact_restText"
                        android:layout_marginLeft="7dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:padding="6dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/allside_round_cornner_buttton"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:gravity="center">
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/sendemail"
                            android:layout_gravity="center_vertical"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:textColor="@color/white"
                            android:textSize="@dimen/contact_restText"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/textView4" />
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout></RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="90"
            android:orientation="vertical"

            android:weightSum="10">



            <LinearLayout
                android:id="@+id/llayoutmain_one"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:background="@drawable/square_cornner_stroke"
                android:weightSum="10"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:id="@+id/llayout_one"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    >
                    <WebView
                        android:id="@+id/webview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
