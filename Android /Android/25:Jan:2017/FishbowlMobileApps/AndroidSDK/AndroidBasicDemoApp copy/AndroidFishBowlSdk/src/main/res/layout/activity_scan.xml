<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"

    >


    <include
        android:id="@+id/tool_bar"
        layout="@layout/toolbar_scanactivity" />

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_below="@id/tool_bar">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/loyaltyname"
                style="@style/text.19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="xyz abc"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:singleLine="false"
                android:textColor="@color/red_color"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/imageView4"
                    android:src="@drawable/phonegrey"
                    android:visibility="gone"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:id="@+id/loyaltyno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="888-888-8888"/>
            </LinearLayout>

            <TextView
                android:id="@+id/offerdesc"
                style="@style/text.15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="false"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:text=""
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:textColor="@color/black" />




            <LinearLayout
                android:id="@+id/offerstore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:paddingBottom="2dp"
                android:paddingTop="2dp" >

                <TextView
                    android:id="@+id/text_appstore"
                    style="@style/text.13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="Application Store:"
                    android:textColor="@color/red_color"
                    android:textStyle="bold"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/offer_location_name"
                    style="@style/text.11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:singleLine="false"
                    android:text=""
                    android:textColor="@color/darker_gray"

                    />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/offer_barcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"

                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center"
                android:paddingBottom="4dp"
                android:paddingTop="4dp" >

                <ImageView
                    android:id="@+id/bar_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/offerstore"
                    android:focusable="false"

                    android:gravity="center"
                    android:src="@drawable/qrcode"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    />
                <TextView
                    android:id="@+id/offer_promo"
                    style="@style/text.13.prompt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text=""
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:paddingTop="6dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/loyaltyno1"
                style="@style/text.15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/offertitle"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:text="8888888"
                android:textColor="@color/black"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/bottomtitle"
                style="@style/text.19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="Scan this barcode in-code store \r\ to receiver your Reward"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:singleLine="false"
                android:layout_marginTop="20dp"
                android:textColor="@color/red_color"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/img_Back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bgimage"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>