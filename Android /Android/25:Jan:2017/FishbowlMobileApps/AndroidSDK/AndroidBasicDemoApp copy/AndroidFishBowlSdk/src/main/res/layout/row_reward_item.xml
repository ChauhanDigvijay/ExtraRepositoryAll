<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:id="@+id/userSetting"
    android:weightSum="100"
    >

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="35">
        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/img_one"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:src="@drawable/profilepic"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="65"

        android:padding="15dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tv_name"
                style="@style/text.16.prompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DIGIVJA"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:layout_below="@id/tv_name"
                android:id="@+id/tv_expiry"
                style="@style/text.14.prompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:text="DJ"

                android:textColor="@color/black"

                />
            <TextView
                android:layout_below="@id/tv_expiry"
                android:id="@+id/tv_name1"
                style="@style/text.14"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/black"

                />
            <TextView
                android:layout_below="@id/tv_name1"
                android:id="@+id/tv_other"
                style="@style/text.14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/black"

                /></RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <ImageView
                android:id="@+id/userSetting2"
                android:layout_width="20dp"
                android:layout_height="50dp"
                android:visibility="gone"
                android:src="@drawable/forward_arrow"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>


    </RelativeLayout>
</LinearLayout>

