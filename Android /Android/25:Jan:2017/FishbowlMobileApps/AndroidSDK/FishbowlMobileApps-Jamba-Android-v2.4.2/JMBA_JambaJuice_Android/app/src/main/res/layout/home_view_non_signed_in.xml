<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:id="@+id/contentView1"
    android:layout_height="fill_parent"
    android:background="@drawable/dashboard_bg"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@android:color/transparent" >

        <LinearLayout
            android:id="@+id/linear11"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"

            android:minHeight="250dp"
            android:orientation="vertical"
            android:weightSum="100" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="21"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:src="@drawable/jamba_juice_logo"
                    android:id="@+id/jambaLogo"
                    android:contentDescription="@string/app_name"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:adjustViewBounds="true"
                    android:gravity="center"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="18"
                android:gravity="center"
                android:orientation="vertical"
                >

                <com.olo.jambajuice.Views.Generic.NexaRustSansBlackTextView

                    style="@style/text.20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/medium_green"
                    android:textSize="@dimen/text_size_welcome_font"

                    android:id="@+id/welcomeText"
                    android:text="WELCOME"
                    android:textAlignment="center"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="false"
                    style="@style/text.14"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="Signing up lets you skip the line and become a Jamba Insider, receiving $3 off your first order!"
                    android:id="@+id/lbl_signingup"
                    android:gravity="center"
                    android:textColor="@color/very_dark_green"
                    android:layout_below="@+id/welcomeText"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="29"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/jamba_juice_banner"
                    android:id="@+id/jambaTumbler"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/lbl_signingup" />

                />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearregistration"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="22"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:text="Menu"
                    android:textSize="@dimen/text_size_large"
                    android:textAllCaps="false"
                    android:id="@+id/ll_menu"
                    android:textColor="@color/red_color"
                    android:background="@android:color/white"
                    android:layout_below="@+id/jambaTumbler"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="false"
                    android:paddingBottom="5dp"
                    android:gravity="center" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Order Now"
                        android:id="@+id/lbl_menu"
                        android:gravity="top"
                        android:layout_gravity="center|top"
                        android:textColor="@color/red_color"
                        android:textSize="@dimen/text_size_xlarge" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Delicious smoothies, juices, bowls &amp; other good stuff"
                        android:id="@+id/lbl_browse"
                        android:textSize="11sp"
                        android:textColor="@color/brown_color"
                        android:gravity="center"
                        android:layout_gravity="center"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:background="@color/red_color_1"
                        android:text="Log In"

                        android:textSize="@dimen/text_size_xlarge"
                        android:id="@+id/btn_signIn"
                        android:textAllCaps="false"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="15dp"
                        android:layout_below="@+id/ll_menu"
                        android:gravity="center" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearregistration1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="10"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:id="@+id/secondaryFieldsLinearLayoutss"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:singleLine="true" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Don't have an account?"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="2dp"
                        android:textSize="@dimen/text_size_medium"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="@color/text_normal"
                        android:id="@+id/donthaveaccountText"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="0dp" />

                    <Button
                        android:layout_width="60dp"
                        android:layout_height="25dp"
                        android:text="Sign Up"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="2dp"
                        android:id="@+id/btn_signup"
                        android:textColor="@color/red_color"
                        android:textSize="12sp"
                        android:textAllCaps="false"
                        android:background="@android:color/transparent"
                        android:layout_alignParentBottom="true"
                        android:layout_toRightOf="@+id/donthaveaccountText" />
                </LinearLayout>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="Terms &amp; Feedback"
                    android:layout_marginBottom="3dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:id="@+id/termsAndPrivacy"
                    android:textColor="@color/red_color"
                    android:textSize="10sp"
                    android:textAllCaps="false"
                    android:background="@android:color/transparent"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>