<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.olo.jambajuice.Activites.NonGeneric.OrderAhead.PaymentInfo.AddCardActivity">

    <LinearLayout
        android:layout_width="0px"
        android:layout_height="0px"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tv_apply"
        android:layout_below="@+id/toolbar"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/streetAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:hint="Street Address"
                    android:maxLength="128"
                    android:maxLines="1"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:textSize="@dimen/text_size_medium" />
            </RelativeLayout>

            <EditText
                android:id="@+id/buildingName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="Building Name/Suite/Apt (Optional)"
                android:maxLength="32"
                android:maxLines="1"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:textSize="@dimen/text_size_medium" />

            <EditText
                android:id="@+id/city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="City"
                android:maxLength="32"
                android:maxLines="1"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:textSize="@dimen/text_size_medium" />

            <EditText
                android:id="@+id/zip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="Zip Code"
                android:inputType="number"
                android:maxLength="7"
                android:maxLines="1"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:textSize="@dimen/text_size_medium" />

            <EditText
                android:id="@+id/contactNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="Contact Number"
                android:inputType="number"
                android:maxLength="10"
                android:maxLines="1"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:textSize="@dimen/text_size_medium" />

            <EditText
                android:id="@+id/other"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="Other Instructions ( cross street, buzzer, #, ... )"
                android:maxLength="32"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:textSize="@dimen/text_size_medium" />

        </LinearLayout>

    </ScrollView>

    <com.olo.jambajuice.Views.Generic.SemiBoldButton
        android:id="@+id/tv_apply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_weight="2"
        android:background="@color/red_color_1"
        android:gravity="center"
        android:text="Set As Delivery Address"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_large" />

    <include
        android:id="@+id/screenDisableView"
        layout="@layout/disable_view" />

</RelativeLayout>
