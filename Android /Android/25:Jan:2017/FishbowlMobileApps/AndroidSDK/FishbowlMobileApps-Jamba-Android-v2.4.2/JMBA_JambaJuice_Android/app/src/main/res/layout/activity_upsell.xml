<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.olo.jambajuice.Activites.NonGeneric.OrderAhead.Basket.UpsellActivity">

    <RelativeLayout
        android:id="@+id/toolbarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/bodyLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomLayout"
        android:layout_below="@+id/toolbarLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/imageLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.olo.jambajuice.Views.Generic.CustomRelativeLayout xmlns:attr="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/product_detail_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    attr:layoutAspectRatio="@dimen/recentOrderProductAspectRatio">

                    <com.olo.jambajuice.Views.Generic.CustomViewPager xmlns:attr="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/upsellAdsPager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/product_placeholder"
                        android:focusableInTouchMode="true" />
                </com.olo.jambajuice.Views.Generic.CustomRelativeLayout>

            </RelativeLayout>

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/gray" />

            <RelativeLayout
                android:id="@+id/productListLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/upSellProductsListView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <com.olo.jambajuice.Views.Generic.SemiBoldButton
            android:id="@+id/addToBasket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:background="@color/red_color_1"
            android:clickable="false"
            android:focusableInTouchMode="false"
            android:text="Add To Basket"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_large" />

        <com.olo.jambajuice.Views.Generic.SemiBoldButton
            android:id="@+id/noThanks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:background="@android:color/white"
            android:clickable="false"
            android:focusableInTouchMode="false"
            android:text="No Thanks"
            android:textAllCaps="false"
            android:textColor="@color/red_color_1"
            android:textSize="@dimen/text_size_large" />
    </LinearLayout>

    <include
        android:id="@+id/screenDisableView"
        layout="@layout/disable_view" />
</RelativeLayout>
