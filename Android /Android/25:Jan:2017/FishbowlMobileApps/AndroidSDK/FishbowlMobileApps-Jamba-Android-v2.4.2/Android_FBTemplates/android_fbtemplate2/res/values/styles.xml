<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    
        
    <!--Dj Style  -->
        <style name="text">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
     
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="text.11">
        <item name="android:textSize">11sp</item>
    </style>
    
    <style name="text.12">
        <item name="android:textSize">12sp</item>
    </style>
    
    <style name="text.13">
        <item name="android:textSize">13sp</item>
    </style>
    
    <style name="text.14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text.15">
        <item name="android:textSize">15sp</item>
    </style>
    
    <style name="text.16">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text.17">
        <item name="android:textSize">17sp</item>
    </style>
    
       <style name="text.18">
        <item name="android:textSize">18sp</item>
    </style>
    
       <style name="text.19">
        <item name="android:textSize">19sp</item>
    </style>
    
       
        <style name="text.20">
        <item name="android:textSize">20sp</item>
    </style>
    
        <style name="text.25">
        <item name="android:textSize">25sp</item>
    </style>
    <style name="text.14.prompt">
        <item name="android:singleLine">false</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="text.12.prompt">
        <item name="android:singleLine">false</item>
        <item name="android:textSize">12sp</item>
    </style>
    
     <style name="text.19.prompt">
        <item name="android:singleLine">true</item>
        <item name="android:textSize">10sp</item>
    </style>
      <style name="text.18.prompt">
        <item name="android:singleLine">false</item>
        <item name="android:textSize">12sp</item>
    </style>  

    <style name="text.17.prompt">
        <item name="android:singleLine">false</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="nametext" parent="text.14">
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="nametext1" parent="text.14">
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    <style name="textform" parent="text.14">
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_width">56dp</item>
    </style>

    <style name="textform.64">
        <item name="android:layout_width">64dp</item>
    </style>

    <style name="textform.88">
        <item name="android:layout_width">88dp</item>
    </style>

    <style name="editform" parent="text.14">
        <item name="android:padding">8dp</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="editform.gray" parent="editform">
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="divider" parent="text">
        <item name="android:background">@color/half_black</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="dialog_no_title" parent="android:Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="dialog_no_title.fill">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">fill_parent</item>
    </style>

    <style name="DashboardButton">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:drawablePadding">7dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/dashboard_btn_textColor</item>
        <item name="android:background">@null</item>
    </style>

    <style name="styleName">
        <item name="android:layout_marginLeft">250dp</item>
        <item name="android:paddingLeft">28dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textColor">@color/list_text</item>
    </style>
    
    
    <style name="CustomDialogTheme" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowTitleStyle">@android:color/white</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>
    
    <!--  Dj Style end-->
</resources>
