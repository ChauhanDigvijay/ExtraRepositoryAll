<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/right_side_image_url"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:visibility="gone"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00ffffff"
        android:orientation="vertical"
        android:weightSum="100"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="92"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="0dp"
                android:layout_weight="15"
                android:background="#00ffffff"
                android:gravity="center" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="70"
                android:background="#00ffffff"

                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"

                android:weightSum="100">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="50"
                    android:gravity="bottom"
                    android:weightSum="10"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="@dimen/login_editText_margin"
                        android:layout_weight="4"
                        >
                        <Button
                            android:id="@+id/button_signup"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/fbseaisland"
                            android:textColor="@color/white"
                            android:text="Enroll Now"
                            android:textStyle="bold"
                            android:textSize="@dimen/et_text_size"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="50"

                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:layout_marginBottom="@dimen/login_editText_margin"
                        android:layout_above="@+id/et_bt"
                        android:layout_marginTop="@dimen/login_editText_margin"

                        >
                        <TextView
                            android:id="@+id/txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/contact_restText"
                            android:text="Already a Member? Sign in Here:"
                            android:textColorHint="@color/orignalText"
                            />

                    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/et_bt"
    android:orientation="vertical">
                    <android.support.v7.widget.CardView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/login_editText_margin"
                        app:cardElevation="4dp">

                        <com.fishbowl.LoyaltyTabletApp.Utils.CustomEditText
                            android:id="@+id/target"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/twosidenull"
                            android:gravity="center"
                            android:hint="Enter your phone number"
                            android:textColorHint="@color/textHint"
                            android:inputType="phone"
                            android:padding="@dimen/login_editText_padding"
                            android:textSize="@dimen/et_text_size" />
                    </android.support.v7.widget.CardView>




                    <Button
                        android:id="@+id/bt_checkIn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/allside_round_cornner_buttton"
                        android:gravity="center"
                        android:text="Sign In"
                        android:padding="@dimen/login_editText_padding"
                        android:textSize="@dimen/et_text_size"
                        android:textColor="@color/White"

                        />
</LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="15"
                android:background="#00ffffff" />
        </LinearLayout>

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/footer_image_url"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:visibility="gone"
            android:orientation="horizontal"
            android:scaleType="fitXY" />

    </LinearLayout>

</RelativeLayout>
