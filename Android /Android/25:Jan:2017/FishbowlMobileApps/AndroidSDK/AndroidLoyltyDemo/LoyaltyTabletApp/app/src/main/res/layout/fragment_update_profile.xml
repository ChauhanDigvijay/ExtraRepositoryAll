<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/two_side_round_corner_button"
        android:padding="10dp">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/backre"
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/registxt_name"
            style="@style/text.25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Update Profile"
            android:textColor="@color/fbheadercolor"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/registxt1_name"
            style="@style/text.15"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/registxt_name"
            android:layout_marginTop="7dp"

            android:visibility="gone"
            android:text="Become a fishbowl member today!"

            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_below="@id/one"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"></LinearLayout>

        <LinearLayout
            android:id="@+id/linearregistration"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="60"
            android:orientation="vertical"
            android:weightSum="100">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

            <LinearLayout
                android:layout_gravity="top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/layout_margin_top"
                    android:background="@drawable/round_cornner_stroke"
                    android:orientation="horizontal">


                    <com.fishbowl.LoyaltyTabletApp.Utils.CustomEditText
                        android:id="@+id/txt_firstname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:ems="15"
                        android:hint="FirstName"
                        android:maxLines="1"
                        android:padding="@dimen/et_padding"
                        android:textColor="@color/black" />

                    <ImageView
                        android:id="@+id/icon1oo"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:paddingRight="@dimen/feed_item_padding_left_right2"
                        android:src="@drawable/contact"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/layout_margin_top"
                    android:background="@drawable/round_cornner_stroke"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <com.fishbowl.LoyaltyTabletApp.Utils.CustomEditText
                        android:id="@+id/txt_lastname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:ems="15"
                        android:hint="LastName"
                        android:maxLines="1"
                        android:padding="@dimen/et_padding"
                        android:textColor="@color/black" />

                    <ImageView

                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:paddingRight="@dimen/feed_item_padding_left_right2"
                        android:src="@drawable/contact"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/layout_margin_top"
                    android:background="@drawable/round_cornner_stroke"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <com.fishbowl.LoyaltyTabletApp.Utils.CustomEditText
                        android:id="@+id/txt_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:ems="15"
                        android:hint="EmailAddress"
                        android:maxLines="1"
                        android:inputType="textEmailAddress"
                        android:padding="@dimen/et_padding"
                        android:textColor="@color/black" />

                    <ImageView

                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:paddingRight="@dimen/feed_item_padding_left_right2"
                        android:src="@drawable/message"

                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/layout_margin_top"
                    android:background="@drawable/round_cornner_stroke"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <com.fishbowl.LoyaltyTabletApp.Utils.CustomEditText
                        android:id="@+id/txt_phoneno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:ems="15"
                        android:hint="PhoneNumber"
                        android:maxLines="1"
                        android:inputType="textPhonetic"
                        android:padding="@dimen/et_padding"
                        android:textColor="@color/black" />

                    <ImageView

                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:paddingRight="@dimen/feed_item_padding_left_right2"
                        android:src="@drawable/call"

                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/layout_margin_top"
                    android:background="@drawable/round_cornner_stroke"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <com.fishbowl.LoyaltyTabletApp.Utils.CustomEditText
                        android:id="@+id/txt_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:ems="15"
                        android:hint="Address"
                        android:maxLines="1"
                        android:padding="@dimen/et_padding"
                        android:textColor="@color/black" />

                    <ImageView

                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:paddingRight="@dimen/feed_item_padding_left_right2"
                        android:src="@drawable/location"

                        android:visibility="gone" />
                </LinearLayout>


                <TextView
                    android:id="@+id/text_change_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/layout_margin_top"

                    android:text="Change Password"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp">
                <Button
                    android:id="@+id/registration_start_okbutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/allside_round_cornner_buttton"
                    android:gravity="center"
                    android:onClick="createMember"
                    android:textSize="20dp"
                    android:paddingLeft="50dp"
                    android:paddingRight="40dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="Update Profile"
                    android:textColor="@color/White" />
            </LinearLayout>
                </LinearLayout>
</ScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"></LinearLayout>
    </LinearLayout>
</RelativeLayout>