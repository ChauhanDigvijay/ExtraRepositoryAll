<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_cornner_stroke">

    <LinearLayout
        android:id="@+id/toplayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="100"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        >

        <RelativeLayout
            android:id="@+id/buttonlayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="18"

            >

            <TextView
                android:id="@+id/loyaltytopheader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="View My VIP Card"
                android:layout_centerVertical="true"
                android:textColor="@color/orignalText"
                android:textSize="@dimen/header_text"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/strokeBorder"
                />

            <ImageView
                android:id="@+id/finish"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/crossgrey"
                android:visibility="gone"
                android:padding="10dp"/>
            <LinearLayout
                android:id="@+id/sendPrint"
                android:layout_toLeftOf="@+id/sendEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/allside_round_cornner_buttton"
                >

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/print"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Print"
                    android:textColor="@color/white"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/contact_restText"
                    android:layout_marginLeft="7dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sendEmail"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:background="@drawable/allside_round_cornner_buttton"
                >

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/sendemail"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textColor="@color/white"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/contact_restText"
                    android:layout_marginLeft="7dp"/>
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="82"
            android:orientation="vertical"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="right|center_vertical"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@color/redsurend"
                    android:gravity="center"
                    android:padding="10dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/printer"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Print"
                        android:layout_marginLeft="7dp"
                        android:textColor="@color/white"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:background="@color/redsurend"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/addtowallet"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add to my Wallet"
                        android:textColor="@color/white"
                        android:layout_marginLeft="7dp"
                        android:textSize="15dp" />
                </LinearLayout>



            </LinearLayout>



            <LinearLayout
                android:id="@+id/loyaltychild2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                >

                <LinearLayout
                    android:id="@+id/loyaltychild3"
                    android:background="@drawable/loyaltybackgrouds"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        >

                        <com.android.volley.toolbox.NetworkImageView
                            android:id="@+id/companyLogo"
                            android:layout_width="wrap_content"
                            android:layout_margin="0dp"
                            android:layout_height="70dp"
                            android:layout_alignParentLeft="true"
                            android:adjustViewBounds="true"

                            />

                        <TextView
                            android:id="@+id/loyaltytitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="My VIP Card"
                            android:layout_centerInParent="true"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:textColor="@color/orignalText"
                            android:textSize="@dimen/contact_text"/>
                    </RelativeLayout>

                    <View
                        android:id="@+id/divider_line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/Gray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="2.3"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.6"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:weightSum="3"
                            android:paddingLeft="6dp"
                            android:paddingRight="16dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center_vertical"

                                >

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"


                                    >
                                <TextView
                                    android:id="@+id/labelname"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Name"
                                    android:visibility="gone"
                                    android:textColor="@color/fbseaisland"
                                    android:textSize="@dimen/contact_restText"/>
                                <TextView
                                    android:id="@+id/userName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Harsh Chauhan"
                                    android:textColor="@color/orignalText"
                                    android:textSize="@dimen/contact_restText"/>
                                </RelativeLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center_vertical"
                                android:layout_marginTop="15dp"
                                >
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    >
                                <TextView
                                    android:id="@+id/labelmember"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Member Since"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/contact_restText"/>
                                <TextView
                                    android:id="@+id/datecreated"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2017"
                                    android:layout_below="@+id/labelmember"
                                    android:textColor="@color/orignalText"
                                    android:textSize="@dimen/contact_restText"/>
                                </RelativeLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center_vertical"
                                android:layout_marginTop="15dp"
                                >
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    >
                                <TextView
                                    android:id="@+id/labelnumber"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Loyalty ID"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/contact_restText"/>
                                <TextView
                                    android:id="@+id/loyaltyNumber"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="3234456789"
                                    android:layout_below="@+id/labelnumber"
                                    android:textColor="@color/orignalText"
                                    android:textSize="@dimen/contact_restText"/>
                                </RelativeLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".7"
                            android:gravity="center"
                            android:orientation="horizontal"
                            >
                            <ImageView
                                android:id="@+id/qrCode"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:visibility="gone"
                                />
                            <WebView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/webview"></WebView>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
