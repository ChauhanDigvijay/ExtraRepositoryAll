<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/multioffer_width"
    android:id="@+id/rewardsLayer"
    android:background="@color/dark_gray"

    android:layout_gravity="center"
    android:gravity="center"
    android:layout_height="@dimen/multioffer_height">

    <LinearLayout
        android:id="@+id/llayout_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:padding="10dp"
        android:background="@color/white"

        android:weightSum="100"
        android:orientation="vertical"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:gravity="center">
            <TextView

                style="@style/text.14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Offer Detail"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"

                android:singleLine="false"
                android:textColor="@color/fbheadercolor" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:gravity="left|center_vertical"
        android:orientation="vertical">
        <TextView
            android:id="@+id/offertitle"
            style="@style/text.13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_margin="5dp"
            android:text="offer name"


            android:singleLine="false"
            android:textColor="@color/fbheadercolor"
      />



        <TextView
            android:id="@+id/offerdesc"
            style="@style/text.12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:text="qwert"
            android:layout_margin="5dp"

            android:textColor="@color/black" />
        <TextView
            android:id="@+id/offerdate"
            style="@style/text.13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/offertitle"
            android:text="Expire in 0 days"
            android:layout_margin="5dp"
            android:textColor="@color/fbheadercolor"

            />




        <LinearLayout
            android:id="@+id/offerstore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingBottom="2dp"
            android:paddingTop="2dp" >

            <TextView
                android:id="@+id/text_appstore"
                style="@style/text.13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Application Store:"
                android:textColor="@color/red_color"
                android:textStyle="bold"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/offer_location_name"
                style="@style/text.11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:singleLine="false"
                android:text=""
                android:textColor="@color/darker_gray"

                />
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:visibility="gone"
            android:src="@drawable/mybrestoofferimage"
            android:id="@+id/image"/>
</LinearLayout>
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="60"
            android:layout_below="@id/image">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center">


                <RelativeLayout
                    android:id="@+id/offer_barcode"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"


                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center"
                   >
                    <ProgressBar
                        android:id="@+id/progressBar"
                        android:layout_width="@dimen/progress_bar"
                        android:layout_height="@dimen/progress_bar"
                        android:layout_centerInParent="true"/>
                    <ImageView
                        android:id="@+id/bar_image"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:focusable="false"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:layout_gravity="center"
android:scaleType="fitXY"
                        />
                    <TextView
                        android:id="@+id/offer_promo"
                        style="@style/text.13.prompt"
                        android:layout_below="@+id/bar_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:layout_centerHorizontal="true"
                        android:text="promo code"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:paddingTop="6dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        />
                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>




    </LinearLayout>


</RelativeLayout>
