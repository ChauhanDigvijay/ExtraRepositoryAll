<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:weightSum="10"
    android:background="@color/white">

    <LinearLayout

        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:background="@color/fbheadercolor"
        >
        <ImageButton
            android:id="@+id/call"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/phonewhite"
            android:background="@null"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/storename"
            style="@style/text.14.prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:text="My Bistro"
            android:textColor="@color/fbheadercolor"
            android:textStyle="bold" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/storeno"
                style="@style/text.12.prompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:text="Plaza King"
                android:textColor="@color/black"
              />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/storelocation"
                style="@style/text.12.prompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:text="274 Alley Street,Santa Carla,CA 95041"
                android:textColor="@color/black"
                android:maxLines="1"
              />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/car_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/car"/>
        <TextView
            style="@style/text.12.prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="distance"
            android:id="@+id/distance"
            android:layout_marginTop="2dp"
            android:textColor="@color/black"/>

    </LinearLayout>
</LinearLayout>
