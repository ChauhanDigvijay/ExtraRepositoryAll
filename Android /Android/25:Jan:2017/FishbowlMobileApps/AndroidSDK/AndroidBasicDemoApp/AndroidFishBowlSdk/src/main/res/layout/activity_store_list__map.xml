<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="100"
        >
        <include
            android:id="@+id/tool_bar"
            layout="@layout/toolbar_store_map"
            />
        <FrameLayout
            android:layout_below="@id/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:id="@+id/frame_layout"
            android:orientation="vertical" >
            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.MapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </FrameLayout>
        <ListView
            android:layout_below="@+id/rellativelayout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:dividerHeight="0dp"
            android:id="@+id/days_time_list"
            ></ListView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@+id/days_time_list"
            android:padding="10dp"
            android:id="@+id/favouritestore"
            android:layout_gravity="center"
            >

            <TextView

                style="@style/text.15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Save as a favoriate store"
                android:textColor="@color/fbbrown"
                android:id="@+id/textView2" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/start_new_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@id/favouritestore"
            android:gravity="center">
            <Button
                android:id="@+id/start_new_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Start New Order"
                android:background="@color/redsurend"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/frame_layout"
            android:id="@+id/rellativelayout">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical"
                >
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/feed_item_padding_left_right"
                    android:paddingRight="@dimen/feed_item_padding_left_right"
                    android:background="@null" >

                    <ImageView
                        android:id="@+id/status_icon_img"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_centerVertical="true"
                        android:padding="4dp"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/btn_next"
                        style="@style/text.14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"

                        android:gravity="center"
                        android:inputType="number"
                        android:textColor="@color/fbbrown"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <TextView


                        android:layout_marginTop="3dp"
                        android:id="@+id/storename"
                        style="@style/text.15.prompt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginBottom="3dp"
                        android:singleLine="false"
                        android:text="TITles"
                        android:textColor="@color/Red"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="15dp"
                        android:src="@drawable/favouritegrey"
                        android:visibility="gone"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:layout_alignBaseline="@+id/storename"
                        android:layout_toRightOf="@+id/storename"
                        android:id="@+id/imageView6" />
                    <ImageView
                        android:layout_width="20dp"

                        android:layout_height="20dp"
                        android:src="@drawable/phonegrey"
                        android:layout_marginRight="10dp"

                        android:layout_below="@+id/storename"
                        android:layout_toRightOf="@+id/btn_next"

                        android:id="@+id/imageView5" />
                    <TextView
                        android:id="@+id/storeno"
                        style="@style/text.15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/storename"
                        android:layout_toRightOf="@+id/imageView5"
                        android:text="storeno"
                        android:textColor="@color/dark_gray"
                        android:textStyle="bold"/>



                    <LinearLayout
                        android:id="@+id/newlinear"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/storeno"
                        android:layout_toRightOf="@+id/btn_next"
                        android:orientation="horizontal"
                        android:paddingTop="10dp"
                        android:layout_marginBottom="3dp">

                        <ImageView

                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/locationgrey"
                            android:layout_marginRight="10dp"
                            android:layout_below="@+id/storeno"
                            android:layout_toRightOf="@+id/btn_next"
                            android:id="@+id/imageView3" />

                        <TextView
                            android:id="@+id/storelocation"
                            style="@style/text.15.prompt"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_marginRight="10dp"
                            android:singleLine="false"
                            android:layout_below="@+id/storename"
                            android:layout_toRightOf="@+id/imageView5"
                            android:layout_height="wrap_content"

                            android:focusable="false"
                            android:paddingLeft="4dp"
                            android:text="Store location"
                            android:textColor="@color/dark_gray" />


                    </LinearLayout>

                    <ImageView
                        android:id="@+id/totalDollar"
                        style="@style/text.13"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_above="@+id/newlinear"
                        android:layout_alignBaseline="@+id/storename"
                        android:layout_alignParentRight="true"


                        android:src="@drawable/car"
                        />




                    <TextView
                        android:id="@+id/storedistance"
                        style="@style/text.15.prompt"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:singleLine="false"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/newlinear"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/totalDollar"
                        android:layout_marginLeft="5dp"
                        android:focusable="false"
                        android:paddingLeft="4dp"
                        android:text="distance"
                        android:textColor="@color/fbheadercolor" />



                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentBottom="true"
            android:visibility="visible">

            <com.BasicApp.Activites.Generic.BottomToolbarActivity
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/bottom_toolbar"
                />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/reservation_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:layout_marginTop="@dimen/margin_10"
            android:paddingLeft="@dimen/feed_item_padding_left_right"
            android:paddingRight="@dimen/feed_item_padding_left_right"
            android:visibility="gone"
            android:orientation="horizontal" >


            <ImageView
                android:id="@+id/drawer_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/order"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true" />

            <TextView
                android:id="@+id/drawer_itemName"
                style="@style/text.15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toLeftOf="@+id/drawer_icon2"
                android:layout_toRightOf="@+id/drawer_icon"
                android:text="Make a Reservation"
                android:textColor="@color/fbbrown" />




        </LinearLayout>
        <View
            android:id="@+id/viewup1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="3dp"
            android:visibility="gone"
            android:layout_marginBottom="3dp"
            android:background="@color/Gray" />
        <LinearLayout
            android:id="@+id/online_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:visibility="gone"
            android:paddingLeft="@dimen/feed_item_padding_left_right"
            android:paddingRight="@dimen/feed_item_padding_left_right"
            android:layout_marginTop="@dimen/margin_10"
            android:orientation="horizontal" >


            <ImageView
                android:id="@+id/drawer_icon1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/cart"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true" />


            <TextView
                android:id="@+id/drawer_itemName1"
                style="@style/text.15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Online"

                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/fbbrown"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/drawer_icon1"
                android:layout_toEndOf="@+id/drawer_icon1" />



        </LinearLayout>
        <View
            android:id="@+id/viewup16"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:visibility="gone"
            android:background="@color/Gray" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:gravity="center"
            android:visibility="gone"
            android:layout_gravity="center"
            >

            <TextView

                style="@style/text.15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Save as a favoriate store"
                android:textColor="@color/fbbrown"
                android:id="@+id/textView22" />
        </LinearLayout>


    </RelativeLayout>
    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@color/White"
        android:choiceMode="singleChoice"
        android:dividerHeight="0dp"
        android:divider="@color/white" />

</android.support.v4.widget.DrawerLayout>

