<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:focusable="false"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"
    android:padding="2dp"
    android:paddingRight="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TextView

            android:id="@+id/storename"
            style="@style/text.15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:focusable="false"
            android:text="StoreName"
            android:textColor="@color/fbheadercolor"
            android:textStyle="bold"
            android:textColorHint="@color/fbheadercolor"/>
        <ImageView
            android:id="@+id/status_icon_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/favouritegrey"

            />

        <TextView
            android:id="@+id/storeclose"
            style="@style/text.16.prompt"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
           android:layout_gravity="left"
            android:focusable="false"
            android:text=" close"
            android:textColor="@color/green"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="7dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"

            android:src="@drawable/phonegrey"
            android:layout_marginRight="10dp"
            android:id="@+id/imageView2" />

        <TextView
            android:id="@+id/storeno"
            style="@style/text.15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"

            android:focusable="false"


            android:text="Number"
            android:textColor="@color/dark_gray"
            android:textStyle="bold"
            android:textColorHint="@color/dark_gray" />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:src="@drawable/car"
            android:layout_marginRight="10dp"/></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <ImageView
            android:layout_width="20dp"

            android:layout_height="20dp"
            android:src="@drawable/locationgrey"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/storelocation"
            style="@style/text.15.prompt"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_marginRight="10dp"
            android:singleLine="false"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/btn_next"
            android:focusable="false"
            android:paddingLeft="4dp"
            android:text="Store location"
            android:textColor="@color/dark_gray" />


        <TextView
            android:id="@+id/storedistance"
            style="@style/text.15.prompt"
            android:textStyle="bold"
            android:layout_width="wrap_content"

            android:singleLine="false"
            android:layout_height="wrap_content"

            android:layout_toRightOf="@+id/btn_next"
            android:focusable="false"
            android:paddingLeft="4dp"
            android:text="distance"
            android:textColor="@color/fbheadercolor" />
    </LinearLayout>



</LinearLayout>