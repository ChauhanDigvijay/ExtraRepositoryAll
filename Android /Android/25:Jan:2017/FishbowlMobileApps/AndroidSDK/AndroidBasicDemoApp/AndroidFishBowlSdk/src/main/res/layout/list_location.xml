<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:focusable="false"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"
    android:padding="2dp"
    android:paddingRight="10dp">

    <ImageView
        android:id="@+id/status_icon_img"
        android:layout_width="36dp"
        android:layout_height="36dp"

        android:layout_centerVertical="true"

        android:focusable="false"
        android:padding="4dp"
        android:visibility="gone" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

    <TextView
        android:id="@+id/storename"
        style="@style/text.19.prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/btn_next"
        android:focusable="false"
        android:text="storename"
        android:textColor="@color/RedOrgin"
        android:textStyle="bold" /></LinearLayout>

    <TextView
        android:id="@+id/storestate"
        style="@style/text.15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/storename"
        android:paddingTop="5dp"
         android:paddingBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/btn_next"
        android:focusable="false"
        android:visibility="gone"
        android:text="store state and city "
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/phonenumber"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/storeno"
            style="@style/text.15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:focusable="false"


            android:text="Number"
            android:textColor="@color/fbbrown"
            android:textStyle="bold"
            android:textColorHint="@color/dark_gray" /></LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/storelocation"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/storelocation"
        style="@style/text.15.prompt"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/storestate"
        android:layout_toRightOf="@+id/btn_next"
        android:focusable="false"
        android:paddingLeft="4dp"
        android:text="Store location"
        android:textColor="@color/black" /></LinearLayout>

    <TextView
        android:id="@+id/storezipcode"
        style="@style/text.15"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/storelocation"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignTop="@+id/storeno"
        android:focusable="false"
        android:paddingRight="1dp"
        android:text="statezipcode"
        android:textStyle="bold"
        android:textColor="@color/black" />


</LinearLayout>