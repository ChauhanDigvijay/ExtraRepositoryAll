<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <RelativeLayout
        android:id="@+id/childLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/textViews"
            android:paddingLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/text_white"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <RelativeLayout
                android:id="@+id/modifierQuantityLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="@dimen/margin_5"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_centerVertical="true"
                android:background="@drawable/border_quantity_modifier">

                <Spinner
                    android:id="@+id/modifierQuantity"
                    android:layout_width="@dimen/spinner_width_size"
                    android:layout_height="@dimen/spinner_size"
                    android:layout_centerInParent="true"
                    android:background="@null"
                    android:dropDownWidth="100dp"
                    android:spinnerMode="dropdown" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/modifierInfoLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/img_selected"
                android:layout_toRightOf="@+id/modifierQuantityLayout"
                android:gravity="center_vertical"
                android:padding="@dimen/margin_5">

                <TextView
                    android:id="@+id/tv_upsell_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/margin_5"
                    android:text="Reward one"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_large" />

                <TextView
                    android:id="@+id/tv_price_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/tv_upsell_detail"
                    android:paddingLeft="@dimen/margin_5"
                    android:textColor="#8E8E93"
                    android:visibility="gone"
                    android:textSize="@dimen/text_size_medium" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_upsell_detail"
                    android:layout_toRightOf="@+id/tv_price_quantity"
                    android:paddingLeft="@dimen/margin_5"
                    android:textColor="#8E8E93"
                    android:text=""
                    android:textSize="@dimen/text_size_medium" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/img_selected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:minHeight="0dp"
                android:paddingBottom="3dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="3dp"
                android:src="@drawable/check_orange"
                android:textAllCaps="false"
                android:textColor="@color/orange_color" />

        </RelativeLayout>

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/textViews"
            android:background="@color/gray" />
    </RelativeLayout>

</RelativeLayout>