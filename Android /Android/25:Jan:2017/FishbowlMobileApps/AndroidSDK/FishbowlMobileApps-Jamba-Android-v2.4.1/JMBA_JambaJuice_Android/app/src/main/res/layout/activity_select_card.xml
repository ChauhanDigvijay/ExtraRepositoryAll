<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0px"
        android:layout_height="0px"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tv_place_order"
        android:layout_below="@+id/toolbar"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/list_cards_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <com.olo.jambajuice.Views.Generic.SemiBoldButton
                android:id="@+id/addAnotherCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:drawableRight="@drawable/forward_arrow"
                android:gravity="left"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="Pay with another credit card"
                android:textAllCaps="false"
                android:textColor="@color/darker_gray"
                android:textSize="@dimen/text_size_medium" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/giftCardView"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/darker_gray" />

                <com.olo.jambajuice.Views.Generic.SemiBoldButton
                    android:id="@+id/usingeGiftCard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@null"
                    android:drawableRight="@drawable/forward_arrow"
                    android:gravity="left"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:text="Pay with Jamba Card"
                    android:textAllCaps="false"
                    android:textColor="@color/darker_gray"
                    android:textSize="@dimen/text_size_medium" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <com.olo.jambajuice.Views.Generic.SemiBoldButton
        android:id="@+id/tv_place_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_weight="2"
        android:background="@color/red_color_1"
        android:gravity="center"
        android:text="Place Order"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_large" />

    <include layout="@layout/disable_view" />
</RelativeLayout>
