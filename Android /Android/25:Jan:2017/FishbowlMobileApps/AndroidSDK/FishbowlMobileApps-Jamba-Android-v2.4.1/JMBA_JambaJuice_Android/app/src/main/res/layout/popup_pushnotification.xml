<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/basket_icon_top_margin"
    android:background="@color/brown_push_color"
    android:orientation="horizontal"
    android:padding="10dp">
    <LinearLayout
        android:id="@+id/menuStoreChangeHeaderInnerLeft1"
        android:layout_width="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignLeft="@+id/imgHeaderMapIcon1"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_toLeftOf="@+id/imgHeaderMapIcon1"
        android:layout_toStartOf="@+id/imgHeaderMapIcon1">
        <ImageView
            android:id="@+id/imgHeaderLogo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_marginRight="5dp"
            android:fitsSystemWindows="true"

            android:src="@drawable/jamba_juice_logos" />
        <RelativeLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/text_white" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical">
            <com.olo.jambajuice.Views.Generic.SemiBoldTextView
                android:id="@+id/headerOfferTitle"
                style="@style/text.12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:text=""
                android:textColor="@color/red_color"/>
            <com.olo.jambajuice.Views.Generic.SemiBoldTextView
                android:layout_width="wrap_content"
                android:textSize="9sp"
                android:id="@+id/headerOfferDescription"
                android:layout_height="wrap_content"
                android:singleLine="false"
                android:lines="2"
                android:ellipsize="end"
                android:text="Your offer is available in the Rewards and Promotion section, and can be redeemed when you checkout"
                android:textColor="@color/brown_color" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imgHeaderMapIcon1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/close_small" />
</RelativeLayout>