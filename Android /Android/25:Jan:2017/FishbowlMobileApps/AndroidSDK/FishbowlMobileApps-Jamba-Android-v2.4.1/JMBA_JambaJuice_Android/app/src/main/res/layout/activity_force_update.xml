<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_force_update"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/instabug_annotation_color_orange"
    tools:context="com.olo.jambajuice.Activites.NonGeneric.Settings.ForceUpdateActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/jambaLogo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="10dp"
                android:background="@android:color/transparent"
                android:src="@drawable/jamba_juice_logo"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_margin="@dimen/margin_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.olo.jambajuice.Views.Generic.SemiBoldTextView
                android:id="@+id/updateMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textStyle="normal"
                android:textSize="20sp"
                android:text="A new version of the Jamba Juice App is now available. Please update now for an improved experience."
                android:padding="20dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_margin="@dimen/margin_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.olo.jambajuice.Views.Generic.SemiBoldTextView
                android:id="@+id/updateButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_white"
                android:textStyle="normal"
                android:textSize="20sp"
                android:gravity="center"
                android:padding="@dimen/margin_10"
                android:background="@drawable/rounded_corner_textview_forceupdate"
                android:text="Update"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.olo.jambajuice.Views.Generic.SemiBoldTextView
                android:id="@+id/cancelButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:padding="@dimen/activity_horizontal_margin"
                android:text="Remind Me Later"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.olo.jambajuice.Views.Generic.SemiBoldTextView
                android:id="@+id/dismissButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textStyle="normal"
                android:textSize="15sp"
                android:layout_marginTop="15dp"
                android:padding="@dimen/activity_horizontal_margin"
                android:text="Dismiss, for this update only"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
