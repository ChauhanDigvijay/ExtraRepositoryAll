<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homenew"
    android:orientation="vertical">

    <include
        android:id="@+id/homeStoreChangeHeader"
        layout="@layout/store_selection_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/basket_icon_top_margin"
        android:layout_alignParentTop="true"
        android:background="@color/semi_transparent_white" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/homeStoreChangeHeader">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center|bottom"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:orientation="vertical">


                    <FrameLayout
                        android:id="@+id/userInfoView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/userImageView"
                        android:orientation="horizontal"
                        android:paddingTop="20dp"

                        >


                        <LinearLayout
                            android:id="@+id/welcomeNameAndSettingsView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/userImageView"
                            android:layout_marginTop="50dp"
                            android:layout_weight="0.60"
                            android:background="@color/semi_transparent_white"
                            android:focusable="false"
                            android:gravity="center"
                            android:orientation="vertical">


                            <com.olo.jambajuice.Views.Generic.SemiBoldTextView
                                android:id="@+id/welcomeMessage"
                                style="@style/text.18"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="50dp"
                                android:focusable="false"
                                android:singleLine="true"
                                android:text="WELCOME"
                                android:textColor="@color/orange_color" />


                            <com.olo.jambajuice.Views.Generic.SemiBoldTextView
                                android:id="@+id/welcomeMessageName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/welcomeMessage"
                                android:focusable="false"
                                android:gravity="center"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="@color/orange_color"
                                android:textSize="26sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:id="@+id/secondaryFieldsLinearLayoutss"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:singleLine="true">

                                <com.olo.jambajuice.Views.Generic.SemiBoldTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/welcomeMessageName"
                                    android:layout_gravity="center"
                                    android:layout_marginRight="5dp"
                                    android:background="@null"
                                    android:focusable="false"
                                    android:gravity="center"
                                    android:text="Account Settings"
                                    android:textColor="@color/red_color_1"
                                    android:textSize="@dimen/text_size_medium" />

                                <ImageView
                                    android:id="@+id/settingimageView"
                                    android:layout_width="@dimen/dashboard_setting_icon"
                                    android:layout_height="@dimen/dashboard_setting_icon"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="2dp"
                                    android:adjustViewBounds="true"
                                    android:scaleType="fitCenter"
                                    android:src="@drawable/settingicon" />

                            </LinearLayout>
                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/userImageView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/homeStoreChangeHeader"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/userImage"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_centerInParent="true"
                                android:layout_centerVertical="true"
                                android:background="@drawable/two_side_thick_yellow_corner"
                                android:focusable="false"
                                android:paddingLeft="12dp"
                                android:paddingRight="12dp"
                                android:src="@drawable/orange" />


                        </RelativeLayout>
                    </FrameLayout>

                    <LinearLayout
                        android:id="@+id/rewardsView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/semi_transparent_white"
                        android:orientation="horizontal"

                        >

                        <LinearLayout
                            android:id="@+id/rewardsView1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/jambaCup"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_gravity="center"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="15dp"
                                android:focusable="false"
                                android:src="@drawable/cup_0" />

                            <RelativeLayout

                                android:id="@+id/rewardsLayer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginRight="5dp"
                                android:focusable="false"
                                android:gravity="center"
                                android:orientation="vertical">


                                <LinearLayout
                                    android:id="@+id/menuView1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/rewardsValue"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:focusable="false"
                                        android:gravity="center"
                                        android:text="1"
                                        android:textColor="@color/red_color"
                                        android:textSize="@dimen/text_size_xxxlarge"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/rewardsValue1"
                                        style="@style/text.18"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:focusable="false"
                                        android:gravity="center"
                                        android:text="/10"
                                        android:textColor="@color/black" />
                                </LinearLayout>

                                <com.olo.jambajuice.Views.Generic.SemiBoldTextView
                                    style="@style/text.12"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/menuView1"
                                    android:layout_centerHorizontal="true"
                                    android:layout_gravity="center"
                                    android:focusable="false"
                                    android:gravity="center"
                                    android:singleLine="true"
                                    android:text="Points Earned"
                                    android:textColor="@color/dark_green"
                                    android:textStyle="bold" />
                            </RelativeLayout>
                        </LinearLayout>

                        <View
                            android:id="@+id/view2"
                            android:layout_width="2px"
                            android:layout_height="70dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="20dp"
                            android:background="@color/red_color" />

                        <LinearLayout
                            android:id="@+id/welcomeNameAndSettingsView1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:focusable="false"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center">

                                <ImageView
                                    android:id="@+id/inAppOfferIcon"
                                    android:layout_width="40dp"
                                    android:layout_height="70dp"
                                    android:layout_gravity="center"
                                    android:layout_marginBottom="5dp"
                                    android:layout_marginTop="15dp"
                                    android:focusable="false"
                                    android:src="@drawable/inapp_offer_icon" />

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_toRightOf="@+id/inAppOfferIcon"
                                    android:focusable="false"
                                    android:gravity="center">

                                    <TextView
                                        android:id="@+id/welc"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:focusable="false"
                                        android:gravity="center"
                                        android:text="0"
                                        android:textColor="@color/red_color"
                                        android:textSize="@dimen/text_size_xxxlarge"
                                        android:textStyle="bold" />

                                    <com.olo.jambajuice.Views.Generic.SemiBoldTextView
                                        android:id="@+id/offerdetails"
                                        style="@style/text.12"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/welc"
                                        android:layout_centerHorizontal="true"
                                        android:focusable="false"
                                        android:text="Rewards &amp; Offers"
                                        android:textColor="@color/dark_green"
                                        android:textStyle="bold" />
                                </RelativeLayout>

                            </RelativeLayout>
                        </LinearLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/menuView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/userInfoView"
                        android:layout_marginTop="3dp"
                        android:background="@color/semi_transparent_white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingBottom="3dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="2dp">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"

                            android:src="@drawable/jamba_juice_bannernew" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="0.8"
                            android:focusable="false"
                            android:orientation="vertical">

                            <com.olo.jambajuice.Views.Generic.MediumTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:focusable="false"
                                android:text="Order Now"
                                android:textColor="@color/dark_green"
                                android:textSize="@dimen/text_size_xlarge"
                                android:textStyle="bold" />

                            <com.olo.jambajuice.Views.Generic.MediumTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="1dp"
                                android:focusable="false"
                                android:singleLine="false"
                                android:text="Delicious smoothies, juices, bowls &amp; other good stuff"
                                android:textColor="@color/brown_light_color"
                                android:textSize="@dimen/text_size_xsmall" />

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:focusable="false">

                            <Button
                                android:id="@+id/menuBtn"
                                android:layout_width="20dp"
                                android:layout_height="28dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:background="@drawable/forward_red"
                                android:focusable="false" />
                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/giftCardView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/userInfoView"
                        android:layout_marginTop="3dp"
                        android:background="@color/semi_transparent_white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingBottom="3dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="2dp">

                        <ImageView
                            android:id="@+id/giftCardImg"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"
                            android:src="@drawable/sample_gift_card" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="0.8"
                            android:focusable="false"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <com.olo.jambajuice.Views.Generic.MediumTextView
                                    android:id="@+id/jambacardsText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:focusable="false"
                                    android:text="Jamba Cards"
                                    android:textColor="@color/dark_green"
                                    android:textSize="@dimen/text_size_xlarge"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/jamba_cards_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_toRightOf="@+id/jambacardsText"
                                    android:background="@drawable/circle_red"
                                    android:gravity="center"
                                    android:minHeight="15dp"
                                    android:minWidth="15dp"
                                    android:padding="3dp"
                                    android:text="0"
                                    android:textColor="@android:color/white"
                                    android:textSize="12sp"
                                    android:visibility="gone" />
                            </RelativeLayout>

                            <com.olo.jambajuice.Views.Generic.MediumTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="1dp"
                                android:focusable="false"
                                android:singleLine="false"
                                android:text="Purchase and Manage"
                                android:textColor="@color/brown_light_color"
                                android:textSize="@dimen/text_size_xsmall" />

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:focusable="false">

                            <Button
                                android:id="@+id/jambaCardsBtn"
                                android:layout_width="20dp"
                                android:layout_height="28dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:background="@drawable/forward_red"
                                android:focusable="false" />
                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_below="@+id/rewardsView"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="3dp"
                        android:background="@color/semi_transparent_white"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">


                        <LinearLayout
                            android:id="@+id/recentOrderNewView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:orientation="vertical"
                            android:paddingBottom="15dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="0dp"
                            android:visibility="gone">

                            <com.olo.jambajuice.Views.Generic.SemiBoldTextView
                                style="@style/text.17"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text="It looks like you're new here..."
                                android:textColor="@color/dark_green" />

                            <com.olo.jambajuice.Views.Generic.MediumTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:singleLine="false"
                                android:text="Check out our full menu or store \nLocations using the above navigation!"
                                android:textColor="@color/brown_light_color"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/recentOrderView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/transparent"
                            android:paddingBottom="10dp"
                            android:paddingLeft="10dp"
                            android:paddingTop="0dp"
                            android:visibility="visible">

                            <LinearLayout
                                android:id="@+id/orderhistorysection"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal"
                                android:singleLine="true">

                                <com.olo.jambajuice.Views.Generic.SemiBoldTextView
                                    android:id="@+id/txtRecentOrder"
                                    style="@style/text.18"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="0dp"
                                    android:background="@null"
                                    android:focusable="false"
                                    android:minHeight="0dp"
                                    android:text="My Order History"
                                    android:textColor="@color/dark_green"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/orderhistory_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_toLeftOf="@+id/tv_amount"
                                    android:background="@drawable/circle_red"
                                    android:gravity="center"
                                    android:minHeight="15dp"
                                    android:minWidth="15dp"
                                    android:padding="3dp"
                                    android:text="0"
                                    android:textColor="@android:color/white"
                                    android:textSize="12sp"
                                    android:visibility="gone" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_recent1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/orderhistorysection"
                                android:orientation="horizontal"
                                android:layout_toLeftOf="@+id/txtOrderPrice1">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="10dp"
                                    android:layout_weight="0.5"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/txtOrderDesc1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="3dp"
                                        android:ellipsize="end"
                                        android:focusable="false"
                                        android:maxLines="2"
                                        android:minLines="2"
                                        android:textColor="@color/darker_gray"
                                        android:textSize="10sp"
                                        android:visibility="gone" />

                                    <TextView
                                        android:id="@+id/txtOrderTitle1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:ellipsize="end"
                                        android:focusable="false"
                                        android:singleLine="true"
                                        android:textColor="@color/brown_light_color"
                                        android:textSize="13sp" />

                                    <TextView
                                        android:id="@+id/txtOrderTime1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:ellipsize="end"
                                        android:focusable="false"
                                        android:singleLine="true"
                                        android:textColor="@color/red_color_1"
                                        android:textSize="10sp" />
                                </LinearLayout>
                            </LinearLayout>

                            <com.olo.jambajuice.Views.Generic.SemiBoldTextView
                                android:id="@+id/txtOrderPrice1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_toLeftOf="@+id/arrowBtn"
                                android:focusable="false"
                                android:gravity="left"
                                android:paddingRight="20dp"
                                android:textColor="@color/blue_color"
                                android:textSize="@dimen/text_size_large" />

                            <Button
                                android:id="@+id/arrowBtn"
                                android:layout_width="20dp"
                                android:layout_height="28dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_centerInParent="true"
                                android:background="@drawable/forward_red"
                                android:focusable="false" />
                        </RelativeLayout>
                    </LinearLayout>


                </LinearLayout>


            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
