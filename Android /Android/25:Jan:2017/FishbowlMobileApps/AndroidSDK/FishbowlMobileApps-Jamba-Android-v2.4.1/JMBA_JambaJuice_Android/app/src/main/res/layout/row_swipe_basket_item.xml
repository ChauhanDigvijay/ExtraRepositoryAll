<?xml version="1.0" encoding="utf-8"?>

<com.daimajia.swipe.SwipeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:tag="Bottom2"
        android:background="@color/red_color_1"
        android:layout_width="90dp"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_delete"
            android:text="Delete"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/row_container"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/description"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/tv_count"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="Orange C-Booster"
                android:layout_alignParentLeft="true"
                android:textColor="@color/darker_gray"
                android:textSize="@dimen/text_size_large"/>
            <TextView
                android:layout_below="@+id/tv_title"
                android:id="@+id/tv_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:paddingLeft="20dp"
                android:text="MEDIUM, DAILY VITAMIN"
                android:textColor="@color/darker_gray"
                android:textSize="@dimen/text_size_medium" />

            <com.olo.jambajuice.Views.Generic.SemiBoldTextView
                android:id="@+id/txtSeeMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="10dp"
                android:layout_below="@+id/tv_detail"
                android:text="See More"
                android:textColor="@color/red_color"
                android:textSize="@dimen/text_size_medium"
                android:visibility="gone"/>

            <com.olo.jambajuice.Views.Generic.SemiBoldTextView
                android:id="@+id/txtSeeLess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_detail"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="10dp"
                android:text="See Less"
                android:textColor="@color/red_color"
                android:textSize="@dimen/text_size_medium"
                android:visibility="gone"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_count"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="20dp"
            android:minHeight="20dp"
            android:gravity="center"
            android:text="1"
            android:padding="3dp"
            android:layout_toLeftOf="@+id/tv_amount"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:background="@drawable/circle_red"/>

        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="$5.49"
            android:gravity="center"
            android:layout_marginRight="25dp"
            android:textColor="@color/darker_gray"
            android:textSize="@dimen/text_size_medium" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_below="@+id/description"
            android:background="@color/darker_gray"/>
    </RelativeLayout>


</com.daimajia.swipe.SwipeLayout>