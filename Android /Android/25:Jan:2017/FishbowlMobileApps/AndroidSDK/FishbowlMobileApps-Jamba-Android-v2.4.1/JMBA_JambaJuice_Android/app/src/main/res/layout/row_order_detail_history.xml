<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:background="@android:color/white"
    android:gravity="center_vertical">


    <RelativeLayout
        android:id="@+id/detailLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.olo.jambajuice.Views.Generic.SemiBoldTextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/setting_header"
            android:gravity="center_vertical"
            android:paddingBottom="3dp"
            android:paddingLeft="20dp"
            android:paddingTop="3dp"
            android:text="Details"
            android:textColor="@color/heading_color"
            android:textSize="@dimen/text_size_large" />

        <TextView
            android:id="@+id/tv_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:paddingBottom="15dp"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:text="Picked up on 24/5/15 at 10:45 am"
            android:textColor="@color/darker_gray"
            android:textSize="@dimen/text_size_large" />

    </RelativeLayout>

    <!--<TextView-->
    <!--android:id="@+id/tv_status"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_below="@+id/detailLayout"-->
    <!--android:paddingBottom="15dp"-->
    <!--android:paddingLeft="20dp"-->
    <!--android:text="Completed"-->
    <!--android:textColor="@color/red_color"-->
    <!--android:textSize="@dimen/text_size_medium" />-->

    <RelativeLayout
        android:id="@+id/del_status_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detailLayout">

        <com.olo.jambajuice.Views.Generic.SemiBoldTextView
            android:id="@+id/del_status_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/setting_header"
            android:gravity="center_vertical"
            android:paddingBottom="3dp"
            android:paddingLeft="20dp"
            android:paddingTop="3dp"
            android:text="Delivery Status"
            android:textColor="@color/heading_color"
            android:textSize="@dimen/text_size_large" />

        <TextView
            android:id="@+id/del_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/del_status_text"
            android:paddingBottom="15dp"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:text="Completed"
            android:textColor="@color/red_color"
            android:textSize="@dimen/text_size_medium" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/del_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/del_status_layout">

        <com.olo.jambajuice.Views.Generic.SemiBoldTextView
            android:id="@+id/del_addr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/setting_header"
            android:gravity="center_vertical"
            android:paddingBottom="3dp"
            android:paddingLeft="20dp"
            android:paddingTop="3dp"
            android:text="Delivery Address"
            android:textColor="@color/heading_color"
            android:textSize="@dimen/text_size_large" />

        <RelativeLayout
            android:id="@+id/dALayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/del_addr"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            android:paddingTop="15dp">

            <TextView
                android:id="@+id/sAddress1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingLeft="20dp"
                android:text="Select/Enter your delivery address"
                android:textColor="@color/darker_gray"
                android:textSize="@dimen/text_size_medium" />

            <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:drawablePadding="5dp"-->
            <!--android:drawableRight="@drawable/forward_arrow_gray"-->
            <!--android:gravity="center"-->
            <!--android:paddingRight="15dp"-->
            <!--android:textColor="@color/darker_gray"-->
            <!--android:textSize="@dimen/text_size_medium" />-->
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/orderStatusLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/del_relative"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <com.olo.jambajuice.Views.Generic.SemiBoldTextView
            android:id="@+id/orderstatustext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/setting_header"
            android:gravity="center_vertical"
            android:paddingBottom="3dp"
            android:paddingLeft="20dp"
            android:paddingTop="3dp"
            android:text="Order Status"
            android:textColor="@color/heading_color"
            android:textSize="@dimen/text_size_large" />

        <LinearLayout
            android:id="@+id/orderStatusSubLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/orderstatustext"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="15dp"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:text="Completed"
                android:textColor="@color/red_color"
                android:textSize="@dimen/text_size_medium" />

            <LinearLayout
                android:id="@+id/summary_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="end"
                android:orientation="horizontal"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:text="Total  "
                    android:textColor="@color/darker_gray"
                    android:textSize="@dimen/text_size_medium" />

                <TextView
                    android:id="@+id/tv_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$5.45"
                    android:textColor="@color/darker_gray"
                    android:textSize="@dimen/text_size_medium" />
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/cancelText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/orderStatusSubLayout"
            android:gravity="bottom"
            android:paddingBottom="15dp"
            android:paddingLeft="20dp"
            android:text="Cancellation Reason : Canceled by user."
            android:textColor="@color/darker_gray"
            android:textSize="@dimen/text_size_medium"
            android:visibility="visible" />

    </RelativeLayout>

    <com.olo.jambajuice.Views.Generic.SemiBoldTextView
        android:id="@+id/ord_addr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/orderStatusLayout"
        android:background="@color/setting_header"
        android:gravity="center_vertical"
        android:paddingBottom="3dp"
        android:paddingLeft="20dp"
        android:paddingTop="3dp"
        android:text="Ordered At"
        android:textColor="@color/heading_color"
        android:textSize="@dimen/text_size_large" />

    <RelativeLayout
        android:id="@+id/store_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ord_addr"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="15dp">

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/screen_bg"
            android:paddingTop="15dp" />

        <TextView
            android:id="@+id/store_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tv_amount"
            android:ellipsize="end"
            android:gravity="bottom"
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:text="Store Name"
            android:textColor="@color/darker_gray"
            android:textSize="@dimen/text_size_large" />

        <TextView
            android:id="@+id/store_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/store_title"
            android:layout_toLeftOf="@+id/tv_amount"
            android:paddingLeft="20dp"
            android:text="StoreAddress"
            android:textColor="@color/darker_gray"
            android:textSize="@dimen/text_size_medium" />

        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/forward_arrow_gray"
            android:gravity="center"
            android:paddingRight="15dp"
            android:textColor="@color/darker_gray"
            android:textSize="@dimen/text_size_medium" />
    </RelativeLayout>
</RelativeLayout>
