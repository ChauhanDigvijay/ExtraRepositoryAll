<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/hist_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:background="@null">

        <RelativeLayout
            android:id="@+id/hist_relative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingTop="15dp">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Orange C-Booster"
                android:textColor="@color/brown_color"
                android:textSize="@dimen/text_size_large" />

            <TextView
                android:id="@+id/tv_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title"
                android:maxLines="2"
                android:text="DAILY VITAMIN"
                android:textAllCaps="true"
                android:textColor="@color/darker_gray"
                android:textSize="@dimen/text_size_medium" />

            <LinearLayout
                android:id="@+id/tv_itemsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/seeMoreAndLessLayout"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tv_detail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="Medium"
                    android:textAllCaps="true"
                    android:textColor="@color/darker_gray"
                    android:textSize="@dimen/text_size_medium"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@+id/tv_items"
                    android:layout_weight="0.5"
                    android:drawablePadding="5dp"
                    android:gravity="right"
                    android:paddingRight="15dp"
                    android:text="$5.49"
                    android:textColor="@color/blue_color"
                    android:textSize="@dimen/text_size_medium" />
            </LinearLayout>


            <RelativeLayout
                android:id="@+id/seeMoreAndLessLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_items">

                <com.olo.jambajuice.Views.Generic.SemiBoldTextView
                    android:id="@+id/txtSeeMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="See More"
                    android:textColor="@color/red_color"
                    android:textSize="@dimen/text_size_medium"
                    android:visibility="gone" />

                <com.olo.jambajuice.Views.Generic.SemiBoldTextView
                    android:id="@+id/txtSeeLess"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="See Less"
                    android:textColor="@color/red_color"
                    android:textSize="@dimen/text_size_medium"
                    android:visibility="gone" />
            </RelativeLayout>

        </RelativeLayout>

        <!--<View-->
