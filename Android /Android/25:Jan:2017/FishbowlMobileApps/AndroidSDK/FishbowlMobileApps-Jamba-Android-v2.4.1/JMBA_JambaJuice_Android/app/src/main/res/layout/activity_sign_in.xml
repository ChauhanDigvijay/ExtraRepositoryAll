<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.olo.jambajuice.Activites.NonGeneric.Authentication.SignIn.SignInActivity">

    <ImageView
        android:id="@+id/splash_bg_layout"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:layout_height="match_parent" />
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/continueBtn"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.olo.jambajuice.Views.Generic.SemiBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/text_size_large"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:textColor="@color/dark_green"
                android:text="Log in with your\nJamba&#174; Insider account."/>

            <EditText
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@null"
                android:gravity="center"
                android:hint="Email or phone number"
                android:inputType="textEmailAddress"
                android:maxEms="15"
                android:minEms="15"
                android:textSize="@dimen/text_size_large"
                android:textColor="@color/darker_gray"/>

            <EditText
                android:id="@+id/password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@null"
                android:gravity="center"
                android:hint="Password"
                android:inputType="textPassword"
                android:maxEms="15"
                android:minEms="15"
                android:textSize="@dimen/text_size_large"
                android:textColor="@color/darker_gray"/>

        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/poweredBy"
        layout="@layout/powered_by_spend_go"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/forgotPassword"/>

    <TextView
        android:id="@+id/forgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/signIn"
        android:layout_centerHorizontal="true"
        android:text="Forgot your password?"
        android:textColor="@color/semi_transparent"
        android:textSize="@dimen/text_size_medium"/>

    <com.olo.jambajuice.Views.Generic.SemiBoldButton
        android:id="@+id/signIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/red_color"
        android:text="Log In"
        android:textSize="@dimen/text_size_large"
        android:textAllCaps="false"
        android:textColor="@android:color/white"/>

</RelativeLayout>
