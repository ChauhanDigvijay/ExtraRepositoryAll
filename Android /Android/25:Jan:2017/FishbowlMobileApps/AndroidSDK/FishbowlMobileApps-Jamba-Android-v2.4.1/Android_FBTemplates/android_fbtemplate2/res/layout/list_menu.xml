<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/spinnerLayout"
        android:layout_width="fill_parent"
        android:layout_height="120dip"
        android:layout_marginTop="0dp"
        android:background="@drawable/background"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/text_main_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dip"
            android:layout_marginTop="25dp"
            android:padding="10dp"
            android:text="Sign in or Sign up"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/Red"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sub_text_email"
            style="@style/text.12.prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dip"
            android:padding="10dp"
            android:text="Enjoy the benefit of Zpizza.Save Favourite places an express order, and track your rewardal"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
                    android:padding="5dp"
        android:layout_marginTop="0dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/drawerTitle"
            style="@style/text.14.prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/background_top"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/itemLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="0dp"
        android:paddingTop="@dimen/feed_item_padding_top_bottom"
        android:paddingBottom="@dimen/feed_item_padding_top_bottom"
        android:orientation="vertical"
        android:padding="7dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:padding="5dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/drawer_icon"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/feed_item_padding_top_bottom"
                android:paddingRight="@dimen/feed_item_padding_top_bottom" />

            <TextView
                android:id="@+id/drawer_itemName"
                style="@style/text.17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#CC0033"
                android:textStyle="bold|normal"
                android:typeface="sans" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>