<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_vertical"
    android:scrollbars="none" >

    <LinearLayout
        android:id="@+id/topframe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:orientation="vertical"
        android:weightSum="100" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="40"
            android:background="@color/White" >

            <FrameLayout
                android:id="@+id/vpimageframe"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/White"
                android:orientation="vertical" >

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/feedImage1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:minHeight="250dp"
                    android:scaleType="fitXY" />
            </FrameLayout>

            <TextView
                android:id="@+id/expenseType1"
                style="@style/text.15.prompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:padding="20dp"
                android:text="Name"
                android:textColor="@color/Red"
                android:textStyle="bold" />
        </RelativeLayout>

        <View
            android:id="@+id/viewsep"
            android:layout_width="match_parent"
            android:layout_height=".5px"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/fbbrown" />

        <LinearLayout
            android:id="@+id/vptextlinearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@color/White"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" >

            <TextView
                android:id="@+id/expenseType"
                style="@style/text.15.prompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="Description"
                android:textColor="@color/fbbrown"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/todayDate"
                style="@style/text.13.prompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/desc"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/btn_next"
                android:text="Red Onions,Bell Paper,Button,Tomatoes,Tomato Saurce"
                android:textColor="@color/fbbrown" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/fboffwhite"
                android:orientation="horizontal"
                android:padding="10dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <TextView
                        style="@style/text.13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Select a size"
                        android:textColor="@color/fbbrown"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/spinner1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/two_side_round_corner_button"
                        android:gravity="center_vertical"
                        android:textColor="@color/fbbrown" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <TextView
                        style="@style/text.13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Select a quantity"
                        android:textColor="@color/fbbrown"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/spinner2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@drawable/two_side_round_corner_button"
                        android:gravity="center_vertical" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/vptextlinearlayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/detailMsg"
                    style="@style/text.13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="CRUST"
                    android:textColor="@color/fbbrown"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/fbred"
                    android:orientation="vertical" >

                    <RadioButton
                        android:id="@+id/radioButton1"
                        style="@style/text.13"
                        android:buttonTint="@color/fbred"
                        android:height="20dp"
                        android:text="Regular Crust"
                        android:textColor="@color/fbbrown"
                        android:width="20dp" />

                    <RadioButton
                        android:id="@+id/radioButton2"
                        style="@style/text.13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/fbred"
                        android:text="Wheat Crust "
                        android:textColor="@color/fbbrown" />

                    <RadioButton
                        android:id="@+id/radioButton3"
                        style="@style/text.13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/fbred"
                        android:text="Wheat Crust "
                        android:textColor="@color/fbbrown" />

                    <RadioButton
                        android:id="@+id/radioButton4"
                        style="@style/text.13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/fbred"
                        android:text="Wheat Crust"
                        android:textColor="@color/fbbrown" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/vptextlinearlayout1s"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/detailMsg1"
                    style="@style/text.13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="EXTRA TOPPINGS"
                    android:textColor="@color/fbbrown"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/radioGroup2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/fbred"
                    android:orientation="vertical" >

                    <RadioButton
                        android:id="@+id/radioButton11"
                        style="@style/text.13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/fbred"
                        android:text="WHOLE LG"
                        android:textColor="@color/fbbrown" />

                    <RadioButton
                        android:id="@+id/radioButton21"
                        style="@style/text.13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/fbred"
                        android:text="1ST HALF LG"
                        android:textColor="@color/fbbrown" />

                    <RadioButton
                        android:id="@+id/radioButton31"
                        style="@style/text.13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/fbred"
                        android:text="1ST HALF LG"
                        android:textColor="@color/fbbrown" />

                    <RadioButton
                        android:id="@+id/radioButton41"
                        style="@style/text.13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/fbred"
                        android:text="1ST HALF LG "
                        android:textColor="@color/fbbrown" />
                </RadioGroup>
            </LinearLayout>

            <Button
                android:id="@+id/contnue_btn"
                style="@style/nametext"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/Red1"
                android:gravity="center"
                android:onClick="orderscreen"
                android:text="Add To Order"
                android:textColor="@color/White"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>