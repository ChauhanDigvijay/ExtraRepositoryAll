<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <ImageView
        android:id="@+id/splash_bg_layout"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:layout_height="match_parent" />
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/continueBtn"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.olo.jambajuice.Views.Generic.SemiBoldTextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="20dp"
                android:textSize="@dimen/text_size_large"
                android:textColor="@color/dark_green"
                android:text="You should receive an email containing a link to reset your password momentarily."/>

            <com.olo.jambajuice.Views.Generic.SemiBoldTextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="20dp"
                android:textSize="@dimen/text_size_large"
                android:textColor="@color/dark_green"
                android:text="Click on the link and it will take you to a page where you can enter the new password."/>

            <com.olo.jambajuice.Views.Generic.SemiBoldTextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="20dp"
                android:textSize="@dimen/text_size_large"
                android:textColor="@color/dark_green"
                android:text="Return to the app and proceed to Sign In."/>

        </LinearLayout>
    </ScrollView>

    <com.olo.jambajuice.Views.Generic.SemiBoldButton
        android:id="@+id/okayBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red_color"
        android:text="Ok"
        android:textSize="@dimen/text_size_large"
        android:textColor="@android:color/white"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>
