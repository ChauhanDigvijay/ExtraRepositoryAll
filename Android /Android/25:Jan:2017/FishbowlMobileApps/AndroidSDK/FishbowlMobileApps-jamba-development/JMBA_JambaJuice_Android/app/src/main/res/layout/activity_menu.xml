    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/menuStoreChangeHeader">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/continueBtn"
            android:layout_alignParentTop="true">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!--<LinearLayout-->
                <!--android:id="@+id/btnsTransparent"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="@dimen/basket_icon_top_margin"-->
                <!--android:orientation="horizontal">-->

                <!--<com.olo.jambajuice.Views.Generic.SemiBoldButton-->
                <!--android:id="@+id/menuBtn"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="match_parent"-->
