<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/semi_transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/round_corner_white"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/jambaLogoLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/jambaLogo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@android:color/transparent"
                    android:padding="20dp"
                    android:src="@drawable/jamba_header_logo" />

                <ImageButton
                    android:id="@+id/imgHeaderMapIcon1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@android:color/transparent"
                    android:padding="20dp"
                    android:src="@drawable/close_red" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/newOfferTextLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/newOfferText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@android:color/transparent"
                    android:text="New Offer"
                    android:textColor="@color/red_color"
                    android:textSize="@dimen/text_size_xlarge" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/headerOfferTitleLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp">

                <com.olo.jambajuice.Views.Generic.SemiBoldTextView
                    android:id="@+id/headerOfferTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="John - Let Jamba carter your next events Customer should able to view the offer via push notification from Fishbowl 3.0 Platform."
                    android:textColor="@color/DimGray"
                    android:textSize="@dimen/text_size_xlarge" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/horLineLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="20dp"
                    android:background="@color/GrayHot"></View>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/infoLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp">

                <com.olo.jambajuice.Views.Generic.SemiBoldTextView
                    android:id="@+id/infoText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="Your offer is available in the Rewards and Promotion section, and can be redeemed when you checkout"
                    android:textColor="@color/DimGray"
                    android:textSize="@dimen/text_size_medium" />
            </RelativeLayout>

            <com.olo.jambajuice.Views.Generic.SemiBoldButton
                android:id="@+id/viewOfferBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/red_color"
                android:text="VIEW OFFER"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_large" />

            <com.olo.jambajuice.Views.Generic.SemiBoldButton
                android:id="@+id/dismissBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/red_color"
                android:text="DISMISS"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_large" />
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>