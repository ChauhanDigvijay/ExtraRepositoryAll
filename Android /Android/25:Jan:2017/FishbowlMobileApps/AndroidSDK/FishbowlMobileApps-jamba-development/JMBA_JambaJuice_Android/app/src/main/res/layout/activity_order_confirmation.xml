<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <com.olo.jambajuice.Views.Generic.BoldTextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="@dimen/confirmation_screen_top_margin"
            android:gravity="center"
            android:text="We've received your order!"
            android:textColor="@color/orange_color"
            android:textSize="@dimen/text_size_xxlarge" />

        <TextView
            android:id="@+id/tv_time_info"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Your order wil be ready at 10:00 pm today and you should receive an email confirmation shortly."
            android:textColor="@color/brown_color"
            android:textSize="@dimen/text_size_large" />

        <TextView
            android:id="@+id/total_amount"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_time_info"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="TOTAL: $5.63"
            android:textStyle="bold"
            android:textColor="@color/basket_orange_color"
            android:textSize="@dimen/text_size_xxlarge" />

        <RelativeLayout
            android:id="@+id/main_container"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_time_info"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="50dp">


            <RelativeLayout
                android:id="@+id/store_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp">

                    <ImageView
                        android:id="@+id/directions"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/direction_grey" />

                    <RelativeLayout
                        android:id="@+id/get_directionsLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/directions"
                        android:gravity="center_horizontal">

                        <com.olo.jambajuice.Views.Generic.BoldTextView
                            android:id="@+id/get_directions"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Get Directions"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_large" />

                        <TextView
                            android:id="@+id/tv_store_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/get_directions"
                            android:text="Church &amp; Market\n 3242 7th Avenue."
                            android:textColor="@color/darker_gray"
                            android:textSize="@dimen/text_size_medium" />

                        <TextView
                            android:id="@+id/tv_store_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_store_name"
                            android:text="2034, Market Street"
                            android:textColor="@color/darker_gray"
                            android:textSize="@dimen/text_size_medium" />
                    </RelativeLayout>
                </RelativeLayout>

                <ImageView
                    android:id="@+id/dirToNext"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/forward_arrow_gray" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/phone_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/store_layout"
                android:layout_below="@+id/store_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp">

                    <ImageView
                        android:id="@+id/call"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/call_grey" />

                    <RelativeLayout
                        android:id="@+id/call_storeLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/call"
                        android:gravity="center_horizontal">

                        <com.olo.jambajuice.Views.Generic.BoldTextView
                            android:id="@+id/call_store"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Call Store"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_large" />

                        <TextView
                            android:id="@+id/tv_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/call_store"
                            android:text="(555) 555555"
                            android:textColor="@color/darker_gray"
                            android:textSize="@dimen/text_size_medium" />
                    </RelativeLayout>

                </RelativeLayout>

                <ImageView
                    android:id="@+id/dirToNext1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/forward_arrow_gray" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/orderStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/store_layout"
                android:layout_below="@+id/phone_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp">

                    <ImageView
                        android:id="@+id/oSIcon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/order_status" />

                    <RelativeLayout
                        android:id="@+id/orderStatusTextLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/oSIcon"
                        android:gravity="center_horizontal">

                        <com.olo.jambajuice.Views.Generic.BoldTextView
                            android:id="@+id/orderStatusText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Order Status"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_large" />

                        <TextView
                            android:id="@+id/orderstatus_find"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/orderStatusText"
                            android:text="Find your order"
                            android:textColor="@color/darker_gray"
                            android:textSize="@dimen/text_size_medium" />
                    </RelativeLayout>
                </RelativeLayout>

                <ImageView
                    android:id="@+id/dirToNext2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/forward_arrow_gray" />
            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/jambainsider_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_container"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <com.olo.jambajuice.Views.Generic.NexaRustSansBlackTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:text="BECOME A"
                android:textColor="@color/medium_green"
                android:textSize="@dimen/text_size_xxlarge" />

            <com.olo.jambajuice.Views.Generic.NexaRustSansBlackTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:drawableRight="@drawable/forward_arrow_gray"
                android:gravity="center_horizontal"
                android:text="JAMBA&#174; INSIDER"
                android:textColor="@color/medium_green"
                android:textSize="@dimen/text_size_xxlarge" />

            <com.olo.jambajuice.Views.Generic.SemiBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="and save $3 on your next order"
                android:textColor="@color/dark_green"
                android:textSize="@dimen/text_size_medium" />
        </LinearLayout>

        <com.olo.jambajuice.Views.Generic.SemiBoldButton
            android:id="@+id/close_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/jambainsider_layout"
            android:layout_margin="20dp"
            android:background="@drawable/round_corner_orange"
            android:text="OK"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_large" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@+id/close_button" />

    </RelativeLayout>
</ScrollView>