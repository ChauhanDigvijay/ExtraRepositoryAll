<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_bg">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/makePreferred"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <fragment
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/top_container_height"/>

                <View
                    android:id="@+id/transparentView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/top_container_height"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/storeAddressName"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentLeft="true"
                    android:text="Address"
                    android:textColor="@color/brown_color"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/storeAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/storeAddressName"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toLeftOf="@+id/directionBtn"
                    android:text="2014 Market Street San Fransisco, CA 94119"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@android:color/darker_gray"/>

                <ImageButton
                    android:id="@+id/directionBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/route_direction"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@android:color/holo_blue_light"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/darker_gray"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/contactNumberText"
                    android:layout_marginLeft="10dp"
                    android:text="Phone"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/brown_color"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/contactNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toLeftOf="@+id/callBtn"
                    android:text="(412) 703-6011"
                    android:layout_below="@+id/contactNumberText"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@android:color/darker_gray"/>

                <ImageButton
                    android:id="@+id/callBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/green_call_icon"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@android:color/holo_blue_light"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/darker_gray"/>

            <TextView
                android:id="@+id/hoursHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Hours"
                android:textColor="@color/brown_color"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/openTimmings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/timingsFetchError"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Unable to get store timings."
                    android:textSize="@dimen/text_size_medium"
                    android:visibility="gone"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <com.olo.jambajuice.Views.Generic.SemiBoldButton
        android:id="@+id/makePreferred"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:text="Make Preferred Store"
        android:layout_alignWithParentIfMissing="true"
        android:textAllCaps="false"
        android:textSize="@dimen/text_size_large"
        android:textColor="@color/red_color"
        android:layout_above="@+id/selectStore"/>

    <com.olo.jambajuice.Views.Generic.SemiBoldButton
        android:id="@+id/selectStore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red_color"
        android:text="Select Store"
        android:layout_alignWithParentIfMissing="true"
        android:textAllCaps="false"
        android:textSize="@dimen/text_size_large"
        android:textColor="@android:color/white"
        android:layout_above="@+id/changeStore"/>

    <com.olo.jambajuice.Views.Generic.SemiBoldButton
        android:id="@+id/changeStore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red_color"
        android:text="Change Store"
        android:layout_alignWithParentIfMissing="true"
        android:textAllCaps="false"
        android:textSize="@dimen/text_size_large"
        android:textColor="@android:color/white"
        android:layout_above="@+id/startOrder"/>

    <com.olo.jambajuice.Views.Generic.SemiBoldButton
        android:id="@+id/startOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red_color"
        android:text="Start New Order"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        android:textSize="@dimen/text_size_large"
        android:textColor="@android:color/white"/>

    <include
        android:id="@+id/screenDisableView"
        layout="@layout/disable_view"/>
</RelativeLayout>