<?xml version="1.0" encoding="utf-8"?>

<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:background="@color/red_color_1"
        android:gravity="center"
        android:tag="Bottom2">

        <TextView
            android:id="@+id/tv_favourite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Favourite"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/hist_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null">

        <RelativeLayout
            android:id="@+id/hist_relative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginRight="5dp"
            android:paddingBottom="15dp"
            android:paddingTop="15dp">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/tv_amount"
                android:text="Orange C-Booster"
                android:textColor="@color/brown_color"
                android:textSize="@dimen/text_size_large" />

            <TextView
                android:id="@+id/tv_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title"
                android:layout_toLeftOf="@+id/tv_amount"
                android:text="MEDIUM, DAILY VITAMIN"
                android:textColor="@color/darker_gray"
                android:textSize="@dimen/text_size_medium" />

            <TextView
                android:id="@+id/tv_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_detail"
                android:maxLines="2"
                android:textAllCaps="true"
                android:textColor="@color/darker_gray"
                android:textSize="@dimen/text_size_medium"
                android:visibility="gone" />

            <com.olo.jambajuice.Views.Generic.SemiBoldTextView
                android:id="@+id/txtSeeMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_items"
                android:paddingBottom="5dp"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="See More"
                android:textColor="@color/red_color"
                android:textSize="@dimen/text_size_medium"
                android:visibility="gone" />

            <com.olo.jambajuice.Views.Generic.SemiBoldTextView
                android:id="@+id/txtSeeLess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_items"
                android:paddingBottom="5dp"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="See Less"
                android:textColor="@color/red_color"
                android:textSize="@dimen/text_size_medium"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/forward_arrow_gray"
                android:gravity="center"
                android:text="$5.49"
                android:textColor="@color/blue_color"
                android:textSize="@dimen/text_size_medium" />
        </RelativeLayout>

        <View
            android:id="@+id/orline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/hist_relative"
            android:layout_marginTop="5dp"
            android:background="@color/gray"
            android:visibility="gone" />

        <TextView
            android:id="@+id/order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/hist_relative"
            android:layout_marginBottom="5dp"
            android:text="In Progress"
            android:textSize="@dimen/text_size_medium" />
    </RelativeLayout>
</com.daimajia.swipe.SwipeLayout><!--
