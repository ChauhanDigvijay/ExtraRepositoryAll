<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include android:id="@+id/glow_layout" layout="@layout/blue_glow_bg"></include>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/continueBtn">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.olo.jambajuice.Views.Generic.BoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="80dp"
                android:gravity="center_horizontal"
                android:text="You are almost there!"
                android:textStyle="bold"
                android:textColor="@color/orange_color"
                android:textSize="@dimen/text_size_xxlarge" />

            <com.olo.jambajuice.Views.Generic.SemiBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:text="Please check your email and\nfollow the instructions to verify\nyour email address."
                android:textColor="@color/dark_green"
                android:textSize="@dimen/text_size_large" />

            <com.olo.jambajuice.Views.Generic.SemiBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="Return to the app and\nproceed to Log In."
                android:textColor="@color/dark_green"
                android:textSize="@dimen/text_size_large" />

        </LinearLayout>
    </ScrollView>

    <com.olo.jambajuice.Views.Generic.SemiBoldButton
        android:id="@+id/accountCreatedBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/round_corner_red"
        android:layout_margin="@dimen/margin_20"
        android:text="Ok"
        android:textSize="@dimen/text_size_large"
        android:textAllCaps="false"
        android:textColor="@android:color/white" />

</RelativeLayout>
