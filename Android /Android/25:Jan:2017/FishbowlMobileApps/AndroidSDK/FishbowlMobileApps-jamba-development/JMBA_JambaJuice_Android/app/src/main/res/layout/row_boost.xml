<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <EditText
            android:id="@+id/etxt_special"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:layout_toLeftOf="@+id/charLimit"
            android:hint="Special Instructions (Optional)"
            android:maxLength="40"
            android:maxLines="3"
            android:textSize="@dimen/text_size_large"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/charLimit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="3dp"
            android:textColor="@color/darker_gray"
            android:textSize="@dimen/text_size_medium"
            android:visibility="invisible" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/childLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/textViews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/text_white"
            android:visibility="visible"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <RelativeLayout
                android:id="@+id/modifierQuantityLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="@dimen/margin_5"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_centerVertical="true"
                android:background="@drawable/border_quantity_modifier">

                <Spinner
                    android:id="@+id/modifierQuantity"
                    android:layout_width="@dimen/spinner_width_size"
                    android:layout_height="@dimen/spinner_size"
                    android:layout_centerInParent="true"
                    android:background="@null"
                    android:dropDownWidth="100dp"
                    android:spinnerMode="dropdown" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/modifierInfoLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/img_selected"
                android:layout_toRightOf="@+id/modifierQuantityLayout"
                android:gravity="center_vertical"
                android:padding="@dimen/margin_5">

                <TextView
                    android:id="@+id/tv_boost_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/margin_5"
                    android:text="Reward one"
                    android:textColor="#8E8E93"
                    android:textSize="@dimen/text_size_large" />

                <TextView
                    android:id="@+id/tv_price_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/tv_boost_detail"
                    android:paddingLeft="@dimen/margin_5"
                    android:text="2 x"
                    android:textColor="#8E8E93"
                    android:textSize="@dimen/text_size_medium" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_boost_detail"
                    android:layout_toRightOf="@+id/tv_price_quantity"
                    android:paddingLeft="@dimen/margin_5"
                    android:textColor="#8E8E93"
                    android:textSize="@dimen/text_size_medium" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/img_selected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:minHeight="0dp"
                android:paddingBottom="3dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="3dp"
                android:src="@drawable/check_orange"
                android:textAllCaps="false"
                android:textColor="@color/orange_color" />

        </RelativeLayout>

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/textViews"
            android:background="@color/toolbar_bg" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/expChildViews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F1F1F1"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/expChildLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:paddingBottom="20dp"
            android:paddingTop="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/img_parent_selected"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_parent_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:text="Reward one"
                    android:textColor="#4B4B4B"
                    android:textSize="@dimen/text_size_large" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/img_parent_selected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:minHeight="0dp"
                android:paddingBottom="3dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="3dp"
                android:src="@drawable/exp_up_gray"
                android:textAllCaps="false"
                android:textColor="@color/orange_color" />

        </RelativeLayout>

        <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/expChildLayout"
            android:background="@color/toolbar_bg" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/grandChildViews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/expChildViews"
        android:orientation="vertical"
        android:visibility="gone"></LinearLayout>


</RelativeLayout>