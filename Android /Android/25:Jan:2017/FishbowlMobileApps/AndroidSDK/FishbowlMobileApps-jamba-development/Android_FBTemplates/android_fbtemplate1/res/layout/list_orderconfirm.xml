<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
   >

    <ImageView
        android:id="@+id/status_icon_img"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignBottom="@+id/delete"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/delete"
        android:padding="4dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/btn_next"
        style="@style/text.14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/round_corner_white"
        android:gravity="center"
        android:inputType="number"
        android:paddingLeft="@dimen/feed_item_profile_info_padd1"
        android:paddingRight="@dimen/feed_item_profile_info_padd1"
        android:textColor="@color/fbbrown"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/expenseType"
        style="@style/text.17.prompt"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_toLeftOf="@+id/field_valueaas"
        android:layout_toRightOf="@+id/btn_next"
        android:singleLine="false"
        android:text="TITles"
        android:textColor="@color/fbbrown"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/desc"
        style="@style/text.16"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/expenseType"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/btn_next"
        android:text="Djja"
        android:textColor="@color/fbbrown" />

    <TextView
        android:id="@+id/todayDate"
        style="@style/text.12.prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/desc"
        android:layout_toRightOf="@+id/btn_next"
        android:maxLines="2"
        android:minLines="2"
        android:paddingLeft="4dp"
        android:text="Red Onions,Bell Paper,Button,Tomatoes,Tomato Saurce"
        android:textColor="@color/fbbrown"
       />

    <LinearLayout
        android:id="@+id/newlinear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/todayDate"
        android:layout_toRightOf="@+id/btn_next"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/edit_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="edit"
            android:textColor="@color/Red"
            android:textStyle="bold"
           />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text=" | "
            android:textColor="@color/Red"
            android:textStyle="bold"
          />

        <TextView
            android:id="@+id/remove_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="remove"
            android:textColor="@color/Red"
            android:textStyle="bold"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/totalDollar"
        style="@style/text.15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/todayDate"
        android:layout_marginLeft="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:paddingRight="1dp"
        android:text="ddkk"
        android:textColor="@color/fbbrown" />

    <EditText
        android:id="@+id/field_valueaas"
        style="@style/text.15"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/totalDollar"
        android:layout_alignBottom="@+id/totalDollar"
        android:layout_toLeftOf="@+id/totalDollar"
        android:background="@color/White"
        android:ems="10"
        android:gravity="center_horizontal"
        android:inputType="number"
        android:padding="5dp"
        android:textColor="@color/fbbrown"
        android:textColorHint="@color/dark_gray" />

</RelativeLayout>