<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/relativemain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:fitsSystemWindows="true"
            android:gravity="top|start"
            android:orientation="vertical"
            android:paddingBottom="@dimen/feed_item_padding_top_bottom"
            android:paddingTop="@dimen/feed_item_padding_top_bottom"
            android:weightSum="100" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="5"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/feed_item_padding_left_right"
                android:paddingRight="@dimen/feed_item_padding_left_right"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/text_orderno"
                    style="@style/text.11"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Sr"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/Red"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_orderno1"
                    style="@style/text.11"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="Item"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/Red"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_orderno2"
                    style="@style/text.11"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Qty"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/Red"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_orderno3"
                    style="@style/text.11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Item Prs"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/Red"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="50"
                android:orientation="vertical"
                android:paddingLeft="@dimen/feed_item_padding_left_right2"
                android:paddingRight="@dimen/feed_item_padding_left_right2" >

                <TextView
                    android:id="@+id/text_noitem"
                    style="@style/text.14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Locationname"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <ListView
                    android:id="@+id/mobile_listdf"
                    style="@style/text.20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:divider="@color/Red" >
                </ListView>
            </LinearLayout>

            <ImageView
                android:id="@+id/startchata11ws"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:src="@drawable/bannerwhit"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@color/Gray" />

            
            
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="10"
                android:gravity="top|start"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/feed_item_padding_left_right"
                android:paddingRight="@dimen/feed_item_padding_left_right" >

                <TextView
                    android:id="@+id/registration_start_cousd"
                    style="@style/text.18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="TOTAL"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/Red"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/total_count"
                    style="@style/text.18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:paddingLeft="@dimen/feed_item_padding_left_right"
                    android:paddingRight="@dimen/feed_item_padding_left_right"
                    android:text="Dj"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/Red"
                    android:textStyle="bold" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="35"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="@dimen/feed_item_padding_left_right"
                android:paddingRight="@dimen/feed_item_padding_left_right" >

                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/Gray"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/text_locationname"
                    style="@style/text.14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Locationname"
                    android:textColor="@color/fbbrown"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/text_location"
                    style="@style/text.14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:textColor="@color/fbbrown"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/text_gen"
                    style="@style/text.12.prompt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/fbbrown"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/type_txt"
                    style="@style/text.12.prompt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/fbbrown"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/date_txt"
                    style="@style/text.12.prompt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/fbbrown"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/time_txt"
                    style="@style/text.12.prompt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/fbbrown"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/Gray" />

                <TextView
                    android:id="@+id/text_gen1"
                    style="@style/text.19.prompt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Do you have a promro code ?"
                    android:textColor="@color/fbbrown"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/text_gen2"
                    style="@style/text.19.prompt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Click here to enter your code."
                    android:textColor="@color/fbbrown"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/Gray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/feed_item_padding_top_bottom"
                android:paddingLeft="@dimen/feed_item_padding_left_right2"
                android:paddingRight="@dimen/feed_item_padding_left_right2"
                android:paddingTop="@dimen/feed_item_padding_top_bottom"
                android:weightSum="10" >

                <Button
                    android:id="@+id/addmore"
                    style="@style/nametext"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="3.3"
                    android:background="@color/Red1"
                    android:gravity="center"
                    android:onClick="backAndAdd"
                    android:text="ADD MORE"
                    android:textColor="@color/White"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/confirm_btn"
                    style="@style/nametext"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="3.3"
                    android:background="@color/Red1"
                    android:gravity="center"
                    android:onClick="Confirm"
                    android:text="PAYMENT ORDER"
                    android:textColor="@color/White"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/cont_btn"
                    style="@style/nametext"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="3.3"
                    android:background="@color/Red1"
                    android:gravity="center"
                    android:onClick="order"
                    android:text="CONTINUE"
                    android:textColor="@color/White"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/White"
        android:choiceMode="singleChoice"
        android:divider="@color/Red"
        android:dividerHeight="1dp" />

</android.support.v4.widget.DrawerLayout>