<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:focusable="false"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/status_icon_img"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignBottom="@+id/delete"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/delete"
        android:focusable="false"
        android:padding="4dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/storename"
        style="@style/text.15.prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/btn_next"
        android:focusable="false"
        android:text="storename"
        android:textColor="@color/fbbrown"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/storestate"
        style="@style/text.13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/storename"
        android:paddingTop="5dp"
         android:paddingBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/btn_next"
        android:focusable="false"
        android:text="store state and city "
        android:textColor="@color/fbbrown" />

    <TextView
        android:id="@+id/storelocation"
        style="@style/text.13.prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/storestate"
        android:layout_toRightOf="@+id/btn_next"
        android:focusable="false"
        android:paddingLeft="4dp"
        android:text="Store location"
        android:textColor="@color/fbbrown" />

    <TextView
        android:id="@+id/storezipcode"
        style="@style/text.13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/storelocation"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignTop="@+id/storeno"
        android:focusable="false"
        android:paddingRight="1dp"
        android:text="statezipcode"
        android:textColor="@color/fbbrown" />

    <TextView
        android:id="@+id/storeno"
        style="@style/text.13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/storezipcode"
        android:layout_below="@+id/storename"
        android:focusable="false"
        android:gravity="center_horizontal"
        android:paddingRight="1dp"
        android:textColor="@color/fbbrown"
        android:textColorHint="@color/dark_gray" />

</RelativeLayout>