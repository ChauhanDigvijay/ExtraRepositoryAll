<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/spinnerLayout"
        android:layout_width="fill_parent"
        android:layout_height="120dip"
        android:layout_marginTop="0dp"
        android:background="@drawable/background"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/text_main_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dip"
            android:layout_marginTop="25dp"
            android:padding="10dp"
            android:text="Sign in or Sign up"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/Red"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sub_text_email"
            style="@style/text.12.prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dip"
            android:maxLines="3"
            android:minLines="3"
            android:padding="10dp"
            android:text="Enjoy the benefit of Zpizza.Save Favourite places an express order."
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="0dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/drawerTitle"
            style="@style/text.14.prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/background_top"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/itemLayout"
        android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp" >

                <ImageView
                    android:id="@+id/drawer_icon"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true" />

                <TextView
                    android:id="@+id/drawer_itemName"
                    style="@style/text.12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toLeftOf="@+id/drawer_icon2"
                    android:layout_toRightOf="@+id/drawer_icon"
                  
                    android:text="sjjdjdj"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/fbbrown" />

                <ImageView
                    android:id="@+id/drawer_icon2"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:src="@drawable/forward" />
            </RelativeLayout>
             
        </LinearLayout>
   

</RelativeLayout>