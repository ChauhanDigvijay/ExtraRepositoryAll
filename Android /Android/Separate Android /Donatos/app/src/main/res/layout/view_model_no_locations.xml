<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/locations.list.row.hours.padding"
    android:layout_marginRight="@dimen/locations.list.row.hours.padding"
    android:orientation="vertical"
    android:paddingTop="@dimen/locations.list.row.hours.padding">

    <TextView
        android:id="@+id/locations_not_found"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|bottom|center_vertical|fill_vertical|center|fill"
        android:text="@string/locations.search.nolocationsfound"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="17sp" />
</LinearLayout>
