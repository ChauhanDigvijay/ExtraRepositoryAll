<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/locations.list.row.hours.padding"
    android:layout_marginRight="@dimen/locations.list.row.hours.padding"
    android:background="@drawable/border_bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/locations.list.row.hours.padding"
    android:paddingTop="@dimen/locations.list.row.hours.padding">

    <TextView
        android:id="@+id/changeitem_title"
       fontPath="fonts/Cabin-SemiBold.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textColor="@color/gray"
        android:textSize="10sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/changeitem_change"
            fontPath="fonts/Cabin-SemiBold.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textAllCaps="true"
            android:textColor="@color/donatosRed"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/changeitem_selection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/changeitem_change"
            android:layout_toStartOf="@id/changeitem_change"
            android:ellipsize="none"
            android:maxLines="3"
            android:text="@string/checkout.when.assoonaspossible"
            android:textColor="@color/black"
            android:textSize="19sp" />
    </RelativeLayout>
</LinearLayout>
