<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"


    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <ImageView
        android:contentDescription="@string/dashboard.header.orderagain"
        android:id="@+id/dashboard_order_image"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:scaleType="centerCrop" />

    <ImageView
        android:contentDescription="@string/dashboard.header.orderagain"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/menu_item_overlay" />

    <ImageView
        android:id="@+id/dashboard_order_favorite"
        android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/ic_favorite" />

    <RelativeLayout
        android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TextView
            android:id="@+id/dashboard_order_title"
            android:layout_gravity="top|bottom|center_vertical|fill_vertical|center|fill"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="20sp"

            fontPath="fonts/Cabin-Bold.ttf" />

        <TextView
            android:ellipsize="end"
            android:id="@+id/dashboard_order_subtitle"
            android:layout_below="@id/dashboard_order_title"
            android:layout_gravity="top|bottom|center_vertical|fill_vertical|center|fill"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:maxLines="3"
            android:paddingEnd="@dimen/dashboard.hours.orders.subtitle.margin.right"
            android:paddingLeft="@dimen/dashboard.hours.orders.subtitle.margin.left"
            android:paddingRight="@dimen/dashboard.hours.orders.subtitle.margin.right"
            android:paddingStart="@dimen/dashboard.hours.orders.subtitle.margin.left"
            android:scrollHorizontally="false"
            android:textSize="14sp"
           />

        <LinearLayout
            android:layout_below="@+id/dashboard_order_subtitle"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

            <TextView
                android:background="@drawable/ic_dashboard_items_oval"
                android:id="@+id/dashboard_order_items_count"
                android:layout_gravity="top|bottom|center_vertical|fill_vertical|center|fill"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:paddingBottom="2dp"
                android:paddingLeft="9dp"
                android:paddingRight="9dp"
                android:paddingTop="1.1dp"
                android:textAllCaps="true"
                android:textSize="11sp"

                fontPath="fonts/Cabin-SemiBold.ttf" />

            <TextView
                android:id="@+id/dashboard_order_price"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginStart="6dp"
                android:layout_width="wrap_content"
                android:textSize="14sp"

                fontPath="fonts/Cabin-SemiBold.ttf" />
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
