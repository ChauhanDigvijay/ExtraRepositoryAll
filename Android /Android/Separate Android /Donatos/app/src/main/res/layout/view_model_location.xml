<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="0dp"
    app:cardElevation="@dimen/cardview.elevation.low"
    app:cardUseCompatPadding="true"

    android:id="@+id/location_cardview"
    android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/cardview.margin.end"
    android:layout_marginLeft="@dimen/cardview.margin.start"
    android:layout_marginRight="@dimen/cardview.margin.end"
    android:layout_marginStart="@dimen/cardview.margin.start"
    android:layout_marginTop="@dimen/cardview.margin.top"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <com.google.android.gms.androids.androidView
            app:cameraZoom="15.0"
            android:id="@+id/location_androidview"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            app:liteMode="true"

            android:name="com.google.android.gms.androids.SupportandroidFragment" />

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/locations.list.row.hours.padding"
            android:paddingRight="@dimen/locations.list.row.hours.padding"
            android:paddingTop="@dimen/locations.list.row.hours.padding">

            <TextView
                android:ellipsize="end"
                android:id="@+id/location_name"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="top|bottom|center_vertical|fill_vertical|center|fill"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:width="220dp" />

            <TextView
                android:drawableLeft="@drawable/ic_place"
                android:drawablePadding="3dp"
                android:drawableStart="@drawable/ic_place"
                android:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
                android:id="@+id/location_distance"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="top|bottom|center_vertical|fill_vertical|center|fill"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"

                android:textSize="10sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/location_address"
            android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingBottom="@dimen/locations.list.row.hours.text.padding"
            android:paddingEnd="@dimen/locations.list.row.hours.padding"
            android:paddingLeft="@dimen/locations.list.row.hours.padding"
            android:paddingRight="@dimen/locations.list.row.hours.padding"
            android:paddingStart="@dimen/locations.list.row.hours.padding"
            android:paddingTop="@dimen/locations.list.row.hours.text.padding"
            android:textColor="@color/darkgray"
            android:textSize="10sp" />

        <TextView
            android:drawableLeft="@drawable/ic_clock"
            android:drawablePadding="@dimen/locations.list.row.hours.padding"
            android:drawableStart="@drawable/ic_clock"
            android:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
            android:id="@+id/location_hours"
            android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingEnd="@dimen/locations.list.row.hours.padding"
            android:paddingLeft="@dimen/locations.list.row.hours.padding"
            android:paddingRight="@dimen/locations.list.row.hours.padding"
            android:paddingStart="@dimen/locations.list.row.hours.padding"
            android:paddingTop="@dimen/locations.list.row.hours.text.padding"
            android:textColor="@color/black"
            android:textSize="10sp" />

        <TextView
            android:drawableLeft="@drawable/ic_call"
            android:drawablePadding="@dimen/locations.list.row.hours.padding"
            android:drawableStart="@drawable/ic_call"
            android:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
            android:id="@+id/location_phone"
            android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:paddingEnd="@dimen/locations.list.row.hours.padding"
            android:paddingLeft="@dimen/locations.list.row.hours.padding"
            android:paddingRight="@dimen/locations.list.row.hours.padding"
            android:paddingStart="@dimen/locations.list.row.hours.padding"
            android:paddingTop="@dimen/locations.list.row.hours.text.padding"
            android:textColor="@color/black"
            android:textSize="10sp" />

        <TextView
            fontPath="fonts/Cabin-SemiBold.ttf"
            android:id="@+id/location_action"
            android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:padding="@dimen/locations.list.row.hours.padding"
            android:textAllCaps="true"
            android:textSize="14sp" />
    </LinearLayout>
</android.support.v7.widget.CardView>
