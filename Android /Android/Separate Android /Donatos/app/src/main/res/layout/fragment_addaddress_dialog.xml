<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/addaddressdialog_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="30dp"
    android:orientation="vertical">

    <include layout="@layout/view_appbar_dialog" />

    <ScrollView
        android:id="@+id/addaddressdialog_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/addaddressdialog_address1_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/input.margin.bottom"
                android:hint="@string/checkout.addaddressdialog.address1.hint"
                >

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/addaddressdialog_address1"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNone|actionSearch|actionSend|actionNext|actionDone|actionPrevious"
                    android:inputType="text|textCapCharacters|textCapWords|textCapSentences|textAutoCorrect|textAutoComplete|textMultiLine|textImeMultiLine|textNoSuggestions|textUri|textEmailAddress|textEmailSubject|textShortMessage|textLongMessage|textPersonName|textPostalAddress|textPassword|textVisiblePassword|textWebEditText|textFilter|textPhonetic|textWebEmailAddress|textWebPassword|numberPassword|phone|date|time"
                    android:maxLength="150"
                    android:maxLines="1" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/addaddressdialog_apt_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/input.margin.bottom"
                android:hint="@string/checkout.addaddressdialog.apt.hint"
             >

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/addaddressdialog_apt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNone|actionSearch|actionSend|actionNext|actionDone|actionPrevious"
                    android:inputType="text|textCapCharacters|textCapWords|textCapSentences|textAutoCorrect|textAutoComplete|textMultiLine|textImeMultiLine|textNoSuggestions|textUri|textEmailAddress|textEmailSubject|textShortMessage|textLongMessage|textPersonName|textPostalAddress|textPassword|textVisiblePassword|textWebEditText|textFilter|textPhonetic|textWebEmailAddress|textWebPassword|numberPassword|phone|date|time"
                    android:maxLength="5"
                    android:maxLines="1"
                   />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/addaddressdialog_city_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/input.margin.bottom"
                    android:layout_marginEnd="@dimen/input.description.padding.end"
                    android:layout_marginRight="@dimen/input.description.padding.end"
                    android:layout_weight="0.8"
                    android:hint="@string/checkout.addaddressdialog.city.hint"
                    android:theme="@style/AppTheme.Input.TextInputLayout">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/addaddressdialog_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionNone|actionSearch|actionSend|actionNext|actionDone|actionPrevious"
                        android:inputType="text|textCapCharacters|textCapWords|textCapSentences|textAutoCorrect|textAutoComplete|textMultiLine|textImeMultiLine|textNoSuggestions|textUri|textEmailAddress|textEmailSubject|textShortMessage|textLongMessage|textPersonName|textPostalAddress|textPassword|textVisiblePassword|textWebEditText|textFilter|textPhonetic|textWebEmailAddress|textWebPassword|numberPassword|phone|date|time"
                        android:maxLength="30"
                        android:maxLines="1"
                       />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/addaddressdialog_state_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/input.margin.bottom"
                    android:layout_weight="0.2"
                    android:hint="@string/checkout.addaddressdialog.state.hint"
                    android:theme="@style/AppTheme.Input.TextInputLayout">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/addaddressdialog_state"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionNone|actionSearch|actionSend|actionNext|actionDone|actionPrevious"
                        android:inputType="text|textCapCharacters|textCapWords|textCapSentences|textAutoCorrect|textAutoComplete|textMultiLine|textImeMultiLine|textNoSuggestions|textUri|textEmailAddress|textEmailSubject|textShortMessage|textLongMessage|textPersonName|textPostalAddress|textPassword|textVisiblePassword|textWebEditText|textFilter|textPhonetic|textWebEmailAddress|textWebPassword|numberSigned|phone"
                        android:maxLength="2"
                        android:maxLines="1"
                        />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/addaddressdialog_zipcode_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/input.margin.bottom"
                android:hint="@string/checkout.addaddressdialog.zip.hint"
               >

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/addaddressdialog_zipcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionGo|actionSearch|actionSend|actionNext|actionDone|actionPrevious"
                    android:inputType="number|numberSigned|numberDecimal|numberPassword|phone"
                    android:maxLength="5"
                    android:maxLines="1"
                   />
            </android.support.design.widget.TextInputLayout>

            <CheckBox
                android:id="@+id/addaddressdialog_makedefault"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:text="@string/checkout.addaddressdialog.makedefault" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
