<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/paymentdialog_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/view_appbar_dialog" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/paymentdialog_nameoncard_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/input.margin.bottom"
            android:hint="@string/checkout.paymentdialog.name.hint"
            android:theme="@style/AppTheme.Input.TextInputLayout">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/paymentdialog_nameoncard"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/input.edit_text.drawable_padding"
                android:imeOptions="actionNone|actionSearch|actionSend|actionNext|actionDone|actionPrevious"
                android:inputType="text|textCapCharacters|textCapWords|textCapSentences|textAutoCorrect|textAutoComplete|textMultiLine|textImeMultiLine|textNoSuggestions|textUri|textEmailAddress|textEmailSubject|textShortMessage|textLongMessage|textPersonName|textPostalAddress|textPassword|textVisiblePassword|textWebEditText|textFilter|textPhonetic|textWebEmailAddress|textWebPassword|phone|time"
                android:maxLength="100"
                android:maxLines="1" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/paymentdialog_cardnumber_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/input.margin.bottom"
            android:hint="@string/checkout.paymentdialog.card.hint"
            android:theme="@style/AppTheme.Input.TextInputLayout">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/paymentdialog_cardnumber"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/input.edit_text.drawable_padding"
                android:imeOptions="actionNone|actionSearch|actionSend|actionNext|actionDone|actionPrevious"
                android:inputType="number|numberSigned|numberDecimal|numberPassword|phone"
                android:maxLength="16"
                android:maxLines="1" />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/paymentdialog_expirationdatelayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/input.margin.bottom"
                android:layout_weight="0.5"
                android:hint="@string/checkout.paymentdialog.expiration.hint"
                android:theme="@style/AppTheme.Input.TextInputLayout">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/paymentdialog_expirationdate"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/input.edit_text.drawable_padding"
                    android:imeOptions="actionNone|actionSearch|actionSend|actionNext|actionDone|actionPrevious"
                    android:inputType="number|numberSigned|numberDecimal|numberPassword|phone"
                    android:maxLength="100"
                    android:maxLines="1" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/paymentdialog_zipcode_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/input.margin.bottom"
                android:layout_weight="0.5"
                android:hint="@string/checkout.paymentdialog.zip.hint"
                android:theme="@style/AppTheme.Input.TextInputLayout">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/paymentdialog_zipcode"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/input.edit_text.drawable_padding"
                    android:imeOptions="actionNone|actionSearch|actionSend|actionNext|actionDone|actionPrevious"
                    android:inputType="number|numberSigned|numberDecimal|numberPassword|phone"
                    android:maxLength="5"
                    android:maxLines="1" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <CheckBox
            android:id="@+id/paymentdialog_savecard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/checkout.paymentdialog.savecard" />

        <CheckBox
            android:id="@+id/paymentdialog_makedefault"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="@string/checkout.paymentdialog.default" />
    </LinearLayout>
</LinearLayout>
