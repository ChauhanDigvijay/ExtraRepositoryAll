<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/locations.list.row.hours.padding"
    android:layout_marginRight="@dimen/locations.list.row.hours.padding"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="@dimen/locations.list.row.hours.padding">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/input.margin.bottom"
        android:hint="@string/checkout.guest.firstname.label"
        android:theme="@style/AppTheme.Input.TextInputLayout">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/locationguest_firstname"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionNone|actionSearch|actionSend|actionNext|actionDone|actionPrevious"
            android:inputType="text|textCapCharacters|textCapWords|textCapSentences|textAutoCorrect|textAutoComplete|textMultiLine|textImeMultiLine|textNoSuggestions|textUri|textEmailAddress|textEmailSubject|textShortMessage|textLongMessage|textPersonName|textPostalAddress|textPassword|textVisiblePassword|textWebEditText|textFilter|textPhonetic|textWebEmailAddress|textWebPassword|phone|time"
            android:maxLength="100"
            android:maxLines="1" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/input.margin.bottom"
        android:hint="@string/checkout.guest.lastname.label"
        android:theme="@style/AppTheme.Input.TextInputLayout">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/locationguest_lastname"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionNone|actionSearch|actionSend|actionNext|actionDone|actionPrevious"
            android:inputType="text|textCapCharacters|textCapWords|textCapSentences|textAutoCorrect|textAutoComplete|textMultiLine|textImeMultiLine|textNoSuggestions|textUri|textEmailAddress|textEmailSubject|textShortMessage|textLongMessage|textPersonName|textPostalAddress|textPassword|textVisiblePassword|textWebEditText|textFilter|textPhonetic|textWebEmailAddress|textWebPassword|phone|time"
            android:maxLength="100"
            android:maxLines="1" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/input.margin.bottom"
        android:hint="@string/checkout.guest.emailaddress.label"
        android:theme="@style/AppTheme.Input.TextInputLayout">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/locationguest_email"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionNone|actionSearch|actionSend|actionNext|actionDone|actionPrevious"
            android:inputType="text|textCapCharacters|textCapWords|textCapSentences|textAutoCorrect|textAutoComplete|textMultiLine|textImeMultiLine|textNoSuggestions|textUri|textEmailAddress|textEmailSubject|textShortMessage|textLongMessage|textPersonName|textPostalAddress|textPassword|textVisiblePassword|textWebEditText|textFilter|textPhonetic|textWebEmailAddress|textWebPassword|phone|time"
            android:maxLength="100"
            android:maxLines="1" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/input.margin.bottom"
        android:hint="@string/checkout.guest.phone.label"
        android:theme="@style/AppTheme.Input.TextInputLayout">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/locationguest_phone"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionNone|actionSearch|actionSend|actionNext|actionDone|actionPrevious"
            android:inputType="text|textCapCharacters|textCapWords|textCapSentences|textAutoCorrect|textAutoComplete|textMultiLine|textImeMultiLine|textNoSuggestions|textUri|textEmailAddress|textEmailSubject|textShortMessage|textLongMessage|textPersonName|textPostalAddress|textPassword|textVisiblePassword|textWebEditText|textFilter|textPhonetic|textWebEmailAddress|textWebPassword|number|numberSigned|numberDecimal|numberPassword|phone"
            android:maxLength="10"
            android:maxLines="1" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/input.margin.bottom"
        android:hint="@string/checkout.guest.companyname.label"
        android:theme="@style/AppTheme.Input.TextInputLayout">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/locationguest_company"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionNone|actionSearch|actionSend|actionNext|actionDone|actionPrevious"
            android:inputType="text|textCapCharacters|textCapWords|textCapSentences|textAutoCorrect|textAutoComplete|textMultiLine|textImeMultiLine|textNoSuggestions|textUri|textEmailAddress|textEmailSubject|textShortMessage|textLongMessage|textPersonName|textPostalAddress|textPassword|textVisiblePassword|textWebEditText|textFilter|textPhonetic|textWebEmailAddress|textWebPassword|phone"
            android:maxLength="100"
            android:maxLines="1" />
    </android.support.design.widget.TextInputLayout>
</LinearLayout>
