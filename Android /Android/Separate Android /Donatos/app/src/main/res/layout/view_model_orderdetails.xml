<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="0dp"
    app:cardElevation="@dimen/cardview.elevation.low"
    app:cardUseCompatPadding="true"

    android:id="@+id/orderdetails_cardview"
    android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginEnd="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginStart="15dp"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <FrameLayout
                android:id="@+id/orderdetails_image_frame"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">

                <ImageView
                    android:id="@+id/orderdetails_imageview"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/placeholder_square" />

                <TextView

                    android:background="@color/actionOrange"
                    android:id="@+id/orderdetails_customized"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/checkout.orderdetails.item.customized"
                    android:textAllCaps="true"

                    android:textSize="10sp"
                    fontPath="fonts/Cabin-SemiBold.ttf" />
            </FrameLayout>

            <LinearLayout
                android:id="@+id/orderdetails_pricelayout"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:paddingEnd="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingStart="15dp">

                <TextView
                    android:id="@+id/orderdetails_price"
                    android:layout_gravity="top|bottom|center_vertical|fill_vertical|center|fill"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="--"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    fontPath="fonts/Cabin-Bold.ttf" />

                <TextView
                    android:id="@+id/orderdetails_quantity"
                    android:layout_gravity="top|bottom|center_vertical|fill_vertical|center|fill"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_width="wrap_content"

                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/orderdetails_image_frame"
                android:layout_toLeftOf="@+id/orderdetails_pricelayout"
                android:layout_toRightOf="@+id/orderdetails_image_frame"
                android:layout_toStartOf="@+id/orderdetails_pricelayout"
                android:layout_width="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/orderdetails_title"
                    android:layout_gravity="top|bottom|center_vertical|fill_vertical|center|fill"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:lineSpacingMultiplier="0.8"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    fontPath="fonts/Cabin-Bold.ttf" />

                <TextView
                    android:id="@+id/orderdetails_subtitle"
                    android:layout_gravity="top|bottom|center_vertical|fill_vertical|center|fill"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"

                    android:textSize="10sp" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:background="@drawable/border_top"
            android:gravity="left|right|center_horizontal|fill_horizontal|center|fill|start|end"
            android:id="@+id/orderdetails_actionrow"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/orderdetails_edit"
                android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:padding="@dimen/locations.list.row.hours.padding"
                android:text="@string/checkout.item.edit"
                android:textAllCaps="true"
                android:textColor="@color/donatosRed"
                android:textSize="12sp"
                fontPath="fonts/Cabin-SemiBold.ttf" />

            <TextView
                android:id="@+id/orderdetails_delete"
                android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:padding="@dimen/locations.list.row.hours.padding"
                android:text="@string/checkout.orderdetails.item.delete"
                android:textAllCaps="true"
                android:textColor="@color/donatosRed"
                android:textSize="12sp"
                fontPath="fonts/Cabin-SemiBold.ttf" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
