<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/login_bg"
    android:id="@+id/login_layout"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <LinearLayout
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:layout_gravity="top|bottom|center_vertical|fill_vertical|center|fill"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingEnd="@dimen/login.hours.padding.end"
            android:paddingLeft="@dimen/login.hours.padding.start"
            android:paddingRight="@dimen/login.hours.padding.end"
            android:paddingStart="@dimen/login.hours.padding.start">

            <ImageView
                android:contentDescription="@string/app_name"
                android:id="@+id/imageView2"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:src="@drawable/logo" />

            <android.support.design.widget.TextInputLayout
                android:hint="@string/form.login.email.hint"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/input.margin.bottom"
                android:layout_width="match_parent"
               >

                <android.support.design.widget.TextInputEditText

                    android:drawablePadding="@dimen/input.edit_text.drawable_padding"
                    android:id="@+id/login_email"
                    android:imeActionLabel="@string/form.login.email.keyboard.action"
                    android:imeOptions="actionNone|actionSearch|actionSend|actionNext|actionDone|actionPrevious"
                    android:inputType="text|textCapCharacters|textCapWords|textCapSentences|textAutoCorrect|textAutoComplete|textMultiLine|textImeMultiLine|textNoSuggestions|textUri|textEmailAddress|textEmailSubject|textShortMessage|textLongMessage|textPersonName|textPostalAddress|textPassword|textVisiblePassword|textWebEditText|textFilter|textPhonetic|textWebEmailAddress|textWebPassword|phone|time"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:maxLength="100"
                    android:maxLines="1" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:hint="@string/form.login.password.hint"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:passwordToggleDrawable="@drawable/password_toggle"
                >

                <android.support.design.widget.TextInputEditText

                    android:drawablePadding="@dimen/input.edit_text.drawable_padding"
                    android:id="@+id/login_password"
                    android:imeOptions="actionGo|actionSearch|actionSend|actionNext|actionDone|actionPrevious"
                    android:inputType="text|textCapCharacters|textCapWords|textCapSentences|textAutoCorrect|textAutoComplete|textMultiLine|textImeMultiLine|textNoSuggestions|textUri|textEmailAddress|textEmailSubject|textShortMessage|textLongMessage|textPersonName|textPostalAddress|textPassword|textVisiblePassword|textWebEditText|textFilter|textPhonetic|textWebEmailAddress|textWebPassword|phone"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:maxLength="40"
                    android:maxLines="1" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_gravity="left|right|center_horizontal|fill_horizontal|center|fill|start|end"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/login.hours.margin.label"
                android:layout_marginTop="@dimen/login.hours.margin.label"
                android:layout_width="wrap_content"
                android:padding="@dimen/login.hours.margin.button.top">

                <TextView
                    android:id="@+id/login_donthaveaccount"
                    android:layout_gravity="left|right|center_horizontal|fill_horizontal|center|fill|start|end"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/form.login.donthaveaccount"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/login_register"
                    android:layout_gravity="left|right|center_horizontal|fill_horizontal|center|fill|start|end"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingStart="5dp"
                    android:text="@string/form.login.register"
                    android:textColor="@color/white"
                    android:textSize="13sp" />
            </LinearLayout>

            <Button

                android:id="@+id/login_login_button"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/login.hours.margin.button.top"
                android:layout_width="match_parent"
                android:text="@string/form.login.button.login" />

            <Button

                android:id="@+id/login_guest_button"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/login.hours.margin.button.top"
                android:layout_width="match_parent"
                android:text="@string/form.login.button.guest" />

            <TextView
                android:id="@+id/login_forgot_password"
                android:layout_gravity="left|right|center_horizontal|fill_horizontal|center|fill|start|end"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/login.hours.margin.label"
                android:layout_marginTop="@dimen/login.hours.margin.label"
                android:layout_width="wrap_content"
                android:padding="@dimen/login.hours.margin.button.top"
                android:text="@string/form.login.button.forgotpassword"
                android:textColor="@color/white"
                android:textSize="13sp"
   />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/login_version"
        android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/login.hours.margin.label"
        android:layout_marginTop="@dimen/login.hours.margin.label"
        android:layout_width="wrap_content"
        android:textColor="@color/semiTransparentLight"
        android:textSize="11sp" />
</FrameLayout>
