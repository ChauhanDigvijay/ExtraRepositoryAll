<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/ham_burg_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="@dimen/sub_text_sz"
                android:typeface="monospace"
                android:textColor="@color/white"
                android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                android:id="@+id/user_ph_no"
                android:padding="@dimen/button_padding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/button_padding"
                android:text=""
                android:layout_centerInParent="true"
                android:textAllCaps="true" />

            <com.balysv.materialripple.MaterialRippleLayout
                android:padding="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/button_padding"
                android:layout_marginRight="@dimen/button_padding"
                android:layout_alignParentRight="true"
                app:mrl_rippleColor="@color/transparent"
                app:mrl_rippleDimension="10dp"
                app:mrl_rippleOverlay="true"
                app:mrl_rippleAlpha="0.5"
                app:mrl_rippleHover="true">

                <ImageView
                    android:textSize="@dimen/sub_text_sz"
                    android:textColor="@color/white"
                    android:gravity="left|right|center_horizontal|fill_horizontal|center|fill|start|end"
                    android:id="@+id/alert_close"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:src="@drawable/close_icon" />
            </com.balysv.materialripple.MaterialRippleLayout>
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                android:id="@+id/qr_imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="@dimen/sub_text_sz"
                android:typeface="monospace"
                android:textColor="@color/white"
                android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                android:id="@+id/available_point"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:textAllCaps="true" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_margin"
                android:weightSum="10.0">

                <ImageView
                    android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                    android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                    android:background="@drawable/dotted_white"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.0"
                    android:layerType="software" />

                <TextView
                    android:textSize="@dimen/sub_text_sz"
                    android:typeface="monospace"
                    android:textStyle="bold"
                    android:textColor="@color/ham_burg"
                    android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                    android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                    android:id="@+id/textView2"

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:text="AVAILABLE REWARDS:"
                    android:layout_weight="6.0"
                    android:textAllCaps="true" />

                <ImageView
                    android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                    android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                    android:background="@drawable/dotted_white"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.0"
                    android:layerType="software" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/reward_list_lay"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ListView
                android:id="@+id/rewards_list"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:listSelector="@color/ham_ash"
                android:dividerHeight="0dp" />
        </LinearLayout>
    </LinearLayout></LinearLayout>
