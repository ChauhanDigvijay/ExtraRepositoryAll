<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/hbh_header_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left|right|center_horizontal|fill_horizontal|center|fill|start|end">

        <LinearLayout
            android:id="@+id/content_frameq"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                layout="@layout/hbh_header_bottom_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@+id/login_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|right|center_horizontal|fill_horizontal|center|fill|start|end"
                android:layout_weight="90.0" />

            <include
                layout="@layout/bottom_listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="10.0"
                android:visibility="gone" />
        </LinearLayout>

        <ListView
            android:id="@+id/left_drawer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left|right|center_horizontal|fill_horizontal|center|fill|start|end"
            android:background="@color/ham_burg_new"
            android:choiceMode="singleChoice"
            android:divider="@drawable/dash_divider_white"
            android:dividerHeight="2dp"
            android:layerType="software" />
    </android.support.v4.widget.DrawerLayout>
</LinearLayout>
