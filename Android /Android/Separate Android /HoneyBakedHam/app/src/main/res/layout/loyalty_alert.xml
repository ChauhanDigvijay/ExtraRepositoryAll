<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:minHeight="110dp"

    android:orientation="vertical"
    android:padding="@dimen/normal_padding">

    <TextView
        android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
        android:id="@+id/forgot_head_text"
        android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
        android:layout_height="match_parent"

        android:layout_width="match_parent"
        android:padding="@dimen/normal_padding"
        android:text="Are you sure you want to redeem 50 points for this offer?"
        android:textColor="@color/ham_burg_new"
        android:textSize="@dimen/home_page_top_sz"
        android:typeface="monospace" />

    <TableRow
        android:background="@color/transparent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/normal_margin"
        android:layout_marginBottom="@dimen/normal_padding"
        android:layout_width="match_parent"
        android:weightSum="1.0">

        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            app:mrl_rippleAlpha="0.5"
            app:mrl_rippleColor="@color/transparent"
            app:mrl_rippleDimension="10dp"
            app:mrl_rippleHover="true"
            app:mrl_rippleOverlay="true">

            <Button
                android:background="@drawable/button_loy_border"
                android:id="@+id/yes_butn"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="Yes"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/home_page_top_sz"
                android:typeface="monospace" />
        </com.balysv.materialripple.MaterialRippleLayout>

        <TextView
            android:layout_height="match_parent"
            android:layout_width="0dp" />

        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            app:mrl_rippleAlpha="0.5"
            app:mrl_rippleColor="@color/transparent"
            app:mrl_rippleDimension="10dp"
            app:mrl_rippleHover="true"
            app:mrl_rippleOverlay="true">

            <Button
                android:background="@drawable/redeem_button_border"
                android:id="@+id/no_butn"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="NO"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/home_page_top_sz"
                android:typeface="monospace" />
        </com.balysv.materialripple.MaterialRippleLayout>
        .
    </TableRow>
</LinearLayout>
