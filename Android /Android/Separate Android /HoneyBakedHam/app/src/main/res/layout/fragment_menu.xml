<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="1.0">

    <ListView
        android:id="@+id/menu_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:divider="@color/transperent"
        android:dividerHeight="@dimen/activity_horizontal_margin"
        android:padding="@dimen/activity_horizontal_margin"
        />

    <TextView
        android:id="@+id/no_menu_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
        android:background="#00000000"
        android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
        android:padding="@dimen/normal_padding"
        android:text="No Category Available"
        android:textColor="@color/ham_burg_new"
        android:textSize="@dimen/home_page_top_sz"
        android:typeface="monospace"
        android:visibility="gone" />
</LinearLayout>
