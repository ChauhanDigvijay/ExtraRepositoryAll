<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:id="@+id/header_bottom_layout"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="1.0">

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <ImageView
            android:id="@+id/header_bottom_left_img_vw"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:padding="@dimen/normal_padding"
            android:src="@drawable/grey_arrow" />

        <TextView
            android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
            android:id="@+id/header_bottom_title_tv"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:padding="@dimen/normal_padding"
            android:singleLine="true"
            android:textAllCaps="true"
            android:textColor="@color/ham_burg"
            android:textSize="@dimen/home_page_top_sz"
            android:textStyle="bold"
            android:typeface="monospace" />

        <com.balysv.materialripple.MaterialRippleLayout
            android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:mrl_rippleAlpha="0.5"
            app:mrl_rippleColor="@color/transp_white"
            app:mrl_rippleDimension="10dp"
            app:mrl_rippleHover="true"
            app:mrl_rippleOverlay="true">

            <TextView
                android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                android:id="@+id/header_bottom_right_tv"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:lines="1"
                android:padding="@dimen/normal_padding"
                android:text="Log Out >"
                android:textAllCaps="false"
                android:textColor="@color/ham_burg"
                android:textSize="@dimen/dis_text_sz"
                android:typeface="monospace" />
        </com.balysv.materialripple.MaterialRippleLayout>
    </RelativeLayout>

    <ImageView
        android:background="@drawable/dotted"
        android:layerType="software"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="@dimen/normal_padding" />
</LinearLayout>
