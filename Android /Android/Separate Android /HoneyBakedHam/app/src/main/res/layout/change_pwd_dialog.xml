<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:minHeight="110dp"
    android:orientation="vertical"
    android:padding="@dimen/normal_margin">

    <TextView
        android:id="@+id/change_head_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|right|center_horizontal|fill_horizontal|center|fill|start|end"
        android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"

        android:textStyle="bold"
        android:typeface="monospace" />

    <EditText
        android:id="@+id/cur_pw_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/custom_edit_dialog_border"
        android:hint="Current Password"
        android:inputType="text|textCapCharacters|textCapWords|textCapSentences|textAutoCorrect|textAutoComplete|textMultiLine|textImeMultiLine|textNoSuggestions|textUri|textEmailAddress|textEmailSubject|textShortMessage|textLongMessage|textPersonName|textPostalAddress|textPassword|textVisiblePassword|textWebEditText|textFilter|textPhonetic|textWebEmailAddress|textWebPassword|phone"
        android:maxLines="1"
        android:padding="@dimen/normal_padding"
        android:textColor="@color/ham_burg"
        android:textSize="@dimen/sub_text_sz"
        android:typeface="monospace" />

    <EditText
        android:id="@+id/new_pw_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_margin"
        android:background="@drawable/custom_edit_dialog_border"
        android:hint="New Password"
        android:inputType="text|textCapCharacters|textCapWords|textCapSentences|textAutoCorrect|textAutoComplete|textMultiLine|textImeMultiLine|textNoSuggestions|textUri|textEmailAddress|textEmailSubject|textShortMessage|textLongMessage|textPersonName|textPostalAddress|textPassword|textVisiblePassword|textWebEditText|textFilter|textPhonetic|textWebEmailAddress|textWebPassword|phone"
        android:maxLines="1"
        android:padding="@dimen/normal_padding"
        android:textColor="@color/ham_burg"
        android:textSize="@dimen/sub_text_sz"
        android:typeface="monospace" />

    <EditText
        android:id="@+id/confrm_pw_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_margin"
        android:background="@drawable/custom_edit_dialog_border"
        android:hint="Confirm Password"
        android:inputType="text|textCapCharacters|textCapWords|textCapSentences|textAutoCorrect|textAutoComplete|textMultiLine|textImeMultiLine|textNoSuggestions|textUri|textEmailAddress|textEmailSubject|textShortMessage|textLongMessage|textPersonName|textPostalAddress|textPassword|textVisiblePassword|textWebEditText|textFilter|textPhonetic|textWebEmailAddress|textWebPassword|phone"
        android:maxLines="1"
        android:padding="@dimen/normal_padding"
        android:textColor="@color/ham_burg"
        android:textSize="@dimen/sub_text_sz"
        android:typeface="monospace" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_margin"
        android:background="@color/transparent"
        android:weightSum="1.0">

        <Button
            android:id="@+id/chng_pw_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/my_button_border"
            android:text=" Cancel "
            android:textAllCaps="false"
            android:textColor="@color/white"

            android:typeface="monospace" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/chng_pw_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/my_button_unclickable_border"
            android:text=" Ok "
            android:textAllCaps="false"
            android:textColor="@color/white"

            android:typeface="monospace" />
    </TableRow>
</LinearLayout>
