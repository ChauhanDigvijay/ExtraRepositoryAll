<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:id="@+id/store_lay"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="1.0">
<LinearLayout
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_weight="1.0">
<RelativeLayout
    android:id="@+id/mapLayout"
    android:background="#c8c8cd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="0.65">

    <fragment
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_gravity="left|right|center_horizontal|fill_horizontal|center|fill|start|end"
        android:id="@+id/store_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
        android:layout_gravity="left|right|center_horizontal|fill_horizontal|center|fill|start|end"
        android:id="@+id/searchview_layout"
        android:background="@drawable/serachview_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/normal_padding">

        <EditText
            android:textSize="@dimen/home_page_top_sz"
            android:typeface="monospace"
            android:textColor="@color/black"
            android:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
            android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
            android:id="@+id/search_et"
            android:background="@color/transparent"
            android:padding="@dimen/normal_padding"
            android:focusable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/search_hint"
            android:singleLine="true"
            android:layout_weight="0.85"
            android:imeOptions="actionNone|actionGo|actionSearch|actionNext|actionDone|actionPrevious" />

        <RelativeLayout
            android:id="@+id/search_ll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.15">

            <ImageView
                android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                android:id="@+id/search_icon"
                android:padding="@dimen/normal_padding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/search_icon"
                android:layout_centerInParent="true" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="0.35">

    <ScrollView
        android:id="@+id/my_store_sv"

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/my_store_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textSize="@dimen/home_page_top_sz"
                android:typeface="monospace"
                android:textColor="@color/white"
                android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                android:id="@+id/shop_address_tv"
                android:background="@color/ham_burg_new"
                android:padding="@dimen/button_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="" />

            <LinearLayout
                android:orientation="horizontal"
                android:background="@color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_margin"
                android:layout_marginBottom="@dimen/normal_margin"
                android:weightSum="1.0">

                <RelativeLayout
                    android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                    android:id="@+id/store_img_lay"
                    android:padding="@dimen/button_padding"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">

                    <ImageView
                        android:id="@+id/store_img_vw"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:layout_centerInParent="true" />
                </RelativeLayout>

                <LinearLayout
                    android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                    android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                    android:orientation="vertical"
                    android:id="@+id/store_function_bt_lay"
                    android:background="@color/transparent"
                    android:padding="@dimen/button_padding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5">

                    <com.balysv.materialripple.MaterialRippleLayout
                        android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/normal_margin"
                        app:mrl_rippleColor="@color/ham_ash"
                        app:mrl_rippleDimension="10dp"
                        app:mrl_rippleOverlay="true"
                        app:mrl_rippleAlpha="0.5"
                        app:mrl_rippleHover="true">

                        <RelativeLayout
                            android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                            android:orientation="horizontal"
                            android:id="@+id/get_drections"
                            android:background="@drawable/sign_border"
                            android:padding="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_gravity="top|bottom|center_vertical|fill_vertical|center|fill"
                                android:id="@+id/imageView2"
                                android:padding="2dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/button_padding"
                                android:src="@drawable/marker"
                                android:layout_centerVertical="true" />

                            <TextView
                                android:textSize="@dimen/sub_text_sz"
                                android:typeface="monospace"
                                android:textColor="@color/ham_burg_new"
                                android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                                android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                                android:id="@+id/textView3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Get Directions"
                                android:layout_centerInParent="true"
                                android:textAllCaps="false" />
                        </RelativeLayout>
                    </com.balysv.materialripple.MaterialRippleLayout>

                    <com.balysv.materialripple.MaterialRippleLayout
                        android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                        android:id="@+id/call_phone1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/normal_margin"
                        app:mrl_rippleColor="@color/ham_ash"
                        app:mrl_rippleDimension="10dp"
                        app:mrl_rippleOverlay="true"
                        app:mrl_rippleAlpha="0.5"
                        app:mrl_rippleHover="true">

                        <RelativeLayout
                            android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                            android:orientation="horizontal"
                            android:id="@+id/call_phone"
                            android:background="@drawable/sign_border"
                            android:padding="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_gravity="top|bottom|center_vertical|fill_vertical|center|fill"
                                android:padding="2dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/button_padding"
                                android:src="@drawable/phone"
                                android:layout_centerVertical="true" />

                            <TextView
                                android:textSize="@dimen/sub_text_sz"
                                android:typeface="monospace"
                                android:textColor="@color/ham_burg_new"
                                android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                                android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                                android:id="@+id/shop_phno_tv"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text=""
                                android:layout_centerInParent="true"
                                android:textAllCaps="false" />
                        </RelativeLayout>
                    </com.balysv.materialripple.MaterialRippleLayout>

                    <com.balysv.materialripple.MaterialRippleLayout
                        android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                        android:id="@+id/my_store1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:mrl_rippleColor="@color/transparent"
                        app:mrl_rippleDimension="10dp"
                        app:mrl_rippleOverlay="true"
                        app:mrl_rippleAlpha="0.5"
                        app:mrl_rippleHover="true">

                        <RelativeLayout
                            android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                            android:orientation="horizontal"
                            android:id="@+id/my_store"
                            android:background="@color/ham_burg_new"
                            android:padding="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_gravity="top|bottom|center_vertical|fill_vertical|center|fill"
                                android:padding="2dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/button_padding"
                                android:src="@drawable/star"
                                android:layout_centerVertical="true" />

                            <TextView
                                android:textSize="@dimen/sub_text_sz"
                                android:typeface="monospace"
                                android:textColor="@color/white"
                                android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                                android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="My Store"
                                android:layout_centerInParent="true"
                                android:textAllCaps="false" />
                        </RelativeLayout>
                    </com.balysv.materialripple.MaterialRippleLayout>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:background="@drawable/dotted"
                android:padding="@dimen/normal_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layerType="software" />

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/store_hours_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="@dimen/home_page_top_sz"
                    android:typeface="monospace"
                    android:textColor="@color/ham_burg_new"
                    android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                    android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                    android:paddingTop="@dimen/normal_padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="store hours"
                    android:textAllCaps="true" />

                <ListView
                    android:id="@+id/store_hrs_lv"
                    android:paddingLeft="@dimen/normal_padding"
                    android:paddingRight="@dimen/normal_padding"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@color/transperent" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/store_ex_hours_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="@dimen/sub_text_sz"
                    android:typeface="monospace"
                    android:textColor="@color/ham_burg_new"
                    android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                    android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                    android:id="@+id/store_ex_hrs_head_tv"
                    android:padding="@dimen/normal_padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true" />

                <TextView
                    android:textSize="@dimen/sub_text_sz"
                    android:typeface="monospace"
                    android:textColor="@color/black"
                    android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                    android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                    android:id="@+id/store_ex_hrs_tv"
                    android:padding="@dimen/normal_padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/normal_margin"
                    android:layout_marginRight="@dimen/normal_margin"
                    android:textAllCaps="false" />
            </LinearLayout>

            <ImageView
                android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                android:id="@+id/order_now_img_vw"
                android:background="@drawable/ordernow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_margin" />
        </LinearLayout>
    </ScrollView>

    <ListView
        android:id="@+id/store_list_vw"
        android:visibility="gone"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:divider="@color/transparent" />

    <RelativeLayout
        android:id="@+id/no_shop_tv"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textSize="@dimen/home_page_top_sz"
            android:typeface="monospace"
            android:textColor="@color/ham_burg"
            android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
            android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
            android:id="@+id/no_shop_tv1"
            android:padding="@dimen/normal_padding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textAllCaps="false" />
    </RelativeLayout>
</LinearLayout>
</LinearLayout></LinearLayout>
