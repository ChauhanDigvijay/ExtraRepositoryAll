<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_bg"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="1.0">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="top|bottom|center_vertical|fill_vertical|center|fill"
        android:layout_weight="0.12" />

    <RelativeLayout
        android:layout_gravity="top|bottom|center_vertical|fill_vertical|center|fill"
        android:layout_height="0dp"
        android:layout_weight="0.45"
        android:layout_width="match_parent">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:src="@drawable/hbh_new_seal" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_weight="0.43"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:mrl_rippleAlpha="0.5"
                app:mrl_rippleColor="@color/transparent"
                app:mrl_rippleDimension="10dp"
                app:mrl_rippleHover="true"
                app:mrl_rippleOverlay="true">

                <RelativeLayout
                    android:background="@color/ham_burg_new"
                    android:id="@+id/signup_rl"
                    android:layout_height="40dp"
                    android:layout_width="match_parent"
                    android:padding="@dimen/button_padding"
                    android:weightSum="1.0">

                    <TextView
                        android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                        android:layout_centerInParent="true"
                        android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content"
                        android:text="SIGN UP"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/home_page_top_sz"
                        android:textStyle="bold"
                        android:typeface="monospace" />

                    <ImageView
                        android:background="@drawable/white_arrow"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_height="0dp"
                        android:layout_weight="0.05"
                        android:layout_width="wrap_content" />
                </RelativeLayout>
            </com.balysv.materialripple.MaterialRippleLayout>

            <TextView
                android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                android:id="@+id/textView8"
                android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_width="match_parent"

                android:padding="@dimen/normal_padding"
                android:text="OR"
                android:textAllCaps="true"
                android:textColor="@color/ham_selector"
                android:textSize="@dimen/sub_text_sz"
                android:textStyle="bold"
                android:typeface="monospace" />

            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/normal_margin"
                android:layout_width="match_parent"
                app:mrl_rippleAlpha="0.5"
                app:mrl_rippleColor="@color/transparent"
                app:mrl_rippleDimension="10dp"
                app:mrl_rippleHover="true"
                app:mrl_rippleOverlay="true">

                <RelativeLayout
                    android:background="@color/ham_burg_new"
                    android:id="@+id/signin_rl"
                    android:layout_height="40dp"
                    android:layout_width="wrap_content"
                    android:padding="@dimen/button_padding"
                    android:weightSum="1.0">

                    <ImageView

                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_height="0dp"
                        android:layout_weight="0.05"
                        android:layout_width="0dp" />

                    <TextView
                        android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                        android:id="@+id/textView"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content"
                        android:text="SIGN IN"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/home_page_top_sz"
                        android:textStyle="bold"
                        android:typeface="monospace" />
                </RelativeLayout>
            </com.balysv.materialripple.MaterialRippleLayout>

            <LinearLayout
                android:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_margin"
                android:layout_width="match_parent"
                android:orientation="vertical">

                <TableRow
                    android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:paddingBottom="@dimen/normal_margin"
                    android:weightSum="1.0">

                    <TextView
                        android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                        android:id="@+id/call_us_tv1"
                        android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:text="Trouble logging in? Mail us at "
                        android:textAllCaps="false"
                        android:textColor="@color/ham_disclaimer1"
                        android:textSize="@dimen/dis_text_sz"
                        android:typeface="monospace" />

                    <TextView
                        android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                        android:id="@+id/call_us_tv2"
                        android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:text=" androidsupport@hbham.com"
                        android:textAllCaps="false"
                        android:textColor="@color/mail_high_light_color"
                        android:textSize="@dimen/dis_text_sz"
                        android:typeface="monospace" />
                </TableRow>

                <TextView
                    android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                    android:id="@+id/textView12"
                    android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:paddingBottom="@dimen/normal_margin"
                    android:text="Disclaimer: android not available for use in California locations."
                    android:textAllCaps="false"
                    android:textColor="@color/ham_disclaimer"
                    android:textSize="@dimen/dis_text_sz"
                    android:typeface="monospace" />

                <TextView
                    android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                    android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:paddingBottom="@dimen/normal_margin"
                    android:text="Â© 2017 The Honey Baked Ham Company, LLC"
                    android:textAllCaps="false"
                    android:textColor="@color/ham_disclaimer1"
                    android:textSize="@dimen/disclaimer_text_sz"
                    android:typeface="monospace" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
