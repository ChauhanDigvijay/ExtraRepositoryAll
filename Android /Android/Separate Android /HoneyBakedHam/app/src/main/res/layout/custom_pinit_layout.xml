<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="1.0">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ham_burg_new">

        <TextView
            android:id="@+id/user_ph_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/button_padding"
            android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
            android:padding="@dimen/button_padding"
            android:text="Pinterest"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/sub_text_sz"
            android:typeface="monospace" />

        <ImageView
            android:id="@+id/pin_alert_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/close_icon" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/pin_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:padding="@dimen/button_padding" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/button_padding"
        android:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
        android:padding="@dimen/normal_padding"
        android:text="Boards"
        android:textAllCaps="false"
        android:textColor="@color/ham_burg_new"
        android:textSize="@dimen/home_page_top_sz"
        android:typeface="monospace" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_margin"
        android:padding="@dimen/normal_padding"
        android:weightSum="1.0">

        <Spinner
            android:id="@+id/pin_spinner"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:padding="@dimen/normal_padding"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3">

            <Button
                android:id="@+id/pin_create_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/my_button_border"
                android:padding="@dimen/normal_padding"
                android:text="Create"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/sub_text_sz"
                android:typeface="monospace" />
        </RelativeLayout>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:padding="@dimen/normal_padding"
        android:weightSum="1.0">

        <EditText
            android:id="@+id/pin_et"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:cursorVisible="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
            android:hint="Enter the description..."
            android:inputType="text|textCapCharacters|textCapWords|textCapSentences|textAutoCorrect|textAutoComplete|textMultiLine|textImeMultiLine|textNoSuggestions|textUri|textEmailAddress|textEmailSubject|textShortMessage|textLongMessage|textPersonName|textPostalAddress|textPassword|textVisiblePassword|textWebEditText|textFilter|textPhonetic|textWebEmailAddress|textWebPassword|phone"
            android:padding="@dimen/normal_padding"
            android:textAllCaps="false"
            android:textColor="@color/ham_burg_new"
            android:textSize="@dimen/dis_text_sz"
            android:typeface="monospace" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.3">

            <Button
                android:id="@+id/pin_share_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/my_button_border"
                android:padding="@dimen/normal_padding"
                android:text="Pin it"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/sub_text_sz"
                android:typeface="monospace" />
        </RelativeLayout>
    </TableRow>
</LinearLayout>
