<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:id="@+id/signup_lay"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/login_form"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/normal_margin"
        android:layout_width="match_parent"
        >

        <LinearLayout
            android:id="@+id/email_signup"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <TableLayout
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_width="match_parent">

                <TextView
                    android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                    android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="fname"
                    android:textAllCaps="true"
                    android:textColor="#740a11"
                    android:textSize="@dimen/home_page_top_sz"
                    android:typeface="monospace" />

                <EditText
                    android:background="@drawable/grey_border"
                    android:ems="10"
                    android:id="@+id/signup_fname"
                    android:inputType="text|textCapCharacters|textCapWords|textCapSentences|textAutoCorrect|textAutoComplete|textMultiLine|textImeMultiLine|textNoSuggestions|textUri|textEmailAddress|textEmailSubject|textShortMessage|textLongMessage|textPersonName|textPostalAddress|textPassword|textVisiblePassword|textWebEditText|textFilter|textPhonetic|textWebEmailAddress|textWebPassword|phone"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/feed_item_padding_top_bottom"
                    android:layout_width="match_parent"
                    android:padding="@dimen/normal_padding"
                    android:textColor="@color/black"
                    android:textSize="@dimen/home_page_top_sz"
                    android:typeface="monospace" />

                <TextView
                    android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:text="lname"
                    android:textAllCaps="true"
                    android:textColor="#740a11"
                    android:textSize="@dimen/home_page_top_sz"
                    android:typeface="monospace" />

                <EditText
                    android:background="@drawable/grey_border"
                    android:ems="10"
                    android:id="@+id/signup_lname"
                    android:inputType="text|textCapCharacters|textCapWords|textCapSentences|textAutoCorrect|textAutoComplete|textMultiLine|textImeMultiLine|textNoSuggestions|textUri|textEmailAddress|textEmailSubject|textShortMessage|textLongMessage|textPersonName|textPostalAddress|textPassword|textVisiblePassword|textWebEditText|textFilter|textPhonetic|textWebEmailAddress|textWebPassword|phone"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/feed_item_padding_top_bottom"
                    android:layout_width="match_parent"
                    android:padding="@dimen/normal_padding"
                    android:textColor="@color/black"
                    android:textSize="@dimen/home_page_top_sz"
                    android:typeface="monospace" />

                <TextView
                    android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:text="email_address"
                    android:textAllCaps="true"
                    android:textColor="#740a11"
                    android:textSize="@dimen/home_page_top_sz"
                    android:typeface="monospace" />

                <EditText
                    android:background="@drawable/grey_border"
                    android:ems="10"
                    android:id="@+id/signup_email"
                    android:inputType="text|textCapCharacters|textCapWords|textCapSentences|textAutoCorrect|textAutoComplete|textMultiLine|textImeMultiLine|textNoSuggestions|textUri|textEmailAddress|textEmailSubject|textShortMessage|textLongMessage|textPersonName|textPostalAddress|textPassword|textVisiblePassword|textWebEditText|textFilter|textPhonetic|textWebEmailAddress|textWebPassword|phone|time"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/feed_item_padding_top_bottom"
                    android:layout_width="match_parent"
                    android:padding="@dimen/normal_padding"
                    android:textColor="@color/black"
                    android:textSize="@dimen/home_page_top_sz"
                    android:typeface="monospace" />

                <TextView
                    android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:text="@string/prompt_password"
                    android:textAllCaps="true"
                    android:textColor="#740a11"
                    android:textSize="@dimen/home_page_top_sz"
                    android:typeface="monospace" />

                <EditText
                    android:background="@drawable/grey_border"
                    android:ems="10"
                    android:id="@+id/signup_pwd"
                    android:inputType="text|textCapCharacters|textCapWords|textCapSentences|textAutoCorrect|textAutoComplete|textMultiLine|textImeMultiLine|textNoSuggestions|textUri|textEmailAddress|textEmailSubject|textShortMessage|textLongMessage|textPersonName|textPostalAddress|textPassword|textVisiblePassword|textWebEditText|textFilter|textPhonetic|textWebEmailAddress|textWebPassword|phone"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/feed_item_padding_top_bottom"
                    android:layout_width="match_parent"
                    android:padding="@dimen/normal_padding"
                    android:textColor="@color/black"
                    android:textSize="@dimen/home_page_top_sz"
                    android:typeface="monospace" />

                <TextView
                    android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:text="conf_prompt_password"
                    android:textAllCaps="true"
                    android:textColor="#740a11"
                    android:textSize="@dimen/home_page_top_sz"
                    android:typeface="monospace" />

                <EditText
                    android:background="@drawable/grey_border"
                    android:ems="10"
                    android:id="@+id/signup_conf_pwd"
                    android:inputType="text|textCapCharacters|textCapWords|textCapSentences|textAutoCorrect|textAutoComplete|textMultiLine|textImeMultiLine|textNoSuggestions|textUri|textEmailAddress|textEmailSubject|textShortMessage|textLongMessage|textPersonName|textPostalAddress|textPassword|textVisiblePassword|textWebEditText|textFilter|textPhonetic|textWebEmailAddress|textWebPassword|phone"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/feed_item_padding_top_bottom"
                    android:layout_width="match_parent"
                    android:padding="@dimen/normal_padding"
                    android:textColor="@color/black"
                    android:textSize="@dimen/home_page_top_sz"
                    android:typeface="monospace" />

                <TextView
                    android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:text="DATE OF BIRTH (Optional)"
                    android:textAllCaps="false"
                    android:textColor="#740a11"
                    android:textSize="@dimen/home_page_top_sz"
                    android:typeface="monospace" />

                <TextView
                    android:background="@drawable/grey_border"
                    android:hint="MM/DD/YYYY "
                    android:id="@+id/signup_dob"

                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/feed_item_padding_top_bottom"
                    android:layout_width="match_parent"
                    android:maxLength="10"
                    android:padding="@dimen/normal_padding"
                    android:singleLine="true"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/home_page_top_sz"
                    android:typeface="monospace" />

                <TextView
                    android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:text="phone_no"
                    android:textAllCaps="true"
                    android:textColor="#740a11"
                    android:textSize="@dimen/home_page_top_sz"
                    android:typeface="monospace" />

                <EditText
                    android:background="@drawable/grey_border"
                    android:digits="0123456789-"
                    android:ems="10"
                    android:hint="XXX-XXX-XXXX"
                    android:id="@+id/signup_phone"
                    android:imeOptions="actionGo|actionSearch|actionSend|actionNext|actionDone|actionPrevious"
                    android:inputType="text|textCapCharacters|textCapWords|textCapSentences|textAutoCorrect|textAutoComplete|textMultiLine|textImeMultiLine|textNoSuggestions|textUri|textEmailAddress|textEmailSubject|textShortMessage|textLongMessage|textPersonName|textPostalAddress|textPassword|textVisiblePassword|textWebEditText|textFilter|textPhonetic|textWebEmailAddress|textWebPassword|number|numberSigned|numberDecimal|numberPassword|phone"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/feed_item_padding_top_bottom"
                    android:layout_width="match_parent"
                    android:maxLength="12"
                    android:padding="@dimen/normal_padding"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/home_page_top_sz"
                    android:typeface="monospace" />

                <TextView
                    android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:text="conf_phone_no"
                    android:textAllCaps="true"
                    android:textColor="#740a11"
                    android:textSize="@dimen/home_page_top_sz"
                    android:typeface="monospace" />

                <EditText
                    android:background="@drawable/grey_border"
                    android:digits="0123456789-"
                    android:ems="10"
                    android:hint="XXX-XXX-XXXX"
                    android:id="@+id/signup_conf_phone"
                    android:imeOptions="actionGo|actionSearch|actionSend|actionNext|actionDone|actionPrevious"
                    android:inputType="text|textCapCharacters|textCapWords|textCapSentences|textAutoCorrect|textAutoComplete|textMultiLine|textImeMultiLine|textNoSuggestions|textUri|textEmailAddress|textEmailSubject|textShortMessage|textLongMessage|textPersonName|textPostalAddress|textPassword|textVisiblePassword|textWebEditText|textFilter|textPhonetic|textWebEmailAddress|textWebPassword|number|numberSigned|numberDecimal|numberPassword|phone"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/feed_item_padding_top_bottom"
                    android:layout_width="match_parent"
                    android:maxLength="12"
                    android:padding="@dimen/normal_padding"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/home_page_top_sz"
                    android:typeface="monospace" />

                <TextView
                    android:gravity="left|right|center_horizontal|fill_horizontal|center|fill|start|end"
                    android:id="@+id/disclaimer_tv"
                    android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:text=""
                    android:textAllCaps="false"
                    android:textColor="@color/ham_selector"
                    android:textSize="@dimen/sub_text_sz"
                    android:typeface="monospace" />

                <LinearLayout
                    android:background="@drawable/grey_border"
                    android:id="@+id/select_store_details_rg"
                    android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                        android:id="@+id/select_signup_rule_text"
                        android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:padding="@dimen/normal_padding"
                        android:text="Select Your Signup Bonus"
                        android:textAllCaps="true"
                        android:textColor="#740a11"
                        android:textSize="@dimen/home_page_top_sz"
                        android:textStyle="bold"
                        android:typeface="monospace" />

                    <LinearLayout
                        android:id="@+id/select_signup_point_layout"
                        android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="horizontal">

                        <Button
                            android:background="@drawable/grey_border"
                            android:id="@+id/button_points"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_weight="0.5"
                            android:layout_width="wrap_content"
                            android:textAllCaps="false"
                            android:textSize="@dimen/sub_text_sz" />

                        <Button
                            android:background="@drawable/grey_border"
                            android:id="@+id/button_offer"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_weight="0.5"
                            android:layout_width="wrap_content"
                            android:textAllCaps="false"
                            android:textSize="@dimen/sub_text_sz" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/grey_border"
                    android:id="@+id/select_store_details_ll"
                    android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/normal_padding"
                    android:layout_width="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                        android:id="@+id/select_store_nm_tv"
                        android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:padding="@dimen/normal_padding"
                        android:text="xyz"
                        android:textAllCaps="false"
                        android:textColor="@color/ham_burg_new"
                        android:textSize="@dimen/sub_text_sz"
                        android:typeface="monospace" />

                    <TextView
                        android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                        android:id="@+id/select_store_add_tv"
                        android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:paddingBottom="@dimen/normal_padding"
                        android:paddingLeft="@dimen/normal_padding"
                        android:paddingRight="@dimen/normal_padding"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sub_text_sz"
                        android:typeface="monospace" />

                    <TextView
                        android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                        android:id="@+id/select_store_ph_tv"
                        android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:paddingBottom="@dimen/normal_padding"
                        android:paddingLeft="@dimen/normal_padding"
                        android:paddingRight="@dimen/normal_padding"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sub_text_sz"
                        android:typeface="monospace" />
                </LinearLayout>

                <CheckBox
                    android:button="@drawable/custom_checkbox_design"
                    android:checked="true"
                    android:gravity="left|right|center_horizontal|fill_horizontal|center|fill|start|end"
                    android:id="@+id/email_option_chk_bx"
                    android:layout_gravity="left|right|center_horizontal|fill_horizontal|center|fill|start|end"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/normal_padding"
                    android:layout_width="wrap_content"
                    android:text="Opt-in to receive Honeybaked Ham loyalty and offer emails"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sub_text_sz"
                    android:typeface="monospace" />
            </TableLayout>

            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_width="match_parent"
                app:mrl_rippleAlpha="0.5"
                app:mrl_rippleColor="@color/transparent"
                app:mrl_rippleDimension="10dp"
                app:mrl_rippleHover="true"
                app:mrl_rippleOverlay="true">

                <RelativeLayout
                    android:background="@color/ham_burg_new"
                    android:id="@+id/change_store_rl"
                    android:layout_height="0dp"
                    android:layout_width="match_parent"
                    android:padding="@dimen/button_padding"
                    android:weightSum="1.0">

                    <TextView
                        android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                        android:id="@+id/change_store_tv"
                        android:layout_centerInParent="true"
                        android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content"
                        android:text="CHANGE STORE"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/home_page_top_sz"
                        android:textStyle="bold"
                        android:typeface="monospace" />

                    <ImageView
                        android:background="@drawable/white_arrow"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.05"
                        android:layout_width="wrap_content" />
                </RelativeLayout>
            </com.balysv.materialripple.MaterialRippleLayout>

            <LinearLayout
                android:id="@+id/privacy_ll"
                android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/normal_padding"
                android:layout_width="match_parent"
                android:orientation="horizontal">

                <CheckBox
                    android:button="@drawable/custom_checkbox_design"
                    android:checked="false"
                    android:gravity="left|right|center_horizontal|fill_horizontal|center|fill|start|end"
                    android:id="@+id/privacy_chk_bx"
                    android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="#740a11"
                    android:textSize="@dimen/sub_text_sz"
                    android:typeface="monospace" />

                <TextView
                    android:gravity="left|right|center_horizontal|fill_horizontal|center|fill|start|end"
                    android:id="@+id/privacy_policy_textView"
                    android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_width="wrap_content"
                    android:text="@string/privacy_policy"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sub_text_sz"
                    android:typeface="monospace" />
            </LinearLayout>

            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/select_store_bottom"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_width="match_parent"
                app:mrl_rippleAlpha="0.5"
                app:mrl_rippleColor="@color/transparent"
                app:mrl_rippleDimension="10dp"
                app:mrl_rippleHover="true"
                app:mrl_rippleOverlay="true">

                <RelativeLayout
                    android:background="@color/ham_burg_new"
                    android:id="@+id/select_store_rl"
                    android:layout_height="0dp"
                    android:layout_width="match_parent"
                    android:padding="@dimen/button_padding"
                    android:weightSum="1.0">

                    <TextView
                        android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                        android:id="@+id/select_store_tv"
                        android:layout_centerInParent="true"
                        android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content"
                        android:text="SIGN UP"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/home_page_top_sz"
                        android:textStyle="bold"
                        android:typeface="monospace" />

                    <ImageView
                        android:background="@drawable/white_arrow"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.05"
                        android:layout_width="wrap_content" />
                </RelativeLayout>
            </com.balysv.materialripple.MaterialRippleLayout>

            <TextView
                android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                android:id="@+id/textView6"
                android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_width="match_parent"
                android:text="Disclaimer: android not available for use in California locations."
                android:textAllCaps="false"
                android:textColor="@color/ham_disclaimer"
                android:textSize="@dimen/dis_text_sz"
                android:typeface="monospace" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
