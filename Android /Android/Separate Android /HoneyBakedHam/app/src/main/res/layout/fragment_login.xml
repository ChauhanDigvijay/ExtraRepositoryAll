<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:gravity="left|right|center_horizontal|fill_horizontal|center|fill|start|end"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/email_login_form"
        android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
        android:layout_height="wrap_content"

        android:layout_width="match_parent"
        android:orientation="vertical">

        <TextView
            android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_margin"
            android:layout_width="match_parent"
            android:paddingTop="@dimen/normal_margin"
            android:text="@string/prompt_email"
            android:textAllCaps="true"
            android:textColor="@color/ham_burg_new"
            android:textSize="@dimen/home_page_top_sz"
            android:typeface="monospace" />

        <EditText
            android:background="@drawable/grey_border"
            android:digits="0123456789-"
            android:ems="10"
            android:hint="XXX-XXX-XXXX"
            android:id="@+id/email_et"
            android:inputType="text|textCapCharacters|textCapWords|textCapSentences|textAutoCorrect|textAutoComplete|textMultiLine|textImeMultiLine|textNoSuggestions|textUri|textEmailAddress|textEmailSubject|textShortMessage|textLongMessage|textPersonName|textPostalAddress|textPassword|textVisiblePassword|textWebEditText|textFilter|textPhonetic|textWebEmailAddress|textWebPassword|number|numberSigned|numberDecimal|numberPassword|phone"
            android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/normal_margin"
            android:layout_width="match_parent"
            android:maxLength="12"
            android:singleLine="true"
            android:textColor="@color/ham_burg_new"
            android:textSize="@dimen/home_page_top_sz"
            android:typeface="monospace" />

        <TextView
            android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
            android:id="@+id/textView5"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_margin"
            android:layout_width="match_parent"
            android:text="@string/prompt_password"
            android:textAllCaps="true"
            android:textColor="@color/ham_burg_new"
            android:textSize="@dimen/home_page_top_sz"
            android:typeface="monospace" />

        <EditText
            android:background="@drawable/grey_border"
            android:id="@+id/password_et"
            android:inputType="text|textCapCharacters|textCapWords|textCapSentences|textAutoCorrect|textAutoComplete|textMultiLine|textImeMultiLine|textNoSuggestions|textUri|textEmailAddress|textEmailSubject|textShortMessage|textLongMessage|textPersonName|textPostalAddress|textPassword|textVisiblePassword|textWebEditText|textFilter|textPhonetic|textWebEmailAddress|textWebPassword|phone"
            android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/normal_margin"
            android:layout_width="match_parent"
            android:maxLines="1"

            android:singleLine="true"
            android:textColor="@color/ham_burg_new"
            android:textSize="@dimen/home_page_top_sz"
            android:typeface="monospace" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_horizontal_margin"
            android:weightSum="1.0">

            <CheckBox
                android:id="@+id/remember_chk_bx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:button="@drawable/custom_checkbox_design"
                android:checked="false"
                android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                android:text=" Remember me"
                android:textColor="@color/ham_burg_new"

                android:typeface="monospace" />

            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                app:mrl_rippleAlpha="0.5"
                app:mrl_rippleColor="@color/transp_white"
                app:mrl_rippleDimension="10dp"
                app:mrl_rippleHover="true"
                app:mrl_rippleOverlay="true">

                <TextView
                    android:id="@+id/forget_pw_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                    android:text="forget_password_txt"
                    android:textColor="@color/ham_burg_new"
                    android:textSize="@dimen/sub_text_sz"
                    android:typeface="monospace" />
            </com.balysv.materialripple.MaterialRippleLayout>
        </TableRow>

        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:mrl_rippleAlpha="0.5"
            app:mrl_rippleColor="@color/transparent"
            app:mrl_rippleDimension="10dp"
            app:mrl_rippleHover="true"
            app:mrl_rippleOverlay="true">

            <RelativeLayout
                android:background="@color/ham_burg_new"
                android:id="@+id/login_rl"
                android:layout_height="40dp"
                android:layout_width="match_parent"
                android:padding="@dimen/button_padding"
                android:weightSum="1.0">

                <TextView
                    android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                    android:layout_centerInParent="true"
                    android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                    android:layout_height="40dp"
                    android:layout_width="match_parent"
                    android:text="SIGN IN"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/home_page_top_sz"
                    android:textStyle="bold"
                    android:typeface="monospace" />

                <ImageView
                    android:background="@drawable/white_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_height="40dp"
                    android:layout_weight="0.05"
                    android:layout_width="wrap_content" />
            </RelativeLayout>
        </com.balysv.materialripple.MaterialRippleLayout>

        <TableRow
            android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:padding="@dimen/normal_margin">

            <TextView
                android:gravity="left|right|center_horizontal|fill_horizontal|center|fill|start|end"
                android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"

                android:textAllCaps="false"
                android:textColor="@color/ham_ash"
                android:textSize="@dimen/sub_text_sz"
                android:typeface="monospace" />

            <com.balysv.materialripple.MaterialRippleLayout
                android:gravity="left|right|center_horizontal|fill_horizontal|center|fill|start|end"
                android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                app:mrl_rippleAlpha="0.5"
                app:mrl_rippleColor="@color/transp_white"
                app:mrl_rippleDimension="10dp"
                app:mrl_rippleHover="true"
                app:mrl_rippleOverlay="true"
                android:padding="@dimen/normal_margin">

                <TextView
                    android:id="@+id/create"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="action_sign_up"
                    android:textAllCaps="true"
                    android:textColor="@color/ham_burg_new"
                    android:textSize="@dimen/dis_text_sz"
                    android:textStyle="bold"
                    android:typeface="monospace" />
            </com.balysv.materialripple.MaterialRippleLayout>
        </TableRow>
    </LinearLayout>

    <TextView
        android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
        android:id="@+id/disclaimer_tv"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/normal_margin"
        android:text=""
        android:textAllCaps="false"
        android:textColor="@color/ham_disclaimer"
        android:textSize="@dimen/dis_text_sz"
        android:typeface="monospace" />
</RelativeLayout>
