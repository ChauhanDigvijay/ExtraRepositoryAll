<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView

        android:id="@+id/android"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <TextView
                android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                android:id="@+id/notification_title"
                android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/notification_top_margin"
                android:layout_marginRight="@dimen/notification_top_margin"
                android:layout_marginTop="@dimen/notification_top_margin"
                android:layout_width="match_parent"
                android:text="HoneyBacked Ham"
                android:textColor="@color/ham_notification_title_color"
                android:textSize="@dimen/notification_title_size"
                android:textStyle="bold"
                android:typeface="monospace" />

            <TextView
                android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                android:id="@+id/notification_content"
                android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/notification_top_margin"
                android:layout_marginLeft="@dimen/notification_top_margin"
                android:layout_marginRight="@dimen/notification_top_margin"
                android:layout_marginTop="@dimen/button_margin"
                android:layout_width="match_parent"
                android:text="HoneyBacked Ham"
                android:textColor="@color/ham_notification_title_color"
                android:textSize="@dimen/notification_content_size"
                android:typeface="monospace" />

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/notification_top_margin"
                android:layout_marginLeft="@dimen/notification_top_margin"
                android:layout_marginRight="@dimen/notification_top_margin"
                android:layout_width="match_parent"
                android:orientation="horizontal">

                <com.balysv.materialripple.MaterialRippleLayout
                    android:id="@+id/notification_ripple_cancel"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/button_margin"
                    android:layout_weight="0.5"
                    android:layout_width="match_parent"
                    app:mrl_rippleAlpha="0.5"
                    app:mrl_rippleColor="@color/transparent"
                    app:mrl_rippleDimension="10dp"
                    app:mrl_rippleHover="true"
                    app:mrl_rippleOverlay="true">

                    <Button
                        android:background="@drawable/my_button_border"
                        android:id="@+id/notification_cancel"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:text="Close"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/home_page_top_sz"
                        android:textStyle="bold"
                        android:typeface="monospace" />
                </com.balysv.materialripple.MaterialRippleLayout>

                <com.balysv.materialripple.MaterialRippleLayout
                    android:id="@+id/notification__ripple_show"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/button_margin"
                    android:layout_weight="0.5"
                    android:layout_width="match_parent"
                    app:mrl_rippleAlpha="0.5"
                    app:mrl_rippleColor="@color/transparent"
                    app:mrl_rippleDimension="10dp"
                    app:mrl_rippleHover="true"
                    app:mrl_rippleOverlay="true">

                    <Button
                        android:background="@drawable/my_button_border"
                        android:id="@+id/notification_show"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:text="Show"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/home_page_top_sz"
                        android:textStyle="bold"
                        android:typeface="monospace" />
                </com.balysv.materialripple.MaterialRippleLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
