<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="1.0">
    <LinearLayout
        android:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="1.0"
        android:layout_weight="1.0">
    <LinearLayout
    android:background="#ab101f"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:weightSum="1.0"
    android:layout_weight="0.1">
        <LinearLayout
    android:orientation="horizontal"
    android:id="@+id/rewards_rl"
    android:paddingLeft="@dimen/normal_padding"
    android:paddingRight="@dimen/normal_padding"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:weightSum="1.0"
    android:layout_weight="0.5">
    <TextView
        android:textSize="@dimen/sub_text_sz"
        android:typeface="monospace"
        android:textColor="@color/white"
        android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
        android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
        android:paddingRight="@dimen/normal_padding"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="Rewards"
        android:layout_weight="0.7" />

    <LinearLayout
        android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
        android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
        android:padding="@dimen/normal_margin"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.3">

        <TextView
            android:textSize="@dimen/sub_text_sz"
            android:typeface="monospace"
            android:textColor="@color/black"
            android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
            android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
            android:id="@+id/rewards_count_tv"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>
    <LinearLayout
    android:orientation="horizontal"
    android:id="@+id/offers_rl"
    android:paddingLeft="@dimen/normal_padding"
    android:paddingRight="@dimen/normal_padding"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:weightSum="1.0"
    android:layout_weight="0.5">
    <TextView
        android:textSize="@dimen/sub_text_sz"
        android:typeface="monospace"
        android:textColor="@color/white"
        android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
        android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
        android:paddingRight="@dimen/normal_padding"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="Offers"
        android:layout_weight="0.7" />

    <LinearLayout
        android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
        android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
        android:padding="@dimen/normal_margin"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.3">

        <TextView
            android:textSize="@dimen/sub_text_sz"
            android:typeface="monospace"
            android:textColor="@color/black"
            android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
            android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
            android:id="@+id/offers_count_tv"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout></LinearLayout>
<RelativeLayout
android:layout_width="match_parent"
android:layout_height="0dp"
android:layout_weight="0.9">
<ListView
    android:id="@+id/offer_lv"
    android:background="@color/transperent"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@drawable/dash_divider"
    android:dividerHeight="2dp"
    android:layout_centerInParent="true"
    android:layerType="software" />

<TextView
    android:textSize="@dimen/home_page_top_sz"
    android:typeface="serif"
    android:textColor="@color/ham_burg"
    android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
    android:layout_gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
    android:id="@+id/no_offer_tv"
    android:padding="@dimen/normal_padding"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:textAllCaps="false" />
</RelativeLayout>
    </LinearLayout>
    </LinearLayout>
