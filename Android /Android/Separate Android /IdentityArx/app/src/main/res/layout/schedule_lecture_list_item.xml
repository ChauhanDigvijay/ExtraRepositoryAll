<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">

    <LinearLayout
        android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dp"
        android:padding="3dp">

        <ImageView
            android:id="@+id/list_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/aadhar" />
    </LinearLayout>

    <TextView
        android:id="@+id/textviewlecturetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnail"
        android:layout_toRightOf="@+id/thumbnail"
        android:text=""
        android:textColor="#040404"
        android:textSize="20dp"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView
        android:id="@+id/textview_course_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textviewlecturetime"
        android:layout_marginTop="1dp"
        android:layout_toRightOf="@+id/thumbnail"
        android:singleLine="true"
        android:textColor="#343434"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textviewlecturelocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_course_name"
        android:layout_marginTop="1dp"
        android:layout_toRightOf="@+id/thumbnail"
        android:textColor="#343434"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textviewlecturetime"
        android:layout_marginRight="5dp"
        android:gravity="left|right|center_horizontal|fill_horizontal|center|fill|start|end"
        android:text=""
        android:textColor="#10bcc9"
        android:textSize="13dp"
        android:textStyle="bold" />
</RelativeLayout>
