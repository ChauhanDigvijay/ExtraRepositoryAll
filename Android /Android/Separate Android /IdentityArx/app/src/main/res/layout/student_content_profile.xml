<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/activity_horizontal_margin"
    android:layout_width="match_parent"
    android:padding="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">

    <RelativeLayout
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="@dimen/activity_horizontal_margin">

        <ImageView
            android:id="@+id/userIdIcon"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"

            android:layout_width="wrap_content"
            android:src="@drawable/id"
            android:tint="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/student_userId"
            android:layout_height="wrap_content"

            android:layout_width="wrap_content"
            android:text="011-cs-22015"
            android:textColor="#212121"
           />

        <TextView
            android:layout_below="@+id/student_userId"
            android:layout_height="wrap_content"

            android:layout_marginTop="8dp"

            android:layout_width="wrap_content"
            android:text="Roll No"
            android:textColor="#727272"
           />
    </RelativeLayout>

    <include layout="@layout/item_divider" />

    <RelativeLayout
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="@dimen/activity_horizontal_margin">

        <ImageView
            android:id="@+id/ivContactItem1"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"

            android:layout_width="wrap_content"
            android:src="@drawable/ic_phone_black"
            android:tint="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/student_contact"
            android:layout_height="wrap_content"

            android:layout_width="wrap_content"
            android:text="(123) 456-7890"
            android:textColor="#212121"
          />

        <TextView
            android:layout_below="@+id/student_contact"
            android:layout_height="wrap_content"

            android:layout_marginTop="8dp"

            android:layout_width="wrap_content"
            android:text="Contact Number"
            android:textColor="#727272"
           />
    </RelativeLayout>

    <include layout="@layout/item_divider" />

    <RelativeLayout
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="@dimen/activity_horizontal_margin">

        <ImageView
            android:id="@+id/programmeicon"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"

            android:layout_width="wrap_content"
            android:src="@drawable/ic_import_contacts_black_24dp"
            android:tint="@color/colorPrimaryDark"
            android:visibility="visible" />

        <TextView
            android:id="@+id/programme"
            android:layout_height="wrap_content"

            android:layout_width="wrap_content"
            android:text="BTECH"
            android:textColor="#212121"
           />

        <TextView
            android:layout_below="@+id/programme"
            android:layout_height="wrap_content"

            android:layout_marginTop="8dp"

            android:layout_width="wrap_content"
            android:text="Programme"
            android:textColor="#727272"
            />

    </RelativeLayout>

    <include layout="@layout/item_divider" />

    <RelativeLayout

        android:clickable="true"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="@dimen/activity_horizontal_margin">

        <ImageView
            android:id="@+id/pursuingYear_icon"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"

            android:layout_width="wrap_content"
            android:src="@drawable/ic_today_black_24dp"
            android:tint="@color/colorPrimaryDark"
            android:visibility="visible" />

        <TextView
            android:id="@+id/pursuingYear"
            android:layout_height="wrap_content"

            android:layout_width="wrap_content"
            android:text="1st"
            android:textColor="#212121"
           />

        <TextView
            android:layout_below="@+id/pursuingYear"
            android:layout_height="wrap_content"

            android:layout_marginTop="8dp"

            android:layout_width="wrap_content"
            android:text="Pursuing Year"
            android:textColor="#727272"
           ></TextView>
    </RelativeLayout>

    <include layout="@layout/item_divider" />

    <RelativeLayout
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="@dimen/activity_horizontal_margin">

        <ImageView
            android:id="@+id/semester_icon"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"

            android:layout_width="wrap_content"
            android:src="@drawable/ic_import_contacts_black_24dp"
            android:tint="@color/colorPrimaryDark"
            android:visibility="visible" />

        <TextView
            android:id="@+id/semester"
            android:layout_height="wrap_content"

            android:layout_width="wrap_content"
            android:text="1st"
            android:textColor="#212121"
            />

        <TextView
            android:layout_below="@+id/semester"
            android:layout_height="wrap_content"

            android:layout_marginTop="8dp"

            android:layout_width="wrap_content"
            android:text="Semester"
            android:textColor="#727272"
          />

    </RelativeLayout>

    <include layout="@layout/item_divider" />

    <RelativeLayout
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="@dimen/activity_horizontal_margin">

        <ImageView
            android:id="@+id/dob_icon"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"

            android:layout_width="wrap_content"
            android:src="@drawable/ic_cake_black_24dp"
            android:tint="@color/colorPrimaryDark"
            android:visibility="visible" />

        <TextView
            android:id="@+id/dob"
            android:layout_height="wrap_content"

            android:layout_width="wrap_content"
            android:text="28 April,1993"
            android:textColor="#212121"
          />

        <TextView
            android:layout_below="@+id/dob"
            android:layout_height="wrap_content"

            android:layout_marginTop="8dp"

            android:layout_width="wrap_content"
            android:text="Date of Birth"
            android:textColor="#727272"
           />

    </RelativeLayout>

    <include layout="@layout/item_divider" />

    <RelativeLayout
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="@dimen/activity_horizontal_margin">

        <ImageView
            android:id="@+id/emailIcon"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"

            android:layout_width="wrap_content"
            android:src="@drawable/ic_email_black"
            android:tint="@color/colorPrimaryDark" />

        <TextView
            android:ellipsize="end"
            android:id="@+id/student_emailId"
            android:layout_height="wrap_content"

            android:layout_width="wrap_content"
            android:maxLines="1"
            android:text="chintan@letsnurture.com"
            android:textColor="#212121"
             />

        <TextView
            android:layout_below="@+id/student_emailId"
            android:layout_height="wrap_content"

            android:layout_marginTop="8dp"

            android:layout_width="wrap_content"
            android:text="Email Id"
            android:textColor="#727272"
            />
    </RelativeLayout>

    <RelativeLayout
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="@dimen/activity_horizontal_margin">

        <ImageView
            android:id="@+id/aadhaarIcon"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"

            android:layout_width="wrap_content"
            android:src="@drawable/aadhar"
            android:tint="@color/colorPrimaryDark"
            android:visibility="visible" />

        <TextView
            android:ellipsize="end"
            android:id="@+id/student_aadhar"
            android:layout_height="wrap_content"

            android:layout_width="wrap_content"
            android:maxLines="1"
            android:text="15548-5623-4521"
            android:textColor="#212121"
            />

        <TextView
            android:layout_below="@+id/student_aadhar"
            android:layout_height="wrap_content"

            android:layout_marginTop="8dp"

            android:layout_width="wrap_content"
            android:text="AADHAAR Number"
            android:textColor="#727272"
           />
    </RelativeLayout>

    <include layout="@layout/item_divider" />

    <RelativeLayout
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="@dimen/activity_horizontal_margin">

        <ImageView
            android:id="@+id/departmentICon"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"

            android:layout_width="wrap_content"
            android:src="@drawable/ic_card_travel_black_24dp"
            android:tint="@color/colorPrimaryDark" />

        <TextView
            android:ellipsize="end"
            android:id="@+id/student_department"
            android:layout_height="wrap_content"

            android:layout_width="wrap_content"
            android:maxLines="1"
            android:text="CSE"
            android:textColor="#212121"
            />

        <TextView
            android:layout_below="@+id/student_department"
            android:layout_height="wrap_content"

            android:layout_marginTop="8dp"

            android:layout_width="wrap_content"
            android:text="Department"
            android:textColor="#727272"
            />
    </RelativeLayout>

    <include layout="@layout/item_divider" />

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin" />
    />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
