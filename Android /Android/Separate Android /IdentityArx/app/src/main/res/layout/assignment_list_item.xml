<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dp"
        android:padding="3dp">

        <ImageView
            android:id="@+id/assignment_list_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/aadhar" />
    </LinearLayout>

    <TextView
        android:id="@+id/assignment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnail"
        android:layout_toRightOf="@+id/thumbnail"
        android:text="Assignment Title"
        android:textColor="#040404"
        android:textSize="20dp"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView
        android:id="@+id/assignment_course"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/assignment_name"
        android:layout_marginTop="1dp"
        android:layout_toRightOf="@+id/thumbnail"
        android:singleLine="true"
        android:text="Course"
        android:textColor="#343434"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/assignment_maxpoint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/assignment_course"
        android:layout_marginTop="1dp"
        android:layout_toRightOf="@+id/thumbnail"
        android:singleLine="true"
        android:text="Max Points"
        android:textColor="#343434"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/assignment_submit_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/assignment_maxpoint"
        android:layout_marginTop="1dp"
        android:layout_toRightOf="@+id/thumbnail"
        android:singleLine="true"
        android:text="Submission Date"
        android:textColor="#343434"
        android:textSize="15dp" />
</RelativeLayout>
