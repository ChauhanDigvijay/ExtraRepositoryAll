<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/img_Back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bgimage"
            android:scaleType="fitXY"/>
        <include
            android:id="@+id/tool_bar"
            layout="@layout/toolbar_menu_activity"
            ></include>

        <FrameLayout
            android:layout_below="@id/tool_bar"
            android:id="@+id/ll_progress"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/ll_progress1"
                android:paddingBottom="65dp">


                <fragment
                    android:id="@+id/image_fragment"
                    android:name="com.BasicApp.Fragments.ImageMenu_Fragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:layout="@layout/list_menuimage"
                   />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom">
                <com.BasicApp.Activites.Generic.BottomToolbarActivity
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/bottom_toolbar"
                    />
            </LinearLayout>
        </FrameLayout>

    </RelativeLayout>
    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@color/White"
        android:choiceMode="singleChoice"
        android:dividerHeight="0dp"
        android:divider="@color/white" />

</android.support.v4.widget.DrawerLayout>