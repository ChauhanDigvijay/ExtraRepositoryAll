<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/img_Back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bgimage"
            android:scaleType="fitXY"/>
        <include
            android:id="@+id/tool_bar"
            layout="@layout/toolbar_menu_item"
            ></include>


        <ScrollView
            android:layout_below="@id/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:scrollbars="none"
            android:background="@null"
            android:fillViewport="true"
            android:paddingBottom="60dp"
            >

            <LinearLayout
                android:id="@+id/topframe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:orientation="vertical"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"

                    >

                    <FrameLayout
                        android:id="@+id/vpimageframe"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:orientation="vertical" >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingBottom="10dp" >


                            <android.support.v4.view.ViewPager
                                android:id="@+id/menu_img"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:adjustViewBounds="true"
                                android:scaleType="fitXY" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:weightSum="2" >

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="horizontal" >


                                    <FrameLayout android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_alignParentBottom="true"
                                        android:layout_alignParentRight="true"
                                        android:layout_marginRight="15dp"
                                        android:layout_marginBottom="15dp"
                                        >

                                    </FrameLayout>
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    >
                                    <TextView
                                        android:id="@+id/categoryName"
                                        android:layout_height="wrap_content"
                                        android:layout_width="wrap_content"
                                        android:text="asd"
                                        android:textColor="@color/White"
                                        android:visibility="gone"
                                        android:layout_centerInParent="true"
                                        android:textSize="20dp"
                                        android:textStyle="bold"></TextView>
                                </RelativeLayout>
                            </LinearLayout>

                        </RelativeLayout>
                    </FrameLayout>

                    <TextView
                        android:id="@+id/expenseType11"
                        style="@style/text.15.prompt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"

                        android:text="Name"
                        android:textColor="@color/Red"
                        android:textStyle="bold"
                        android:visibility="gone"
                        />
                </RelativeLayout>

                <View
                    android:id="@+id/viewsep"
                    android:layout_width="match_parent"
                    android:layout_height=".5px"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/fbbrown" />

                <LinearLayout
                    android:id="@+id/vptextlinearlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@null"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp" >
                    <LinearLayout
                        android:id="@+id/vptextlinearlayoutname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:background="@null"
                        android:orientation="horizontal"
                        android:paddingLeft="15dp"
                        android:weightSum="1"
                        android:paddingRight="15dp" >
                        <TextView
                            android:id="@+id/expenseType1"
                            style="@style/text.15.prompt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:text="Name"
                            android:layout_weight="1"
                            android:textColor="@color/Red"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:id="@+id/expenseType2"
                            style="@style/text.15.prompt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_weight="1"
                            android:text="Cost"
                            android:visibility="invisible"
                            android:textColor="@color/Red"
                            android:textStyle="bold"
                            />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/expenseType"
                        style="@style/text.17.prompt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Description"
                        android:visibility="gone"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/todayDate"
                        style="@style/text.13.prompt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/desc"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/btn_next"
                        android:text="Red Onions,Bell Paper,Button,Tomatoes,Tomato Saurce"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:orientation="horizontal"
                        android:padding="10dp" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="vertical" >

                            <TextView
                                style="@style/text.13"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="Select a size"
                                android:layout_marginBottom="5dp"
                                android:textColor="@color/black"
                                android:textStyle="bold" />

                            <Spinner
                                android:id="@+id/spinner1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/two_side_round_corner_button"
                                android:gravity="center_vertical"
                                android:textColor="@color/fbbrown" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="vertical" >

                            <TextView
                                style="@style/text.13"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_marginBottom="5dp"
                                android:text="Select a quantity"
                                android:textColor="@color/black"
                                android:textStyle="bold" />

                            <Spinner
                                android:id="@+id/spinner2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:background="@drawable/two_side_round_corner_button"
                                android:gravity="center_vertical" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/vptextlinearlayout1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:visibility="gone" >

                        <TextView
                            android:id="@+id/detailMsg"
                            style="@style/text.13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="CRUST"
                            android:textColor="@color/fbbrown"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:id="@+id/radioGroup"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/fbred"
                            android:orientation="vertical" >

                            <RadioButton
                                android:id="@+id/radioButton1"
                                style="@style/text.13"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/fbred"
                                android:height="20dp"
                                android:text="Regular Crust"
                                android:textColor="@color/fbbrown"
                                android:width="20dp" />

                            <RadioButton
                                android:id="@+id/radioButton2"
                                style="@style/text.13"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/fbred"
                                android:text="Wheat Crust "
                                android:textColor="@color/fbbrown" />

                            <RadioButton
                                android:id="@+id/radioButton3"
                                style="@style/text.13"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/fbred"
                                android:text="Wheat Crust "
                                android:textColor="@color/fbbrown" />

                            <RadioButton
                                android:id="@+id/radioButton4"
                                style="@style/text.13"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/fbred"
                                android:text="Wheat Crust"
                                android:textColor="@color/fbbrown" />
                        </RadioGroup>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/vptextlinearlayout1s"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="vertical" android:visibility="gone">

                        <TextView
                            android:id="@+id/detailMsg1"
                            style="@style/text.13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="EXTRA TOPPINGS"
                            android:textColor="@color/fbbrown"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:id="@+id/radioGroup2"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/fbred"
                            android:orientation="vertical" >

                            <RadioButton
                                android:id="@+id/radioButton11"
                                style="@style/text.13"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/fbred"
                                android:text="WHOLE LG"
                                android:textColor="@color/fbbrown" />

                            <RadioButton
                                android:id="@+id/radioButton21"
                                style="@style/text.13"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/fbred"
                                android:text="1ST HALF LG"
                                android:textColor="@color/fbbrown" />

                            <RadioButton
                                android:id="@+id/radioButton31"
                                style="@style/text.13"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/fbred"
                                android:text="1ST HALF LG"
                                android:textColor="@color/fbbrown" />

                            <RadioButton
                                android:id="@+id/radioButton41"
                                style="@style/text.13"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/fbred"
                                android:text="1ST HALF LG "
                                android:textColor="@color/fbbrown" />
                        </RadioGroup>
                    </LinearLayout>

                    <Button
                        android:id="@+id/contnue_btn"

                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@color/Red1"
                        android:gravity="center"
                        android:onClick="orderscreen"
                        android:text="Add To Order"
                        android:textColor="@color/White"
                        android:visibility="gone" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingRight="8dp"
                        android:paddingLeft="8dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nutrition Card"
                                android:textColor="@color/redsurend"
                                style="@style/text.19.prompt"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2"
                            android:padding="2dp">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Calories 300g"
                                    android:textColor="@color/black"
                                    style="@style/text.13.prompt"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Calories from Fat 110%"
                                    android:textColor="@color/black"
                                    style="@style/text.13.prompt"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2"
                            android:padding="2dp">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Totla Fat 12kg"
                                    android:textColor="@color/black"
                                    style="@style/text.13.prompt"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="20%"
                                    android:textColor="@color/black"
                                    style="@style/text.13.prompt"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2"
                            android:padding="2dp">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Cholesterol 0g"
                                    android:textColor="@color/black"
                                    style="@style/text.13.prompt"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0%"
                                    android:textColor="@color/black"
                                    style="@style/text.13.prompt"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2"
                            android:padding="2dp">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Vitamin A 5%"
                                    android:textColor="@color/black"
                                    style="@style/text.13.prompt"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Vitamin C 0%"
                                    android:textColor="@color/black"
                                    style="@style/text.13.prompt"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/gray"
                                android:layout_marginTop="3dp"
                                android:layout_marginBottom="3dp"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:weightSum="10">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    android:layout_weight="5"
                                    android:gravity="center">
                                    <TextView
                                        android:id="@+id/buttonInc"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="+"
                                        android:textColor="@color/blue"
                                        style="@style/text.25"

                                        android:src="@drawable/abback"/>
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingLeft="15dp"
                                        android:paddingRight="15dp"
                                        android:paddingTop="2dp"
                                        android:paddingBottom="2dp"
                                        android:gravity="center"
                                        android:layout_gravity="center_vertical">
                                        <TextView
                                            android:id="@+id/txtCount"
                                            android:layout_width="30dp"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/two_side_round_corner_button"
                                            android:text="1"

                                            android:gravity="center"
                                            /></LinearLayout>
                                    <TextView
                                        android:id="@+id/buttonDec"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="-"
                                        android:textColor="@color/blue"
                                        style="@style/text.25"
                                        android:src="@drawable/abback"/></LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    android:layout_weight="5"
                                    android:gravity="center">
                                    <Button
                                        android:id="@+id/addorder"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="end"
                                        android:paddingLeft="15dp"
                                        android:paddingRight="15dp"
                                        android:text="Add To Order"

                                        android:background="@color/Red1"
                                        android:textColor="@color/white"/>
                                </LinearLayout></LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="15"
            android:gravity="bottom"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <com.BasicApp.Activites.Generic.BottomToolbarActivity
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/bottom_toolbar"
                />
        </LinearLayout>

    </RelativeLayout>
    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/White"
        android:choiceMode="singleChoice"
        android:dividerHeight="0dp"
        android:divider="@color/white" />

</android.support.v4.widget.DrawerLayout>