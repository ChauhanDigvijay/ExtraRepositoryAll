<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fbbackcolor">


    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/right_side_image_url"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"

        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00ffffff"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="100"
            android:orientation="horizontal"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="20"
                android:background="#00ffffff" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="60"
                android:background="#00ffffff"
                android:orientation="vertical"
                android:weightSum="100">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="60"
                    android:background="#00ffffff"
                    android:gravity="center"
                    android:orientation="vertical">

                    <FrameLayout
                        android:id="@+id/seekArcContainer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <com.fishbowl.LoyaltyTabletApp.Utils.SeekArc
                            android:id="@+id/seekArc"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:padding="12dp"
                            android:paddingTop="5dp"
                            app:arcColor="@color/black"

                            app:progress="0"
                            app:progressColor="@color/fbheadercolor"
                            app:progressWidth="10dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="90">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="30" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="30"
                                android:gravity="center"
                                android:orientation="vertical"

                                >

                                <ImageView
                                    android:id="@+id/rewards"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="0dp"
                                    android:padding="5dp"
                                    android:src="@drawable/reward"

                                    />

                                <TextView
                                    android:id="@+id/seekArcProgress"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="0dp"
                                    android:padding="0dp"
                                    android:text="0"
                                    android:textColor="@color/black"
                                    android:textSize="40sp"
                                    android:textStyle="bold" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="30" />
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/textStart"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_marginBottom="@dimen/progress_txt_margin_bottom"
                                android:layout_marginLeft="@dimen/progress_txt_margin_left"
                                android:text="0"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/black" />


                            <TextView
                                android:id="@+id/textEnd"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginBottom="@dimen/progress_txt_margin_bottom"
                                android:layout_marginRight="@dimen/progress_txt_margin_right"
                                android:gravity="bottom"
                                android:text="35"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/points_until_rewards"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                               android:layout_centerHorizontal="true"
                                android:layout_above="@+id/loyalty_layout"
                                android:text=""
                                android:textColor="@color/dark_gray"
                                android:textSize="9sp" />

                            <LinearLayout
                                android:layout_centerHorizontal="true"
                                android:layout_alignParentBottom="true"
                                android:id="@+id/loyalty_layout"
                                android:layout_width="wrap_content"
                                android:padding="2dp"
                                android:gravity="center_vertical"
                                android:layout_height="wrap_content"

                               >

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="20dp"
                                    android:layout_marginRight="3dp"
                                    android:src="@drawable/loyalty_card_image" />

                                <TextView
                                    android:layout_gravity="center_vertical"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Loyalty Card" />
                            </LinearLayout>

                        </RelativeLayout>
                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="40"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/button1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:background="@drawable/allside_round_cornner_buttton"
                        android:padding="15dp"
                        android:text="Redeem  your rewards"
                        android:textColor="@color/White" />

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/mybutton"
                        android:padding="15dp"
                        android:text="Special offers for you"
                        android:textColor="@color/White" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="20"
                android:background="#00ffffff" />
        </LinearLayout>

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/footer_image_url"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="horizontal"
            android:visibility="gone" />

    </LinearLayout>


</FrameLayout>
