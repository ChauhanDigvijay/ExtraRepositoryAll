<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/right_side_image_url"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
       />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00ffffff"
        android:orientation="vertical"
        android:weightSum="100"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="92"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="0dp"
                android:layout_weight="15"
                android:background="#00ffffff"
                android:gravity="center" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="70"
                android:background="#00ffffff"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"

                android:weightSum="100">

                <LinearLayout
                    android:id="@+id/parent_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="25"
                    android:gravity="center"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/login_editText_margin"
                        app:cardElevation="4dp">

                        <com.fishbowl.LoyaltyTabletApp.Utils.CustomEditText
                            android:id="@+id/target"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/twosidenull"
                            android:gravity="center"
                            android:hint="Enter your phone number"
                            android:inputType="phone"
                            android:padding="@dimen/login_editText_padding"

                            android:textSize="@dimen/et_text_size" />
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        app:cardElevation="4dp">

                        <com.fishbowl.LoyaltyTabletApp.Utils.CustomEditText
                            android:id="@+id/password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/twosidenull"
                            android:gravity="center"
                            android:hint="Enter your password"
                            android:visibility="gone"
                            android:inputType="textPassword"
                            android:padding="@dimen/login_editText_padding"
                            android:textSize="@dimen/et_text_size" />
                    </android.support.v7.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/parent_key_layout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="55"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:weightSum="100">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="90">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:orientation="vertical"
                            android:weightSum="4">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:weightSum="3">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:padding="5dp">
                                    <android.support.v7.widget.CardView
                                        android:layout_width="fill_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center_horizontal"
                                        app:cardElevation="4dp">
                                    <Button
                                        android:id="@+id/bt1"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/two_side_round_corner_button"
                                        android:tag="1"
                                        android:text="1" />
                                    </android.support.v7.widget.CardView>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:padding="5dp">
                                    <android.support.v7.widget.CardView
                                        android:layout_width="fill_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center_horizontal"
                                        app:cardElevation="4dp">
                                    <Button
                                        android:id="@+id/bt2"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"

                                        android:layout_weight="1"
                                        android:background="@drawable/two_side_round_corner_button"


                                        android:text="2" />
                                    </android.support.v7.widget.CardView>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:padding="5dp">
                                    <android.support.v7.widget.CardView
                                        android:layout_width="fill_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center_horizontal"
                                        app:cardElevation="4dp">
                                    <Button
                                        android:id="@+id/bt3"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="@drawable/two_side_round_corner_button"

                                        android:text="3" /></android.support.v7.widget.CardView>
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:weightSum="3">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:padding="5dp">
                                    <android.support.v7.widget.CardView
                                        android:layout_width="fill_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center_horizontal"
                                        app:cardElevation="4dp">
                                    <Button
                                        android:id="@+id/bt4"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="@drawable/two_side_round_corner_button"
                                        android:text="4" /></android.support.v7.widget.CardView>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:padding="5dp">
                                    <android.support.v7.widget.CardView
                                        android:layout_width="fill_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center_horizontal"
                                        app:cardElevation="4dp">
                                    <Button
                                        android:id="@+id/bt5"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"

                                        android:layout_weight="1"
                                        android:background="@drawable/two_side_round_corner_button"
                                        android:text="5" /></android.support.v7.widget.CardView>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:padding="5dp">
                                    <android.support.v7.widget.CardView
                                        android:layout_width="fill_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center_horizontal"
                                        app:cardElevation="4dp">
                                    <Button
                                        android:id="@+id/bt6"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"

                                        android:layout_weight="1"
                                        android:background="@drawable/two_side_round_corner_button"
                                        android:text="6" /></android.support.v7.widget.CardView>
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:weightSum="3">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:padding="5dp">
                                    <android.support.v7.widget.CardView
                                        android:layout_width="fill_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center_horizontal"
                                        app:cardElevation="4dp">
                                    <Button
                                        android:id="@+id/bt7"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="@drawable/two_side_round_corner_button"
                                        android:text="7" /></android.support.v7.widget.CardView>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:padding="5dp">
                                    <android.support.v7.widget.CardView
                                        android:layout_width="fill_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center_horizontal"
                                        app:cardElevation="4dp">
                                    <Button
                                        android:id="@+id/bt8"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"

                                        android:layout_weight="1"
                                        android:background="@drawable/two_side_round_corner_button"
                                        android:text="8" /></android.support.v7.widget.CardView>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:padding="5dp">
                                    <android.support.v7.widget.CardView
                                        android:layout_width="fill_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center_horizontal"
                                        app:cardElevation="4dp">
                                    <Button
                                        android:id="@+id/bt9"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="@drawable/two_side_round_corner_button"
                                        android:text="9" /></android.support.v7.widget.CardView>
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:weightSum="3">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:padding="5dp">
                                    <android.support.v7.widget.CardView
                                        android:layout_width="fill_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center_horizontal"
                                        app:cardElevation="4dp">
                                    <Button
                                        android:id="@+id/bt_star"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="@drawable/two_side_round_corner_button"
                                        android:text="*" /></android.support.v7.widget.CardView>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:padding="5dp">
                                    <android.support.v7.widget.CardView
                                        android:layout_width="fill_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center_horizontal"
                                        app:cardElevation="4dp">
                                    <Button
                                        android:id="@+id/bt0"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:background="@drawable/two_side_round_corner_button"
                                        android:text="0" /></android.support.v7.widget.CardView>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:padding="5dp">
                                    <android.support.v7.widget.CardView
                                        android:layout_width="fill_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center_horizontal"
                                        app:cardElevation="4dp">
                                    <Button
                                        android:id="@+id/bt_back"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"

                                        android:background="@null"
                                        />
                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/two_side_round_corner_button">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:src="@drawable/delete"
                                            android:scaleType="fitXY"
                                            android:layout_centerInParent="true"
                                            />
                                    </RelativeLayout>
                                    </android.support.v7.widget.CardView>
                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/button_parent"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="bottom"
                    android:layout_weight="20">

                    <Button
                        android:id="@+id/bt_checkIn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/allside_round_cornner_buttton"
                        android:gravity="center"
                        android:text="Sign In"
                        android:textColor="@color/White" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_horizontal">

                        <TextView
                            android:id="@+id/txt"
                            style="@style/text.12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="3dp"
                            android:text="Not a user "
                            android:textColor="@color/Gray" />

                        <TextView
                            android:id="@+id/txt_signup"
                            style="@style/text.13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="3dp"
                            android:text="Sign up "
                            android:textColor="@color/black" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="15"
                android:background="#00ffffff" />
        </LinearLayout>

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/footer_image_url"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:visibility="gone"
            android:orientation="horizontal"
            android:scaleType="fitXY" />

    </LinearLayout>

</RelativeLayout>
