<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"


        >


        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/header_pading"
            android:paddingTop="@dimen/header_pading"
            android:paddingLeft="@dimen/contact_padding_left"
            >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/backre"
                android:layout_marginLeft="30dp"
                android:visibility="gone"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/registxt_name"
                style="@style/text.25"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Update Profile"
                android:textColor="@color/fbheadercolor"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/registxt1_name"
                style="@style/text.15"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/registxt_name"
                android:layout_marginTop="7dp"
                android:visibility="gone"
                android:text="Become a fishbowl member today!"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Us"
                android:textColor="@color/orignalText"
                android:textSize="@dimen/contact_text"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/Gray"></View>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingRight="@dimen/contact_padding_right"
        android:paddingLeft="@dimen/contact_padding_left">



        <LinearLayout
            android:id="@+id/linearregistration"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="100"
            android:orientation="vertical"

            android:weightSum="100"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="15"
                android:weightSum="2">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.3"
                    android:orientation="vertical"
                    android:gravity="left|center_vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/orignalText"
                        android:textSize="@dimen/contact_restText"
                        android:text="Contact us about anything related to our restaurants or services."/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/orignalText"
                        android:textSize="@dimen/contact_restText"
                        android:text="We'll do our best to get back to you as soon as possible"
                        android:id="@+id/textView3" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="30"
                android:weightSum="2"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"

                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:layout_weight="2">
                        <TextView
                            android:layout_gravity="left|center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/contact_restText"
                            android:textColor="@color/orignalText"
                            android:text="Message Subject"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:gravity="center_vertical">
                        <EditText
                            android:id="@+id/et_subject"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Write your subject here"
                            android:textColorHint="@color/textHint"
                            android:gravity="left|center_vertical"
                            android:textColor="@color/black"
                            android:padding="10dp"
                            android:textSize="@dimen/contact_restText"
                            android:inputType="text"
                            android:maxLines="1"
                            android:background="@drawable/twosidenull"

                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"

                    android:weightSum="10"
                    >
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Type of Message"
                            android:textSize="@dimen/contact_restText"
                            android:textColor="@color/orignalText"
                            android:layout_gravity="left|center_vertical"

                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:paddingRight="20dp"
                        >
                        <Spinner

                            android:id="@+id/spinner1"
                            style="@style/spinner_style"
                            android:layout_gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:textSize="@dimen/contact_restText"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"

                        android:gravity="center_vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Area"
                            android:textColor="@color/orignalText"
                            android:textSize="@dimen/contact_restText"
                            android:padding="5dp"

                            />
                        <Spinner

                            android:id="@+id/spinner2"

                            style="@style/spinner_style"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/contact_restText"
                            />

                        />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="55"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="10">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    >
                    <TextView
                        android:layout_gravity="left|top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/contact_restText"
                        android:textColor="@color/orignalText"
                        android:text="Message"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:weightSum="10"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="6"
                        >
                        <EditText
                            android:id="@+id/et_message"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Please write your message here"
                            android:gravity="left|top"
                            android:textColorHint="@color/textHint"
                            android:padding="7dp"
                            android:textSize="@dimen/contact_restText"
                            android:textColor="@color/black"
                            android:background="@drawable/twosidenull"

                            />
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="4"
                        android:paddingTop="15dp"
                        >
                        <Button
                            android:id="@+id/btn_submit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/redsurend"
                            android:text="Submit"
                            android:textColor="@color/white"
                            android:textSize="@dimen/contact_restText"
                            android:layout_alignParentRight="true"
                            />
                        <Button
                            android:id="@+id/btn_reset"
                            android:layout_marginRight="10dp"
                            android:layout_toLeftOf="@id/btn_submit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/Gray"
                            android:textSize="@dimen/contact_restText"
                            android:textColor="@color/white"
                            android:text="Reset"
                            />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>



        </LinearLayout>


    </LinearLayout>
</LinearLayout>