<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/contact_padding_left"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:gravity="right|center_vertical"
            android:weightSum="100">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="40">
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner1"
                    android:textSize="@dimen/contact_restText"
                    style="@style/spinner_style"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    ></Spinner></LinearLayout>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apply"
                android:padding="10dp"
                android:id="@+id/btn_apply"
                android:background="@color/redLoyalty"
                android:textColor="@color/white"/>

        </LinearLayout>
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/backre"
            android:layout_marginLeft="30dp"
            android:visibility="gone"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/registxt_name"
            style="@style/text.25"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Update Profile"
            android:textColor="@color/fbheadercolor"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/registxt1_name"
            style="@style/text.15"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/registxt_name"
            android:layout_marginTop="7dp"

            android:visibility="gone"
            android:text="Become a fishbowl member today!"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Activity"
            android:textColor="@color/orignalText"
            android:layout_centerVertical="true"
            android:textSize="@dimen/contact_text"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_below="@+id/one"
        android:weightSum="100"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">



        <LinearLayout
            android:id="@+id/linearregistration"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="100"
            android:orientation="vertical"
            android:weightSum="100">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_padding_left"
                android:weightSum="100"
                android:background="@color/strokeBorder">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:visibility="gone"
                    android:gravity="left|center_vertical"
                    android:layout_gravity="center_vertical"

                    android:paddingTop="@dimen/header_pading"
                    android:paddingBottom="@dimen/header_pading"
                    android:weightSum="20">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="10"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/orignalText"
                            android:textSize="@dimen/header_text"
                            /></LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="10"
                        android:layout_gravity="center_vertical"
                        android:gravity="left|center_vertical"
                        >
                        <ImageView
                            android:id="@+id/date_arrow1"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/activity_arrow_height"
                            android:src="@drawable/arrowdown"
                            /></LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:gravity="left|center_vertical"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/date_col"
                    android:paddingTop="@dimen/header_pading"
                    android:paddingBottom="@dimen/header_pading"
                    android:weightSum="20">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="15"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date of Transaction"
                            android:textColor="@color/orignalText"
                            android:textSize="@dimen/header_text" /></LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:layout_gravity="center_vertical"
                        android:gravity="left|center_vertical"
                        >
                        <ImageView
                            android:id="@+id/date_arrow"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/activity_arrow_height"
                            android:src="@drawable/arrowdown"

                            /></LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="25"
                    android:gravity="left|center_vertical"
                    android:id="@+id/activity_col"
                    android:paddingTop="@dimen/header_pading"
                    android:paddingBottom="@dimen/header_pading"
                    android:weightSum="20">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="15"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Type of Loyalty Transaction"
                            android:textColor="@color/orignalText"
                            android:textSize="@dimen/header_text" /></LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:visibility="gone"
                        android:layout_gravity="center_vertical"
                        android:gravity="left|center_vertical"
                        >
                        <ImageView
                            android:id="@+id/activity_arrow"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/activity_arrow_height"
                            android:src="@drawable/arrowdown"
                            /></LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="25"
                    android:gravity="left|center_vertical"
                    android:id="@+id/checknumber_col"
                    android:paddingTop="@dimen/header_pading"

                    android:paddingBottom="@dimen/header_pading"
                    android:weightSum="20">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="15"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Description"
                            android:textColor="@color/orignalText"
                            android:textSize="@dimen/header_text" /></LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:visibility="gone"
                        android:layout_gravity="center_vertical"
                        android:gravity="left|center_vertical"
                        >
                        <ImageView
                            android:id="@+id/checknumber_arrow"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/activity_arrow_height"
                            android:src="@drawable/arrowdown"
                            />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="15"
                    android:gravity="left|center_vertical"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/point_earn"
                    android:paddingTop="@dimen/header_pading"
                    android:paddingBottom="@dimen/header_pading"
                    android:weightSum="20">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="10"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/nullData4"
                            android:text="Point Earned"
                            android:textColor="@color/orignalText"
                            android:textSize="@dimen/header_text"
                            /></LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="10"
                        android:visibility="gone"
                        android:layout_gravity="center_vertical"
                        android:gravity="left|center_vertical"
                        >
                        <ImageView
                            android:id="@+id/point_arrow_earn"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/activity_arrow_height"
                            android:src="@drawable/arrowdown"
                            android:gravity="left|center_vertical"

                            /></LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="15"
                    android:gravity="left|center_vertical"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/point_col"

                    android:paddingTop="@dimen/header_pading"
                    android:paddingBottom="@dimen/header_pading"
                    android:weightSum="20">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="15"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/nullData3"
                            android:text="Points balance"
                            android:textColor="@color/orignalText"
                            android:textSize="@dimen/header_text"
                            /></LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:visibility="gone"
                        android:layout_gravity="center_vertical"
                        android:gravity="left|center_vertical"
                        >
                        <ImageView
                            android:id="@+id/point_arrow"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/activity_arrow_height"
                            android:src="@drawable/arrowdown"
                            /></LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ListView
                    android:id="@+id/lvCustomList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</RelativeLayout>